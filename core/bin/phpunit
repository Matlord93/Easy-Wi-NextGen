#!/usr/bin/env php
<?php

declare(strict_types=1);

if (!is_file(dirname(__DIR__) . '/vendor/autoload.php')) {
    echo "You must set up the project dependencies using `composer install`." . PHP_EOL;
    exit(1);
}

if (!is_file(dirname(__DIR__) . '/vendor/bin/simple-phpunit')) {
    echo "You must set up the project dependencies using `composer require --dev symfony/phpunit-bridge`." . PHP_EOL;
    exit(1);
}

require dirname(__DIR__) . '/vendor/bin/simple-phpunit';
