<div class="px-5 py-4 border-b border-slate-200">
    <h2 class="text-lg font-semibold">{{ form.action == 'create' ? 'Create DNS Record' : 'Edit DNS Record' }}</h2>
    <p class="text-sm text-slate-500">Define record type, content, and TTL for the zone.</p>
</div>
<div class="p-5 space-y-4">
    {% if form.errors is not empty %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold mb-1">Please fix the following:</p>
            <ul class="list-disc list-inside space-y-1">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <form
        class="space-y-4"
        hx-post="{{ form.action_url }}"
        hx-target="#dns-record-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase">Domain</label>
            <select name="domain_id" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                {% for domain in domains %}
                    <option value="{{ domain.id }}" {{ domain.id == form.domain_id ? 'selected' : '' }}>{{ domain.name }}</option>
                {% else %}
                    <option value="">No domains available</option>
                {% endfor %}
            </select>
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase">Name</label>
                <input name="name" value="{{ form.name }}" placeholder="@" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase">Type</label>
                <select name="type" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                    {% for type in recordTypes %}
                        <option value="{{ type }}" {{ type == form.type ? 'selected' : '' }}>{{ type }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase">Content</label>
            <input name="content" value="{{ form.content }}" placeholder="192.0.2.10" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase">TTL (seconds)</label>
                <input name="ttl" type="number" value="{{ form.ttl }}" min="60" max="86400" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase">Priority (MX)</label>
                <input name="priority" type="number" value="{{ form.priority }}" placeholder="10" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            </div>
        </div>
        <div class="flex items-center gap-3">
            <button type="submit" class="rounded-lg {{ form.submit_color }} px-4 py-2 text-sm font-semibold text-white">{{ form.submit_label }}</button>
            <button
                type="button"
                class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600"
                hx-get="/admin/dns/records/form"
                hx-target="#dns-record-form"
                hx-swap="outerHTML"
            >Reset</button>
        </div>
    </form>
</div>
