{% extends 'admin/base.html.twig' %}

{% block title %}TS6 Node anlegen · Easy-Wi NextGen{% endblock %}

{% block content %}
    <div class="ts6-page">
        <div class="ts6-header">
            <div>
                <h1>TS6 Node anlegen</h1>
                <p>Verbinde einen Agenten für TeamSpeak 6 Installationen.</p>
            </div>
        </div>

        <div class="ts6-card">
            <p class="ts6-muted">Trage die Agent-URL, das API-Token und den Installationspfad des Agenten ein.</p>
            {{ form_start(form, { attr: { class: 'ts6-form' } }) }}
                <div class="ts6-grid">
                    {{ form_row(form.name) }}
                    {{ form_row(form.agentNodeId, { label: 'Agent Node' }) }}
                    <div class="ts6-muted">Optional: Daten aus einer registrierten Node übernehmen.</div>
                    {{ form_row(form.agentBaseUrl, { label: 'Agent Base URL' }) }}
                    {{ form_row(form.agentApiToken, { label: 'Agent API Token' }) }}
                    {{ form_row(form.osType) }}
                    {{ form_row(form.downloadUrl) }}
                    <div class="ts6-muted">Direkter Link zum TeamSpeak 6 Server-Archiv für die Installation.</div>
                    {{ form_row(form.installPath, { label: 'Installationspfad' }) }}
                    {{ form_row(form.instanceName) }}
                    {{ form_row(form.serviceName) }}
                    {{ form_row(form.queryBindIp) }}
                    {{ form_row(form.queryHttpsPort) }}
                </div>
                <div class="ts6-actions">
                    <button class="ts6-button" type="submit">Node speichern</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
