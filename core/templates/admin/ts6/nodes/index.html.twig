{% extends 'admin/base.html.twig' %}

{% block title %}TS6 Nodes · Easy-Wi NextGen{% endblock %}

{% block content %}
    <div class="ts6-page">
        <div class="ts6-header">
            <div>
                <h1>TeamSpeak 6 Nodes</h1>
                <p>Verwalte TS6 Agent-Verbindungen und Instanzen.</p>
            </div>
            <div class="ts6-actions">
                <a class="ts6-button" href="/admin/ts6/nodes/new">Node hinzufügen</a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="ts6-alert ts6-alert-success">{{ message }}</div>
        {% endfor %}

        <div class="ts6-card">
            <table class="ts6-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Agent</th>
                        <th>Version</th>
                        <th>Aktualisiert</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for node in nodes %}
                        <tr>
                            <td>
                                <strong>{{ node.name }}</strong>
                                <div class="ts6-muted">#{{ node.id }}</div>
                            </td>
                            <td>
                                <span class="ts6-pill">{{ node.installStatus }}</span>
                            </td>
                            <td>{{ node.agentBaseUrl }}</td>
                            <td>{{ node.installedVersion ?? '—' }}</td>
                            <td>{{ node.updatedAt|date('Y-m-d H:i') }}</td>
                            <td class="ts6-align-right">
                                <a class="ts6-link" href="/admin/ts6/nodes/{{ node.id }}">Details</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="ts6-empty">Keine TS6 Nodes vorhanden.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
