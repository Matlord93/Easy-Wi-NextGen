{% extends 'admin/base.html.twig' %}


{% block content %}
    <div class="flex flex-col gap-6">
        <div class="rounded-2xl border border-slate-200 bg-white p-6">
            <div class="flex flex-wrap items-center gap-3">
                <h1 class="text-2xl font-semibold text-slate-900">{{ t('admin_ts6_heading', page_locale()) }}</h1>
                <span class="inline-flex items-center rounded-full bg-amber-100 px-3 py-1 text-xs font-semibold text-amber-700">{{ t('admin_ts6_badge_planned', page_locale()) }}</span>
                <span class="inline-flex items-center rounded-full bg-purple-100 px-3 py-1 text-xs font-semibold text-purple-700">{{ t('admin_ts6_badge_experimental', page_locale()) }}</span>
            </div>
            <p class="mt-2 text-sm text-slate-700">{{ t('admin_ts6_intro', page_locale()) }}</p>
            {% if notice %}
                <div class="mt-4 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">{{ t(notice, page_locale()) }}</div>
            {% endif %}
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white">
            <div class="border-b border-slate-200 px-6 py-4">
                <h2 class="text-lg font-semibold text-slate-900">{{ t('admin_ts6_instances_title', page_locale()) }}</h2>
                <p class="mt-1 text-sm text-slate-700">{{ t('admin_ts6_instances_intro', page_locale()) }}</p>
            </div>
            <form class="grid gap-4 border-b border-slate-200 px-6 py-4 lg:grid-cols-4" method="post" action="/admin/ts6/create">
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-500">{{ t('admin_ts6_customer_label', page_locale()) }}</label>
                    <select name="customer_id" class="mt-1 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm">
                        <option value="">{{ t('admin_ts6_customer_select', page_locale()) }}</option>
                        {% for customer in customers %}
                            <option value="{{ customer.id }}">{{ customer.email }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-500">{{ t('admin_ts6_node_label', page_locale()) }}</label>
                    <select name="node_id" class="mt-1 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm">
                        <option value="">{{ t('admin_ts6_node_select', page_locale()) }}</option>
                        {% for node in nodes_for_form %}
                            <option value="{{ node.id }}">{{ node.name ?? node.id }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-500">{{ t('admin_ts6_instance_name_label', page_locale()) }}</label>
                    <input name="name" class="mt-1 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm" placeholder="TS6 Node">
                </div>
                <div class="flex items-end">
                    <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500">{{ t('admin_ts6_create_action', page_locale()) }}</button>
                </div>
            </form>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200 text-sm">
                    <thead class="bg-slate-50 text-xs font-semibold uppercase text-slate-600">
                        <tr>
                            <th class="px-6 py-3 text-left">{{ t('admin_ts6_table_instance', page_locale()) }}</th>
                            <th class="px-6 py-3 text-left">{{ t('admin_ts6_table_customer', page_locale()) }}</th>
                            <th class="px-6 py-3 text-left">{{ t('admin_ts6_table_node', page_locale()) }}</th>
                            <th class="px-6 py-3 text-left">{{ t('admin_ts6_table_status', page_locale()) }}</th>
                            <th class="px-6 py-3 text-left">{{ t('admin_ts6_table_updated', page_locale()) }}</th>
                            <th class="px-6 py-3 text-left">{{ t('admin_ts6_table_actions', page_locale()) }}</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        {% if instances is not empty %}
                            {% set statusClasses = {
                                planned: 'bg-amber-100 text-amber-700',
                                provisioning: 'bg-sky-100 text-sky-700',
                                running: 'bg-emerald-100 text-emerald-700',
                                stopped: 'bg-slate-100 text-slate-600',
                                error: 'bg-rose-100 text-rose-700'
                            } %}
                            {% for instance in instances %}
                                <tr>
                                    <td class="px-6 py-4">
                                        <div class="font-semibold text-slate-900">{{ instance.name }}</div>
                                        <div class="text-xs text-slate-500">#{{ instance.id }}</div>
                                    </td>
                                    <td class="px-6 py-4 text-slate-700">
                                        <div>{{ instance.customer.email }}</div>
                                        <div class="text-xs text-slate-500">#{{ instance.customer.id }}</div>
                                    </td>
                                    <td class="px-6 py-4 text-slate-700">
                                        <div>{{ instance.node.name }}</div>
                                        <div class="text-xs text-slate-500">{{ instance.node.id }}</div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ statusClasses[instance.status] ?? 'bg-slate-100 text-slate-600' }}">
                                            {{ t('admin_ts6_status_' ~ instance.status, page_locale()) }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-slate-600">{{ instance.updated_at|date('Y-m-d H:i') }}</td>
                                    <td class="px-6 py-4">
                                        <div class="flex flex-wrap gap-2">
                                            <form method="post" action="/admin/ts6/{{ instance.id }}/action">
                                                <input type="hidden" name="action" value="start">
                                                <button class="rounded-lg border border-slate-200 px-3 py-1 text-xs">{{ t('admin_ts6_action_start', page_locale()) }}</button>
                                            </form>
                                            <form method="post" action="/admin/ts6/{{ instance.id }}/action">
                                                <input type="hidden" name="action" value="stop">
                                                <button class="rounded-lg border border-slate-200 px-3 py-1 text-xs">{{ t('admin_ts6_action_stop', page_locale()) }}</button>
                                            </form>
                                            <form method="post" action="/admin/ts6/{{ instance.id }}/action">
                                                <input type="hidden" name="action" value="restart">
                                                <button class="rounded-lg border border-slate-200 px-3 py-1 text-xs">{{ t('admin_ts6_action_restart', page_locale()) }}</button>
                                            </form>
                                            <form method="post" action="/admin/ts6/{{ instance.id }}/action">
                                                <input type="hidden" name="action" value="update">
                                                <button class="rounded-lg border border-slate-200 px-3 py-1 text-xs">{{ t('admin_ts6_action_update', page_locale()) }}</button>
                                            </form>
                                        </div>
                                        <div class="mt-3 flex flex-wrap items-center gap-2">
                                            <form method="post" action="/admin/ts6/{{ instance.id }}/action" class="flex flex-wrap items-center gap-2">
                                                <input type="hidden" name="action" value="backup">
                                                <input name="backup_path" class="w-44 rounded-lg border border-slate-200 px-2 py-1 text-xs" placeholder="{{ t('admin_ts6_backup_placeholder', page_locale()) }}">
                                                <button class="rounded-lg border border-slate-200 px-3 py-1 text-xs">{{ t('admin_ts6_action_backup', page_locale()) }}</button>
                                            </form>
                                            <form method="post" action="/admin/ts6/{{ instance.id }}/action" class="flex flex-wrap items-center gap-2">
                                                <input type="hidden" name="action" value="restore">
                                                <input name="restore_path" class="w-44 rounded-lg border border-slate-200 px-2 py-1 text-xs" placeholder="{{ t('admin_ts6_restore_placeholder', page_locale()) }}">
                                                <button class="rounded-lg border border-slate-200 px-3 py-1 text-xs">{{ t('admin_ts6_action_restore', page_locale()) }}</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td class="px-6 py-6 text-center text-sm text-slate-700" colspan="6">{{ t('admin_ts6_instances_empty', page_locale()) }}</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="grid gap-6 lg:grid-cols-2">
            <div class="rounded-2xl border border-slate-200 bg-white p-6">
                <h2 class="text-lg font-semibold text-slate-900">{{ t('admin_ts6_capabilities_title', page_locale()) }}</h2>
                <p class="mt-2 text-sm text-slate-700">{{ t('admin_ts6_capabilities_intro', page_locale()) }}</p>
                <div class="mt-4 overflow-hidden rounded-xl border border-slate-200">
                    <table class="min-w-full divide-y divide-slate-200 text-sm">
                        <thead class="bg-slate-50 text-xs uppercase text-slate-500">
                            <tr>
                                <th class="px-6 py-3 text-left font-semibold">{{ t('admin_ts6_table_node', page_locale()) }}</th>
                                <th class="px-6 py-3 text-left font-semibold">{{ t('admin_ts6_table_status', page_locale()) }}</th>
                                <th class="px-6 py-3 text-left font-semibold">{{ t('admin_ts6_table_capability', page_locale()) }}</th>
                                <th class="px-6 py-3 text-left font-semibold">{{ t('admin_ts6_table_last_seen', page_locale()) }}</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100 bg-white">
                            {% for node in nodes %}
                                <tr>
                                    <td class="px-6 py-4 text-slate-900">
                                        <div class="font-medium">{{ node.name ?? node.id }}</div>
                                        <div class="text-xs text-slate-500">{{ node.id }}</div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ node.status }}</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        {% if node.ts6_supported %}
                                            <span class="inline-flex items-center rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">{{ t('admin_ts6_capability_supported', page_locale()) }}</span>
                                        {% else %}
                                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ t('admin_ts6_capability_missing', page_locale()) }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 text-slate-600">
                                        {{ node.last_seen_at ? node.last_seen_at|date('Y-m-d H:i') : 'â€”' }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="px-6 py-6 text-center text-sm text-slate-700" colspan="4">{{ t('admin_ts6_nodes_empty', page_locale()) }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="rounded-2xl border border-slate-200 bg-white p-6">
                <h2 class="text-lg font-semibold text-slate-900">{{ t('admin_ts6_planned_title', page_locale()) }}</h2>
                <p class="mt-2 text-sm text-slate-700">{{ t('admin_ts6_planned_intro', page_locale()) }}</p>
                <ul class="mt-4 space-y-2 text-sm text-slate-700">
                    <li class="flex items-start gap-2">
                        <span class="mt-1 h-2 w-2 rounded-full bg-indigo-500"></span>
                        <span>{{ t('admin_ts6_planned_item_physical', page_locale()) }}</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="mt-1 h-2 w-2 rounded-full bg-indigo-500"></span>
                        <span>{{ t('admin_ts6_planned_item_virtual', page_locale()) }}</span>
                    </li>
                </ul>
                {% if virtual_servers_enabled %}
                    <div class="mt-6 rounded-xl border border-dashed border-purple-200 bg-purple-50 px-4 py-3 text-sm text-purple-800">
                        <div class="font-semibold">{{ t('admin_ts6_virtual_flag_title', page_locale()) }}</div>
                        <p class="mt-1">{{ t('admin_ts6_virtual_flag_body', page_locale()) }}</p>
                    </div>
                {% else %}
                    <div class="mt-6 rounded-xl border border-dashed border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-700">
                        <div class="font-semibold">{{ t('admin_ts6_virtual_disabled_title', page_locale()) }}</div>
                        <p class="mt-1">{{ t('admin_ts6_virtual_disabled_body', page_locale()) }}</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
