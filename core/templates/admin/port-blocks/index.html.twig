{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_port_blocks_title', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold">{{ t('admin_port_blocks_title', page_locale()) }}</h1>
            <p class="text-sm text-slate-700">{{ t('admin_port_blocks_intro', page_locale()) }}</p>
        </div>
    </div>

    {% if notice %}
        <div class="mt-4 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">{{ notice }}</div>
    {% endif %}
    {% if error %}
        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">{{ error }}</div>
    {% endif %}

    <div class="mt-6 grid gap-6 lg:grid-cols-2">
        <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
            <h2 class="text-sm font-semibold uppercase text-slate-700">{{ t('admin_port_blocks_create_title', page_locale()) }}</h2>
            <form class="mt-4 space-y-4" method="post" action="/admin/port-blocks">
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-700">{{ t('admin_port_blocks_pool_label', page_locale()) }}</label>
                    <select name="pool_id" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        <option value="">{{ t('admin_port_blocks_pool_placeholder', page_locale()) }}</option>
                        {% for pool in portPools %}
                            <option value="{{ pool.id }}">{{ pool.name }} · {{ pool.node.name ?? pool.node.id }} ({{ pool.startPort }}-{{ pool.endPort }})</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-700">{{ t('admin_port_blocks_customer_label', page_locale()) }}</label>
                    <select name="customer_id" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        <option value="">{{ t('admin_port_blocks_customer_placeholder', page_locale()) }}</option>
                        {% for customer in customers %}
                            <option value="{{ customer.id }}">{{ customer.email }} ({{ customer.id }})</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-700">{{ t('admin_port_blocks_size_label', page_locale()) }}</label>
                    <input type="number" min="1" name="size" value="5" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                    <p class="mt-1 text-xs text-slate-600">{{ t('admin_port_blocks_size_hint', page_locale()) }}</p>
                </div>
                <button type="submit" class="rounded-lg bg-slate-900 px-4 py-2 text-xs font-semibold text-white transition hover:bg-slate-800">
                    {{ t('admin_port_blocks_create_action', page_locale()) }}
                </button>
            </form>
        </div>

        <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
            <h2 class="text-sm font-semibold uppercase text-slate-700">{{ t('admin_port_blocks_help_title', page_locale()) }}</h2>
            <ul class="mt-3 space-y-2 text-sm text-slate-600">
                <li>{{ t('admin_port_blocks_help_assignment', page_locale()) }}</li>
                <li>{{ t('admin_port_blocks_help_order', page_locale()) }}</li>
                <li>{{ t('admin_port_blocks_help_instance', page_locale()) }}</li>
            </ul>
        </div>
    </div>

    <div class="mt-8 rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="flex items-center justify-between border-b border-slate-200 px-6 py-4">
            <div>
                <h2 class="text-sm font-semibold uppercase text-slate-700">{{ t('admin_port_blocks_list_title', page_locale()) }}</h2>
                <p class="text-xs text-slate-600">{{ t('admin_port_blocks_list_intro', page_locale()) }}</p>
            </div>
            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ portBlocks|length }}</span>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
                <thead class="bg-slate-50 text-xs uppercase text-slate-500">
                    <tr>
                        <th class="px-6 py-3">{{ t('admin_label_id', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_blocks_pool_label', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_blocks_customer_label', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_blocks_range_label', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_blocks_instance_label', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_blocks_assigned_label', page_locale()) }}</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200">
                    {% for block in portBlocks %}
                        <tr>
                            <td class="px-6 py-3 font-mono text-xs text-slate-700">{{ block.id }}</td>
                            <td class="px-6 py-3">
                                <div class="text-sm font-semibold text-slate-900">{{ block.pool.name }}</div>
                                <div class="text-xs text-slate-600">{{ block.pool.node }}</div>
                            </td>
                            <td class="px-6 py-3">
                                <div class="text-sm font-semibold text-slate-900">{{ block.customer.email }}</div>
                                <div class="text-xs text-slate-600">#{{ block.customer.id }}</div>
                            </td>
                            <td class="px-6 py-3">
                                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">{{ block.start_port }}-{{ block.end_port }}</span>
                            </td>
                            <td class="px-6 py-3 text-sm text-slate-700">{{ block.instance_id ?? '—' }}</td>
                            <td class="px-6 py-3 text-xs text-slate-600">
                                {{ block.assigned_at ? block.assigned_at|date('Y-m-d H:i') : '—' }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-6 text-center text-sm text-slate-600">{{ t('admin_port_blocks_empty', page_locale()) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
