{% set statusStyles = {
    'operational': 'bg-emerald-100 text-emerald-700',
    'degraded': 'bg-amber-100 text-amber-700',
    'outage': 'bg-rose-100 text-rose-700',
    'maintenance': 'bg-indigo-100 text-indigo-700'
} %}

<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">Name</th>
                <th class="px-5 py-3 text-left font-semibold">Type</th>
                <th class="px-5 py-3 text-left font-semibold">Target</th>
                <th class="px-5 py-3 text-left font-semibold">Status</th>
                <th class="px-5 py-3 text-left font-semibold">Visibility</th>
                <th class="px-5 py-3 text-left font-semibold">Last Check</th>
                <th class="px-5 py-3 text-right font-semibold">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for component in components %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">{{ component.name }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ component.type|capitalize }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ component.target_ref }}</td>
                    <td class="px-5 py-4">
                        <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ statusStyles[component.status]|default('bg-slate-100 text-slate-600') }}">
                            {{ component.status|capitalize }}
                        </span>
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if component.visible_public %}
                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">Public</span>
                        {% else %}
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Hidden</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-500">{{ component.last_checked_at ? component.last_checked_at|date('Y-m-d H:i') : 'â€”' }}</td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            hx-get="/admin/status/components/{{ component.id }}/edit"
                            hx-target="#status-component-form"
                            hx-swap="outerHTML"
                        >
                            Edit
                        </button>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/status/components/{{ component.id }}/delete"
                            hx-confirm="Delete {{ component.name }}?"
                        >
                            Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="px-5 py-6 text-center text-sm text-slate-500">No components yet. Add the first component for the status page.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
