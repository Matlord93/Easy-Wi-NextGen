<div class="p-6">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-lg font-semibold">{{ form.action == 'create' ? 'New Component' : 'Edit Component' }}</h2>
            <p class="text-sm text-slate-500">Define what should be visible on the public status page.</p>
        </div>
    </div>

    {% if form.errors is not empty %}
        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <ul class="list-disc space-y-1 pl-5">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form class="mt-6 space-y-4" hx-post="{{ form.action_url }}" hx-target="#status-component-form" hx-swap="outerHTML">
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Name</label>
            <input type="text" name="name" value="{{ form.name }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" placeholder="Public status name">
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">Type</label>
                <select name="type" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
                    {% for type in types %}
                        <option value="{{ type }}" {{ type == form.type ? 'selected' : '' }}>{{ type|capitalize }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">Status</label>
                <select name="status" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
                    {% for status in statuses %}
                        <option value="{{ status }}" {{ status == form.status ? 'selected' : '' }}>{{ status|capitalize }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Target Reference</label>
            <input type="text" name="target_ref" value="{{ form.target_ref }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" placeholder="Node ID, service key, or URL">
        </div>
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Last Checked</label>
            <input type="datetime-local" name="last_checked_at" value="{{ form.last_checked_at }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
        </div>
        <label class="flex items-center gap-2 text-sm text-slate-600">
            <input type="checkbox" name="visible_public" class="h-4 w-4 rounded border-slate-300" {{ form.visible_public ? 'checked' : '' }}>
            Visible on public status page
        </label>
        <button type="submit" class="w-full rounded-lg px-4 py-2 text-sm font-semibold text-slate-900 text-white {{ form.submit_color }}">
            {{ form.submit_label }}
        </button>
    </form>
</div>
