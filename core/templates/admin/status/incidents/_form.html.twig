<div class="p-6">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-lg font-semibold">{{ form.action == 'create' ? 'New Incident' : 'Edit Incident' }}</h2>
            <p class="text-sm text-slate-500">Keep customers updated on active incidents.</p>
        </div>
    </div>

    {% if form.errors is not empty %}
        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <ul class="list-disc space-y-1 pl-5">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form class="mt-6 space-y-4" hx-post="{{ form.action_url }}" hx-target="#incident-form" hx-swap="outerHTML">
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Title</label>
            <input type="text" name="title" value="{{ form.title }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" placeholder="Incident title">
        </div>
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Summary</label>
            <textarea name="message" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" rows="3" placeholder="Optional summary">{{ form.message }}</textarea>
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">Status</label>
                <select name="status" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
                    {% for status in statuses %}
                        <option value="{{ status }}" {{ status == form.status ? 'selected' : '' }}>{{ status|capitalize }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">Visible Publicly</label>
                <div class="mt-2">
                    <label class="flex items-center gap-2 text-sm text-slate-600">
                        <input type="checkbox" name="visible_public" class="h-4 w-4 rounded border-slate-300" {{ form.visible_public ? 'checked' : '' }}>
                        Publish on status page
                    </label>
                </div>
            </div>
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">Started At</label>
                <input type="datetime-local" name="started_at" value="{{ form.started_at }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
            </div>
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">Resolved At</label>
                <input type="datetime-local" name="resolved_at" value="{{ form.resolved_at }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
            </div>
        </div>
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Affected Components</label>
            <div class="mt-2 grid gap-2">
                {% for component in components %}
                    <label class="flex items-center gap-2 text-sm text-slate-600">
                        <input type="checkbox" name="affected_components[]" value="{{ component.id }}" class="h-4 w-4 rounded border-slate-300" {{ component.id in form.affected_component_ids ? 'checked' : '' }}>
                        {{ component.name }}
                    </label>
                {% else %}
                    <p class="text-xs text-slate-400">No status components available.</p>
                {% endfor %}
            </div>
        </div>
        <button type="submit" class="w-full rounded-lg px-4 py-2 text-sm font-semibold text-white {{ form.submit_color }}">
            {{ form.submit_label }}
        </button>
    </form>
</div>
