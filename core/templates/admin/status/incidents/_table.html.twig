{% set statusStyles = {
    'investigating': 'bg-amber-100 text-amber-700',
    'identified': 'bg-indigo-100 text-indigo-700',
    'monitoring': 'bg-sky-100 text-sky-700',
    'resolved': 'bg-emerald-100 text-emerald-700'
} %}

<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-700 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">Title</th>
                <th class="px-5 py-3 text-left font-semibold">Status</th>
                <th class="px-5 py-3 text-left font-semibold">Components</th>
                <th class="px-5 py-3 text-left font-semibold">Visibility</th>
                <th class="px-5 py-3 text-left font-semibold">Started</th>
                <th class="px-5 py-3 text-right font-semibold">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for incident in incidents %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">
                        {{ incident.title }}
                        {% if incident.message %}
                            <p class="mt-1 text-xs text-slate-700">{{ incident.message }}</p>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4">
                        <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ statusStyles[incident.status]|default('bg-slate-100 text-slate-600') }}">
                            {{ incident.status|capitalize }}
                        </span>
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if incident.components is not empty %}
                            <ul class="space-y-1">
                                {% for component in incident.components %}
                                    <li class="text-xs">{{ component.name }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <span class="text-xs text-slate-600">None</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if incident.visible_public %}
                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">Public</span>
                        {% else %}
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Hidden</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-700">{{ incident.started_at|date('Y-m-d H:i') }}</td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <a href="/admin/status/incidents/{{ incident.id }}" class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700">Updates</a>
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            hx-get="/admin/status/incidents/{{ incident.id }}/edit"
                            hx-target="#incident-form"
                            hx-swap="outerHTML"
                        >
                            Edit
                        </button>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/status/incidents/{{ incident.id }}/delete"
                            hx-confirm="Delete {{ incident.title }}?"
                        >
                            Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-6 text-center text-sm text-slate-700">No incidents yet.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
