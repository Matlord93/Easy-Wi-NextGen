<div class="p-6">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-lg font-semibold">Post Update</h2>
            <p class="text-sm text-slate-500">Share progress and status changes.</p>
        </div>
    </div>

    {% if updateForm.errors is not empty %}
        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <ul class="list-disc space-y-1 pl-5">
                {% for error in updateForm.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form class="mt-6 space-y-4" hx-post="{{ updateForm.action_url }}" hx-target="#incident-update-form" hx-swap="innerHTML">
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Status</label>
            <select name="status" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
                {% for status in statuses %}
                    <option value="{{ status }}" {{ status == updateForm.status ? 'selected' : '' }}>{{ status|capitalize }}</option>
                {% endfor %}
            </select>
        </div>
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">Message</label>
            <textarea name="message" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" rows="4" placeholder="Describe the update">{{ updateForm.message }}</textarea>
        </div>
        <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-slate-900 text-white">Post Update</button>
    </form>
</div>
