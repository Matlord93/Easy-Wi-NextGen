<div class="p-6">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-lg font-semibold">{{ form.action == 'create' ? 'New Window' : 'Edit Window' }}</h2>
            <p class="text-sm text-slate-700">Schedule planned work and let customers know.</p>
        </div>
    </div>

    {% if form.errors is not empty %}
        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <ul class="list-disc space-y-1 pl-5">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form class="mt-6 space-y-4" hx-post="{{ form.action_url }}" hx-target="#maintenance-window-form" hx-swap="outerHTML">
        <div>
            <label class="text-xs font-semibold uppercase text-slate-700">Title</label>
            <input type="text" name="title" value="{{ form.title }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" placeholder="Planned maintenance">
        </div>
        <div>
            <label class="text-xs font-semibold uppercase text-slate-700">Message</label>
            <textarea name="message" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" rows="3" placeholder="Optional details">{{ form.message }}</textarea>
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
            <div>
                <label class="text-xs font-semibold uppercase text-slate-700">Start</label>
                <input type="datetime-local" name="start_at" value="{{ form.start_at }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
            </div>
            <div>
                <label class="text-xs font-semibold uppercase text-slate-700">End</label>
                <input type="datetime-local" name="end_at" value="{{ form.end_at }}" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm">
            </div>
        </div>
        <div>
            <label class="text-xs font-semibold uppercase text-slate-700">Affected Components</label>
            <div class="mt-2 grid gap-2">
                {% for component in components %}
                    <label class="flex items-center gap-2 text-sm text-slate-600">
                        <input type="checkbox" name="affected_components[]" value="{{ component.id }}" class="h-4 w-4 rounded border-slate-300" {{ component.id in form.affected_component_ids ? 'checked' : '' }}>
                        {{ component.name }}
                    </label>
                {% else %}
                    <p class="text-xs text-slate-600">No status components available.</p>
                {% endfor %}
            </div>
        </div>
        <label class="flex items-center gap-2 text-sm text-slate-600">
            <input type="checkbox" name="visible_public" class="h-4 w-4 rounded border-slate-300" {{ form.visible_public ? 'checked' : '' }}>
            Visible on public status page
        </label>
        <button type="submit" class="w-full rounded-lg px-4 py-2 text-sm font-semibold text-slate-900 text-white {{ form.submit_color }}">
            {{ form.submit_label }}
        </button>
    </form>
</div>
