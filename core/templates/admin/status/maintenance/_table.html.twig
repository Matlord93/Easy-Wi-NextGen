<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">Title</th>
                <th class="px-5 py-3 text-left font-semibold">Window</th>
                <th class="px-5 py-3 text-left font-semibold">Components</th>
                <th class="px-5 py-3 text-left font-semibold">Visibility</th>
                <th class="px-5 py-3 text-right font-semibold">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for window in windows %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">
                        {{ window.title }}
                        {% if window.message %}
                            <p class="mt-1 text-xs text-slate-500">{{ window.message }}</p>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        <div class="text-sm font-medium">{{ window.start_at|date('Y-m-d H:i') }}</div>
                        <div class="text-xs text-slate-500">to {{ window.end_at|date('Y-m-d H:i') }}</div>
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if window.components is not empty %}
                            <ul class="space-y-1">
                                {% for component in window.components %}
                                    <li class="text-xs">{{ component.name }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <span class="text-xs text-slate-400">None</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if window.visible_public %}
                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">Public</span>
                        {% else %}
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Hidden</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            hx-get="/admin/status/maintenance/{{ window.id }}/edit"
                            hx-target="#maintenance-window-form"
                            hx-swap="outerHTML"
                        >
                            Edit
                        </button>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/status/maintenance/{{ window.id }}/delete"
                            hx-confirm="Delete {{ window.title }}?"
                        >
                            Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-5 py-6 text-center text-sm text-slate-500">No maintenance windows yet.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
