<div id="notification-{{ notification.id }}" class="rounded-xl border border-slate-200 bg-white px-5 py-4">
    <div class="flex flex-wrap items-center justify-between gap-3">
        <div>
            <p class="text-sm font-semibold text-slate-900">{{ notification.title }}</p>
            <p class="text-xs text-slate-700">{{ notification.body }}</p>
        </div>
        <div class="flex items-center gap-3">
            {% if notification.action_url %}
                <a href="{{ notification.action_url }}" class="text-xs font-semibold text-indigo-600">{{ t('admin_notifications_open', page_locale()) }}</a>
            {% endif %}
            <span class="rounded-full border px-3 py-1 text-xs font-semibold {{ notification.read_at ? 'border-slate-200 text-slate-700' : 'border-indigo-200 bg-indigo-50 text-indigo-700' }}">
                {{ notification.read_at ? t('read', page_locale()) : t('unread', page_locale()) }}
            </span>
            {% if not notification.read_at %}
                <button
                    class="rounded-lg border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600"
                    hx-post="/admin/notifications/{{ notification.id }}/read"
                    hx-target="#notification-{{ notification.id }}"
                    hx-swap="outerHTML"
                >{{ t('mark_read', page_locale()) }}</button>
            {% endif %}
        </div>
    </div>
    <div class="mt-2 text-xs text-slate-600">{{ notification.created_at|date('Y-m-d H:i') }}</div>
</div>
