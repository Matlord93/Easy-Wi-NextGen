{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold">Admin Dashboard</h1>
            <p class="text-sm text-slate-500">Platform pulse, recent work, and node readiness at a glance.</p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <button class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700">Invite Operator</button>
            <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white">Create Job</button>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-4">
        <div class="rounded-xl border border-slate-200 bg-white p-4">
            <p class="text-xs uppercase text-slate-500">Total Jobs</p>
            <p class="mt-3 text-2xl font-semibold">{{ jobSummary.total }}</p>
            <p class="mt-2 text-xs text-slate-400">Latest 8 workloads in queue.</p>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4">
            <p class="text-xs uppercase text-slate-500">Running Jobs</p>
            <p class="mt-3 text-2xl font-semibold text-indigo-600">{{ jobSummary.running }}</p>
            <p class="mt-2 text-xs text-slate-400">{{ jobSummary.queued }} queued · {{ jobSummary.failed }} failed</p>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4">
            <p class="text-xs uppercase text-slate-500">Agents Online</p>
            <p class="mt-3 text-2xl font-semibold text-emerald-600">{{ agentSummary.online }}</p>
            <p class="mt-2 text-xs text-slate-400">{{ agentSummary.degraded }} degraded · {{ agentSummary.offline }} offline</p>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4">
            <p class="text-xs uppercase text-slate-500">Total Agents</p>
            <p class="mt-3 text-2xl font-semibold">{{ agentSummary.total }}</p>
            <p class="mt-2 text-xs text-slate-400">Heartbeat within last 5 minutes.</p>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
        <div class="rounded-xl border border-slate-200 bg-white lg:col-span-2">
            <div class="flex items-center justify-between border-b border-slate-200 px-5 py-4">
                <div>
                    <h2 class="text-lg font-semibold">Recent Jobs</h2>
                    <p class="text-sm text-slate-500">Latest agent workloads and dispatch status.</p>
                </div>
                <button
                    class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
                    hx-get="/admin/jobs/table"
                    hx-target="#jobs-table"
                    hx-swap="outerHTML"
                >Refresh</button>
            </div>
            {% include 'admin/jobs/_table.html.twig' with { jobs: jobs } %}
        </div>

        <div class="rounded-xl border border-slate-200 bg-white">
            <div class="border-b border-slate-200 px-5 py-4">
                <h2 class="text-lg font-semibold">Node Status</h2>
                <p class="text-sm text-slate-500">Agent heartbeats and resource signals.</p>
            </div>
            <div class="divide-y divide-slate-200">
                {% set statusStyles = {
                    'online': 'bg-emerald-50 text-emerald-700 border-emerald-200',
                    'degraded': 'bg-amber-50 text-amber-700 border-amber-200',
                    'offline': 'bg-rose-50 text-rose-700 border-rose-200'
                } %}
                {% for node in nodes %}
                    {% set style = statusStyles[node.status] ?? 'bg-slate-100 text-slate-600 border-slate-200' %}
                    <div class="px-5 py-4">
                        <div class="flex items-start justify-between gap-4">
                            <div>
                                <p class="text-sm font-semibold text-slate-900">{{ node.name }}</p>
                                <p class="text-xs text-slate-400">ID {{ node.id }}</p>
                            </div>
                            <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ style }}">
                                {{ node.status|title }}
                            </span>
                        </div>
                        <div class="mt-3 grid grid-cols-3 gap-3 text-xs text-slate-500">
                            <div>
                                <p class="font-medium text-slate-700">{{ node.cpu ?? '—' }}</p>
                                <p>CPU</p>
                            </div>
                            <div>
                                <p class="font-medium text-slate-700">{{ node.memory ?? '—' }}</p>
                                <p>Memory</p>
                            </div>
                            <div>
                                <p class="font-medium text-slate-700">{{ node.queue ?? '—' }}</p>
                                <p>Queue</p>
                            </div>
                        </div>
                        <div class="mt-3 text-xs text-slate-400">
                            {% if node.lastHeartbeatAt %}
                                Seen {{ node.lastHeartbeatAt|date('Y-m-d H:i') }} · {{ node.lastHeartbeatIp ?? 'IP n/a' }} · {{ node.lastHeartbeatVersion ?? 'version n/a' }}
                            {% else %}
                                No heartbeat reported yet.
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <div class="px-5 py-8 text-center text-sm text-slate-400">No agents registered yet.</div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
