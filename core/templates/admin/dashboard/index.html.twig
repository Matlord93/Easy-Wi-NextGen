{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_nav_dashboard', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold">{{ t('admin_dashboard_welcome', page_locale()) }}</h1>
            <p class="text-sm text-slate-500">{{ t('admin_dashboard_intro', page_locale()) }}</p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <button class="rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm">{{ t('admin_dashboard_invite_operator', page_locale()) }}</button>
            <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm">{{ t('admin_dashboard_create_job', page_locale()) }}</button>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-4">
        <div class="rounded-xl bg-gradient-to-br from-slate-700 via-slate-800 to-slate-900 p-4 text-white shadow-md">
            <p class="text-xs uppercase text-slate-200/80">{{ t('admin_dashboard_total_jobs', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ jobSummary.total }}</p>
            <p class="mt-2 text-xs text-slate-200/80">{{ t('admin_dashboard_running_queued', page_locale())|replace({'%running%': jobSummary.running, '%queued%': jobSummary.queued}) }}</p>
            <div class="mt-3 h-1 w-full rounded-full bg-slate-600">
                <div class="h-1 w-2/3 rounded-full bg-emerald-400"></div>
            </div>
        </div>
        <div class="rounded-xl bg-gradient-to-br from-indigo-600 via-indigo-700 to-indigo-800 p-4 text-white shadow-md">
            <p class="text-xs uppercase text-indigo-200/90">{{ t('admin_dashboard_active_users', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ jobSummary.running + jobSummary.queued }}</p>
            <p class="mt-2 text-xs text-indigo-200/90">{{ t('admin_dashboard_operators_online', page_locale())|replace({'%alerts%': jobSummary.failed}) }}</p>
            <div class="mt-3 h-1 w-full rounded-full bg-indigo-400/40">
                <div class="h-1 w-3/4 rounded-full bg-white/80"></div>
            </div>
        </div>
        <div class="rounded-xl bg-gradient-to-br from-slate-700 via-slate-800 to-slate-900 p-4 text-white shadow-md">
            <p class="text-xs uppercase text-slate-200/80">{{ t('admin_dashboard_running_jobs', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ jobSummary.running }}</p>
            <p class="mt-2 text-xs text-slate-200/80">{{ t('admin_dashboard_failed_queued', page_locale())|replace({'%failed%': jobSummary.failed, '%queued%': jobSummary.queued}) }}</p>
            <div class="mt-3 flex gap-2">
                <span class="h-1 w-10 rounded-full bg-emerald-400"></span>
                <span class="h-1 w-6 rounded-full bg-amber-400"></span>
                <span class="h-1 w-4 rounded-full bg-rose-400"></span>
            </div>
        </div>
        <div class="rounded-xl bg-gradient-to-br from-slate-700 via-slate-800 to-slate-900 p-4 text-white shadow-md">
            <p class="text-xs uppercase text-slate-200/80">{{ t('admin_dashboard_system_load', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ agentSummary.online }}</p>
            <p class="mt-2 text-xs text-slate-200/80">{{ t('admin_dashboard_degraded_offline', page_locale())|replace({'%degraded%': agentSummary.degraded, '%offline%': agentSummary.offline}) }}</p>
            <div class="mt-3 h-1 w-full rounded-full bg-slate-600">
                <div class="h-1 w-1/2 rounded-full bg-sky-400"></div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-4">
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M4 4.75A.75.75 0 0 1 4.75 4h10.5a.75.75 0 0 1 .75.75v2.5a.75.75 0 0 1-.75.75H4.75A.75.75 0 0 1 4 7.25v-2.5Zm0 8a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 .75.75v2.5a.75.75 0 0 1-.75.75H4.75a.75.75 0 0 1-.75-.75v-2.5Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_server_overview', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_manage_nodes', page_locale()) }}</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M10 10a3 3 0 1 0-3-3 3 3 0 0 0 3 3Zm-6 7a6 6 0 0 1 12 0v.25a.75.75 0 0 1-.75.75h-10.5A.75.75 0 0 1 4 17.25Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_client_management', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_manage_users', page_locale()) }}</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M3 4.75A1.75 1.75 0 0 1 4.75 3h10.5A1.75 1.75 0 0 1 17 4.75v10.5A1.75 1.75 0 0 1 15.25 17H4.75A1.75 1.75 0 0 1 3 15.25V4.75Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_game_servers', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_instances_active', page_locale())|replace({'%count%': agentSummary.total}) }}</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M2.5 3.75a.75.75 0 0 1 .75-.75h13.5a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75H3.25a.75.75 0 0 1-.75-.75V3.75Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_web_hosting', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_websites_hosted', page_locale()) }}</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M4 3.5A1.5 1.5 0 0 1 5.5 2h9A1.5 1.5 0 0 1 16 3.5v13a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 4 16.5v-13Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_databases', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_database_nodes', page_locale()) }}</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M4 3.75A1.75 1.75 0 0 1 5.75 2h5.5A1.75 1.75 0 0 1 13 3.75v2h1.25A1.75 1.75 0 0 1 16 7.5v8.75A1.75 1.75 0 0 1 14.25 18H5.75A1.75 1.75 0 0 1 4 16.25V3.75Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_billing', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_invoices_payments', page_locale()) }}</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M3 5.75A2.75 2.75 0 0 1 5.75 3h8.5A2.75 2.75 0 0 1 17 5.75v8.5A2.75 2.75 0 0 1 14.25 17h-8.5A2.75 2.75 0 0 1 3 14.25v-8.5Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_billing', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_invoices_payments', page_locale()) }}</p>
                </div>
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-slate-100 p-2 text-slate-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M10 3a.75.75 0 0 1 .75.75v6.69l2.22-2.22a.75.75 0 1 1 1.06 1.06l-3.5 3.5a.75.75 0 0 1-1.06 0l-3.5-3.5a.75.75 0 1 1 1.06-1.06l2.22 2.22V3.75A.75.75 0 0 1 10 3Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('admin_dashboard_payments', page_locale()) }}</p>
                    <p class="text-xs text-slate-600">{{ t('admin_dashboard_settlement_overview', page_locale()) }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
        <div class="rounded-xl border border-slate-200 bg-white shadow-sm lg:col-span-2">
            <div class="flex items-center justify-between border-b border-slate-200 px-5 py-4">
                <div>
                    <h2 class="text-lg font-semibold">{{ t('admin_dashboard_recent_activity', page_locale()) }}</h2>
                    <p class="text-sm text-slate-500">{{ t('admin_dashboard_recent_activity_description', page_locale()) }}</p>
                </div>
                <button
                    class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
                    hx-get="/admin/jobs/table"
                    hx-target="#jobs-table"
                    hx-swap="outerHTML"
                >{{ t('admin_dashboard_refresh', page_locale()) }}</button>
            </div>
            {% include 'admin/jobs/_table.html.twig' with { jobs: jobs } %}
        </div>

        <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
            <div class="border-b border-slate-200 px-5 py-4">
                <h2 class="text-lg font-semibold">{{ t('admin_dashboard_system_load', page_locale()) }}</h2>
                <p class="text-sm text-slate-500">{{ t('admin_dashboard_system_load_description', page_locale()) }}</p>
            </div>
            <div class="divide-y divide-slate-200">
                {% set statusStyles = {
                    'online': 'bg-emerald-50 text-emerald-700 border-emerald-200',
                    'degraded': 'bg-amber-50 text-amber-700 border-amber-200',
                    'offline': 'bg-rose-50 text-rose-700 border-rose-200'
                } %}
                {% for node in nodes %}
                    {% set style = statusStyles[node.status] ?? 'bg-slate-100 text-slate-600 border-slate-200' %}
                    <div class="px-5 py-4">
                        <div class="flex items-start justify-between gap-4">
                            <div>
                                <p class="text-sm font-semibold text-slate-900">{{ node.name }}</p>
                                <p class="text-xs text-slate-400">{{ t('admin_dashboard_node_id', page_locale())|replace({'%id%': node.id}) }}</p>
                            </div>
                            <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ style }}">
                                {{ node.status|title }}
                            </span>
                        </div>
                        <div class="mt-3 space-y-2 text-xs text-slate-500">
                            <div class="flex items-center justify-between">
                                <span>{{ t('admin_dashboard_cpu', page_locale()) }}</span>
                                <span class="font-medium text-slate-700">{{ node.cpu ?? '—' }}</span>
                            </div>
                            <div class="h-1 w-full rounded-full bg-slate-100">
                                <div class="h-1 w-2/3 rounded-full bg-indigo-500"></div>
                            </div>
                            <div class="flex items-center justify-between">
                                <span>{{ t('admin_dashboard_memory', page_locale()) }}</span>
                                <span class="font-medium text-slate-700">{{ node.memory ?? '—' }}</span>
                            </div>
                            <div class="h-1 w-full rounded-full bg-slate-100">
                                <div class="h-1 w-1/2 rounded-full bg-emerald-500"></div>
                            </div>
                            <div class="flex items-center justify-between">
                                <span>{{ t('admin_dashboard_queue', page_locale()) }}</span>
                                <span class="font-medium text-slate-700">{{ node.queue ?? '—' }}</span>
                            </div>
                            <div class="h-1 w-full rounded-full bg-slate-100">
                                <div class="h-1 w-1/3 rounded-full bg-amber-500"></div>
                            </div>
                        </div>
                        <div class="mt-3 text-xs text-slate-400">
                            {% if node.lastHeartbeatAt %}
                                {{ t('admin_dashboard_last_seen', page_locale())|replace({'%time%': node.lastHeartbeatAt|date('Y-m-d H:i'), '%ip%': node.lastHeartbeatIp ?? t('admin_dashboard_ip_na', page_locale())}) }}
                            {% else %}
                                {{ t('admin_dashboard_no_heartbeat', page_locale()) }}
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <div class="px-5 py-8 text-center text-sm text-slate-400">{{ t('admin_dashboard_no_agents', page_locale()) }}</div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
