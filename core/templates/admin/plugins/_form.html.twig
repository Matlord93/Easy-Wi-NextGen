<div class="px-5 py-4">
    <div class="mb-4">
        <h2 class="text-lg font-semibold">{{ form.action == 'create' ? 'Add plugin' : 'Edit plugin' }}</h2>
        <p class="text-sm text-slate-500">Bind plugins to templates with versioned checksums.</p>
    </div>

    {% if form.errors is not empty %}
        <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold">Please fix the following:</p>
            <ul class="list-disc pl-5 mt-2">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-4"
        hx-post="{{ form.action_url }}"
        hx-target="#plugin-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Template</label>
            <select name="template_id" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                <option value="">Select template</option>
                {% for template in templates %}
                    <option value="{{ template.id }}" {% if form.template_id == template.id %}selected{% endif %}>{{ template.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Plugin name</label>
            <input type="text" name="name" value="{{ form.name }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Metamod:Source">
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Version</label>
                <input type="text" name="version" value="{{ form.version }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="1.11.0">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Checksum (SHA256)</label>
                <input type="text" name="checksum" value="{{ form.checksum }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm font-mono focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="b3c94b...">
            </div>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Download URL</label>
            <input type="url" name="download_url" value="{{ form.download_url }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="https://example.com/plugins/metamod.zip">
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Description</label>
            <textarea name="description" rows="3" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Short summary">{{ form.description }}</textarea>
        </div>
        <button type="submit" class="w-full rounded-lg px-4 py-2 text-sm font-semibold text-white {{ form.submit_color }} hover:opacity-90">{{ form.submit_label }}</button>
    </form>
</div>
