{% extends 'admin/base.html.twig' %}

{% block title %}Plugin Catalog Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">Plugin Catalog</h1>
        <p class="text-sm text-slate-500">Curate approved mods/plugins per game template with versions and checksums.</p>
    </div>
    <div class="flex items-center gap-3">
        <span class="inline-flex items-center rounded-full border border-indigo-200 bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
            {{ summary.total }} plugin{{ summary.total == 1 ? '' : 's' }}
        </span>
        <button
            class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700"
            hx-get="/admin/plugins/table"
            hx-target="#plugins-table"
            hx-swap="outerHTML"
        >Refresh</button>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Total Plugins</p>
        <p class="mt-2 text-2xl font-semibold">{{ summary.total }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Templates Covered</p>
        <p class="mt-2 text-2xl font-semibold text-indigo-600">{{ summary.templates }}</p>
        <p class="mt-1 text-xs text-slate-400">Unique template IDs</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Integrity</p>
        <p class="mt-2 text-2xl font-semibold text-emerald-600">Checksums</p>
        <p class="mt-1 text-xs text-slate-400">Required for installs</p>
    </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-[1.2fr_0.8fr]">
    <div class="rounded-xl bg-white border border-slate-200">
        <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold">Catalog Entries</h2>
                <p class="text-sm text-slate-500">Approved plugins for automated installs.</p>
            </div>
            <button
                class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
                hx-get="/admin/plugins/table"
                hx-target="#plugins-table"
                hx-swap="outerHTML"
            >Refresh</button>
        </div>
        {% include 'admin/plugins/_table.html.twig' with { plugins: plugins } %}
    </div>

    <div class="rounded-xl bg-white border border-slate-200" id="plugin-form" hx-trigger="plugins-changed from:body" hx-get="/admin/plugins/form" hx-swap="outerHTML">
        {% include 'admin/plugins/_form.html.twig' with { form: form, templates: templates } %}
    </div>
</div>
{% endblock %}
