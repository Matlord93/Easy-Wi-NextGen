<div id="plugins-table" class="overflow-x-auto" hx-trigger="plugins-changed from:body" hx-get="/admin/plugins/table" hx-swap="outerHTML">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-700 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">{{ t('admin_plugins_table_plugin', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('admin_plugins_table_template', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('admin_plugins_table_version', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('admin_plugins_table_checksum', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('admin_plugins_table_updated', page_locale()) }}</th>
                <th class="px-5 py-3 text-right font-semibold">{{ t('admin_plugins_table_actions', page_locale()) }}</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for plugin in plugins %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">
                        <div>{{ plugin.name }}</div>
                        <div class="text-xs text-slate-700 truncate max-w-xs">{{ plugin.download_url }}</div>
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                            {{ plugin.template.name }}
                        </span>
                    </td>
                    <td class="px-5 py-4 text-slate-600">{{ plugin.version }}</td>
                    <td class="px-5 py-4 text-slate-600 font-mono text-xs">{{ plugin.checksum }}</td>
                    <td class="px-5 py-4 text-slate-700">{{ plugin.updated_at ? plugin.updated_at|date('Y-m-d H:i') : 'â€”' }}</td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <a
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            href="/admin/plugins/{{ plugin.id }}/preview"
                        >
                            {{ t('admin_plugins_preview', page_locale()) }}
                        </a>
                        <a
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            href="/admin/plugins/{{ plugin.id }}/edit"
                        >
                            {{ t('edit', page_locale()) }}
                        </a>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/plugins/{{ plugin.id }}/delete"
                            hx-confirm="{{ t('admin_plugins_delete_confirm', page_locale())|replace({'%name%': plugin.name}) }}"
                        >
                            {{ t('delete', page_locale()) }}
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-6 text-center text-sm text-slate-700">{{ t('admin_plugins_empty', page_locale()) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
