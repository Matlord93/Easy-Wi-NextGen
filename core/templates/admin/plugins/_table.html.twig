<div id="plugins-table" class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">Plugin</th>
                <th class="px-5 py-3 text-left font-semibold">Template</th>
                <th class="px-5 py-3 text-left font-semibold">Version</th>
                <th class="px-5 py-3 text-left font-semibold">Checksum</th>
                <th class="px-5 py-3 text-left font-semibold">Updated</th>
                <th class="px-5 py-3 text-right font-semibold">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for plugin in plugins %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">
                        <div>{{ plugin.name }}</div>
                        <div class="text-xs text-slate-500 truncate max-w-xs">{{ plugin.download_url }}</div>
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                            {{ plugin.template.name }}
                        </span>
                    </td>
                    <td class="px-5 py-4 text-slate-600">{{ plugin.version }}</td>
                    <td class="px-5 py-4 text-slate-600 font-mono text-xs">{{ plugin.checksum }}</td>
                    <td class="px-5 py-4 text-slate-500">{{ plugin.updated_at ? plugin.updated_at|date('Y-m-d H:i') : 'â€”' }}</td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            hx-get="/admin/plugins/{{ plugin.id }}/edit"
                            hx-target="#plugin-form"
                            hx-swap="outerHTML"
                        >
                            Edit
                        </button>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/plugins/{{ plugin.id }}/delete"
                            hx-confirm="Delete {{ plugin.name }}?"
                        >
                            Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-6 text-center text-sm text-slate-500">No plugins configured yet.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
