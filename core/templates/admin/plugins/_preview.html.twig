<div class="px-5 py-4 border-b border-slate-200">
    <h2 class="text-lg font-semibold">{{ t('admin_plugins_preview_title', page_locale()) }}</h2>
    <p class="text-sm text-slate-500">{{ t('admin_plugins_preview_intro', page_locale()) }}</p>
</div>
<div class="p-5 space-y-3">
    <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
        <p class="text-xs uppercase text-slate-500 font-semibold">
            {{ t('admin_plugins_preview_details', 'de') }} / {{ t('admin_plugins_preview_details', 'en') }}
        </p>
        <p class="mt-2 text-sm font-semibold text-slate-900">{{ plugin.name }}</p>
        <p class="text-xs text-slate-500">
            {{ t('admin_plugins_preview_template', 'de') }} / {{ t('admin_plugins_preview_template', 'en') }}:
            {{ plugin.template.name }}
        </p>
        <p class="text-xs text-slate-500">
            {{ t('admin_plugins_preview_version', 'de') }} / {{ t('admin_plugins_preview_version', 'en') }}:
            {{ plugin.version }}
        </p>
        <p class="text-xs text-slate-500">
            {{ t('admin_plugins_preview_checksum', 'de') }} / {{ t('admin_plugins_preview_checksum', 'en') }}:
            {{ plugin.checksum }}
        </p>
    </div>

    <div class="rounded-lg border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500 font-semibold">
            {{ t('admin_plugins_preview_download_url', 'de') }} / {{ t('admin_plugins_preview_download_url', 'en') }}
        </p>
        <p class="mt-2 text-xs text-slate-600 break-all">{{ plugin.download_url }}</p>
    </div>

    <div class="rounded-lg border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500 font-semibold">
            {{ t('admin_plugins_preview_description', 'de') }} / {{ t('admin_plugins_preview_description', 'en') }}
        </p>
        {% if plugin.description %}
            <p class="mt-2 text-xs text-slate-600">{{ plugin.description }}</p>
        {% else %}
            <p class="mt-2 text-xs text-slate-400">
                {{ t('admin_plugins_preview_no_description', 'de') }} / {{ t('admin_plugins_preview_no_description', 'en') }}
            </p>
        {% endif %}
    </div>
</div>
