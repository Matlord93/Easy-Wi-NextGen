{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_port_pools_title', page_locale()) }} Â· Easy-Wi NextGen{% endblock %}

{% block content %}
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold">{{ t('admin_port_pools_title', page_locale()) }}</h1>
            <p class="text-sm text-slate-700">{{ t('admin_port_pools_intro', page_locale()) }}</p>
        </div>
    </div>

    {% if notice %}
        <div class="mt-4 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">{{ notice }}</div>
    {% endif %}
    {% if error %}
        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">{{ error }}</div>
    {% endif %}

    <div class="mt-6 grid gap-6 lg:grid-cols-2">
        <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
            <h2 class="text-sm font-semibold uppercase text-slate-700">{{ t('admin_port_pools_create_title', page_locale()) }}</h2>
            <form class="mt-4 space-y-4" method="post" action="/admin/port-pools">
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-700">{{ t('admin_port_pools_node_label', page_locale()) }}</label>
                    <select name="node_id" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        <option value="">{{ t('admin_port_pools_node_placeholder', page_locale()) }}</option>
                        {% for node in nodes %}
                            <option value="{{ node.id }}">{{ node.name ?? node.id }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-700">{{ t('admin_port_pools_name_label', page_locale()) }}</label>
                    <input type="text" name="name" placeholder="{{ t('admin_port_pools_name_placeholder', page_locale()) }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                </div>
                <div>
                    <label class="text-xs font-semibold uppercase text-slate-700">{{ t('admin_port_pools_range_label', page_locale()) }}</label>
                    <div class="mt-2 grid gap-2 sm:grid-cols-2">
                        <input type="number" min="1" name="start_port" placeholder="{{ t('admin_port_pools_range_start_placeholder', page_locale()) }}" class="w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        <input type="number" min="1" name="end_port" placeholder="{{ t('admin_port_pools_range_end_placeholder', page_locale()) }}" class="w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                    </div>
                    <p class="mt-1 text-xs text-slate-600">{{ t('admin_port_pools_range_hint', page_locale()) }}</p>
                </div>
                <button type="submit" class="rounded-lg bg-slate-900 px-4 py-2 text-xs font-semibold text-white transition hover:bg-slate-800">
                    {{ t('admin_port_pools_create_action', page_locale()) }}
                </button>
            </form>
        </div>

        <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
            <h2 class="text-sm font-semibold uppercase text-slate-700">{{ t('admin_port_pools_help_title', page_locale()) }}</h2>
            <ul class="mt-3 space-y-2 text-sm text-slate-600">
                <li>{{ t('admin_port_pools_help_nodes', page_locale()) }}</li>
                <li>{{ t('admin_port_pools_help_blocks', page_locale()) }}</li>
                <li>{{ t('admin_port_pools_help_consistency', page_locale()) }}</li>
            </ul>
        </div>
    </div>

    <div class="mt-8 rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="flex items-center justify-between border-b border-slate-200 px-6 py-4">
            <div>
                <h2 class="text-sm font-semibold uppercase text-slate-700">{{ t('admin_port_pools_list_title', page_locale()) }}</h2>
                <p class="text-xs text-slate-600">{{ t('admin_port_pools_list_intro', page_locale()) }}</p>
            </div>
            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ portPools|length }}</span>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
                <thead class="bg-slate-50 text-xs uppercase text-slate-500">
                    <tr>
                        <th class="px-6 py-3">{{ t('admin_label_id', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_pools_name_label', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_pools_node_label', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_pools_range_label', page_locale()) }}</th>
                        <th class="px-6 py-3">{{ t('admin_port_pools_created_label', page_locale()) }}</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200">
                    {% for pool in portPools %}
                        <tr>
                            <td class="px-6 py-3 font-mono text-xs text-slate-700">{{ pool.id }}</td>
                            <td class="px-6 py-3">
                                <div class="text-sm font-semibold text-slate-900">{{ pool.name }}</div>
                            </td>
                            <td class="px-6 py-3">
                                <div class="text-sm font-semibold text-slate-900">{{ pool.node.name ?? pool.node.id }}</div>
                                <div class="text-xs text-slate-600">{{ pool.node.id }}</div>
                            </td>
                            <td class="px-6 py-3">
                                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">{{ pool.start_port }}-{{ pool.end_port }}</span>
                            </td>
                            <td class="px-6 py-3 text-xs text-slate-600">{{ pool.created_at|date('Y-m-d H:i') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="px-6 py-6 text-center text-sm text-slate-600">{{ t('admin_port_pools_empty', page_locale()) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
