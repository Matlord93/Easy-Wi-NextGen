{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_ts3_title', page_locale()) }} Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">{{ t('admin_ts3_heading', page_locale()) }}</h1>
        <p class="text-sm text-slate-500">{{ t('admin_ts3_intro', page_locale()) }}</p>
    </div>
    <div class="flex items-center gap-3">
        <button
            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
            hx-get="/admin/ts3/instances/table"
            hx-target="#ts3-instances-table"
            hx-swap="outerHTML"
        >{{ t('refresh', page_locale()) }}</button>
        <a
            class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white"
            href="/admin/ts3/instances/new"
        >{{ t('admin_ts3_new_instance', page_locale()) }}</a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_ts3_total_instances', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold">{{ summary.total }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_ts3_running', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-emerald-600">{{ summary.running }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_ts3_stopped', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-amber-500">{{ summary.stopped }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_ts3_needs_attention', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-rose-500">{{ summary.error }}</p>
    </div>
</div>

<div id="ts3-instances-table" class="rounded-xl bg-white border border-slate-200"
     hx-get="/admin/ts3/instances/table"
     hx-trigger="ts3-instances-changed from:body"
     hx-swap="outerHTML">
    {% include 'admin/ts3/instances/_table.html.twig' with { instances: instances } %}
</div>
{% endblock %}
