{% extends 'admin/base.html.twig' %}

{% block title %}TS3 Instances Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">TS3 Instances</h1>
        <p class="text-sm text-slate-500">Provision and manage TeamSpeak 3 instances across your nodes.</p>
    </div>
    <div class="flex items-center gap-3">
        <button
            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
            hx-get="/admin/ts3/instances/table"
            hx-target="#ts3-instances-table"
            hx-swap="outerHTML"
        >Refresh</button>
        <button
            class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white"
            hx-get="/admin/ts3/instances/form"
            hx-target="#ts3-instance-form"
            hx-swap="outerHTML"
        >New Instance</button>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Total Instances</p>
        <p class="mt-2 text-2xl font-semibold">{{ summary.total }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Running</p>
        <p class="mt-2 text-2xl font-semibold text-emerald-600">{{ summary.running }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Stopped</p>
        <p class="mt-2 text-2xl font-semibold text-amber-500">{{ summary.stopped }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Needs Attention</p>
        <p class="mt-2 text-2xl font-semibold text-rose-500">{{ summary.error }}</p>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div id="ts3-instance-form" class="rounded-xl bg-white border border-slate-200">
        {% include 'admin/ts3/instances/_form.html.twig' with { customers: customers, nodes: nodes, form: form } %}
    </div>
    <div class="lg:col-span-2">
        <div id="ts3-instances-table" class="rounded-xl bg-white border border-slate-200"
             hx-get="/admin/ts3/instances/table"
             hx-trigger="ts3-instances-changed from:body"
             hx-swap="outerHTML">
            {% include 'admin/ts3/instances/_table.html.twig' with { instances: instances } %}
        </div>
    </div>
</div>
{% endblock %}
