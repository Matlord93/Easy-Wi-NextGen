{% extends 'admin/base.html.twig' %}


{% block content %}
<div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">{{ t('admin_ts3_create_title', page_locale()) }}</h1>
        <p class="text-sm text-slate-700">{{ t('admin_ts3_create_intro', page_locale()) }}</p>
    </div>
    <a class="text-sm font-medium text-slate-600 hover:text-slate-900" href="/admin/ts3/instances">
        {{ t('admin_ts3_back', page_locale()) }}
    </a>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <div class="space-y-6 lg:col-span-2">
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
            <div class="rounded-xl border border-slate-200 bg-white p-6">
                <h2 class="text-base font-semibold">{{ t('admin_ts3_option_ts3_title', page_locale()) }}</h2>
                <p class="mt-2 text-sm text-slate-700">{{ t('admin_ts3_option_ts3_intro', page_locale()) }}</p>
                <a class="mt-4 inline-flex items-center text-sm font-medium text-indigo-600" href="/admin/ts3/instances/provision">
                    {{ t('admin_ts3_option_ts3_action', page_locale()) }}
                </a>
            </div>
            {% if module_enabled('ts_virtual') %}
                <div class="rounded-xl border border-dashed border-purple-200 bg-white p-6">
                    <div class="flex flex-wrap items-center gap-2">
                        <h2 class="text-base font-semibold text-slate-700">{{ t('admin_ts3_option_virtual_title', page_locale()) }}</h2>
                        <span class="inline-flex items-center rounded-full bg-amber-100 px-2 py-0.5 text-[10px] font-semibold text-amber-700">{{ t('admin_ts3_option_virtual_badge_planned', page_locale()) }}</span>
                        <span class="inline-flex items-center rounded-full bg-purple-100 px-2 py-0.5 text-[10px] font-semibold text-purple-700">{{ t('admin_ts3_option_virtual_badge_experimental', page_locale()) }}</span>
                    </div>
                    <p class="mt-2 text-sm text-slate-600">{{ t('admin_ts3_option_virtual_intro', page_locale()) }}</p>
                    <span class="mt-4 inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
                        {{ t('admin_ts3_option_virtual_action', page_locale()) }}
                    </span>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
