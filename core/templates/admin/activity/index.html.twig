{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('activity_title', page_locale()) }} Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div class="rounded-2xl border border-slate-200 bg-gradient-to-br from-white via-white to-indigo-50 px-6 py-6 shadow-sm">
        <div class="flex flex-wrap items-center justify-between gap-4">
            <div>
                <h1 class="text-2xl font-semibold text-slate-900">{{ t('activity_title', page_locale()) }}</h1>
                <p class="text-sm text-slate-500">{{ t('admin_activity_intro', page_locale()) }}</p>
            </div>
            <span class="inline-flex items-center rounded-full border border-indigo-200 bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
                {{ entries|length }} {{ t('admin_activity_total_entries', page_locale()) }}
            </span>
        </div>
    </div>
    <div class="grid gap-4">
        {% for entry in entries %}
            <div class="group rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:border-indigo-200 hover:shadow-md">
                <div class="flex flex-wrap items-center justify-between gap-4">
                    <div class="flex items-center gap-4">
                        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-indigo-50 text-indigo-600">
                            <span class="text-sm font-semibold">{{ entry.action|slice(0, 2)|upper }}</span>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-slate-900">{{ entry.action }}</p>
                            <p class="text-xs text-slate-500">{{ entry.actor }}</p>
                        </div>
                    </div>
                    <span class="rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-500">{{ entry.created_at|date('Y-m-d H:i') }}</span>
                </div>
                <details class="mt-4 rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-xs text-slate-600">
                    <summary class="cursor-pointer text-xs font-semibold text-slate-600">{{ t('admin_activity_payload', page_locale()) }}</summary>
                    <pre class="mt-3 whitespace-pre-wrap">{{ entry.payload|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                </details>
            </div>
        {% else %}
            <div class="rounded-xl border border-dashed border-slate-200 bg-white px-5 py-6 text-sm text-slate-400">
                {{ t('no_results', page_locale()) }}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
