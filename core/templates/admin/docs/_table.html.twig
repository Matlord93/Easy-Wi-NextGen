<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">Title</th>
                <th class="px-5 py-3 text-left font-semibold">Category</th>
                <th class="px-5 py-3 text-left font-semibold">Slug</th>
                <th class="px-5 py-3 text-left font-semibold">Visibility</th>
                <th class="px-5 py-3 text-left font-semibold">Updated</th>
                <th class="px-5 py-3 text-right font-semibold">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for article in articles %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">
                        <div>{{ article.title }}</div>
                        <div class="text-xs text-slate-500 truncate max-w-xs">{{ article.content }}</div>
                    </td>
                    <td class="px-5 py-4 text-slate-600 capitalize">{{ article.category }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ article.slug }}</td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if article.visible_public %}
                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">Public</span>
                        {% else %}
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Hidden</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-500">{{ article.updated_at ? article.updated_at|date('Y-m-d H:i') : 'â€”' }}</td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            hx-get="/admin/docs/{{ article.id }}/edit"
                            hx-target="#docs-form"
                            hx-swap="outerHTML"
                        >
                            Edit
                        </button>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/docs/{{ article.id }}/delete"
                            hx-confirm="Delete {{ article.title }}?"
                        >
                            Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-6 text-center text-sm text-slate-500">No docs articles yet.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
