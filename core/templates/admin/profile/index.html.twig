{% extends 'admin/base.html.twig' %}

{% block title %}Admin profile Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div>
        <h1 class="text-2xl font-semibold">Admin profile</h1>
        <p class="text-sm text-slate-500">Update your login email and password for this admin account.</p>
    </div>

    {% if errors is not empty %}
        <div class="rounded-xl border border-rose-200 bg-rose-50 px-5 py-4 text-sm text-rose-700">
            <ul class="list-disc space-y-1 pl-4">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% elseif form.success %}
        <div class="rounded-xl border border-emerald-200 bg-emerald-50 px-5 py-4 text-sm text-emerald-700">
            Profile updated successfully.
        </div>
    {% endif %}

    <form method="post" action="/admin/profile" class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="grid gap-5 lg:grid-cols-2">
            <div>
                <label class="block text-xs font-semibold uppercase text-slate-500">Email address</label>
                <input
                    type="email"
                    name="email"
                    required
                    value="{{ form.email }}"
                    class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                >
            </div>
            <div>
                <label class="block text-xs font-semibold uppercase text-slate-500">New password</label>
                <input
                    type="password"
                    name="password"
                    placeholder="Leave blank to keep the current password"
                    class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                >
            </div>
            <div>
                <label class="block text-xs font-semibold uppercase text-slate-500">Confirm new password</label>
                <input
                    type="password"
                    name="password_confirm"
                    placeholder="Repeat the new password"
                    class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                >
            </div>
            <div class="lg:col-span-2">
                <label class="block text-xs font-semibold uppercase text-slate-500">Ticket signature</label>
                <textarea
                    name="signature"
                    rows="4"
                    placeholder="Add a signature that will be appended to ticket replies."
                    class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                >{{ form.signature }}</textarea>
            </div>
        </div>
        <div class="mt-6 flex flex-wrap items-center gap-3">
            <button type="submit" class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white">Save changes</button>
            <a href="/admin" class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600">Back to dashboard</a>
        </div>
    </form>
</div>
{% endblock %}
