<div class="px-5 py-4 border-b border-slate-200">
    <h2 class="text-lg font-semibold">Template Preview</h2>
    <p class="text-sm text-slate-500">Dry-run output for the selected template or draft form.</p>
</div>
<div class="p-5 space-y-4">
    {% if preview.errors is not empty %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold mb-1">Validation issues:</p>
            <ul class="list-disc list-inside space-y-1">
                {% for error in preview.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {% if preview.identity is not defined %}
        <div class="text-sm text-slate-500">Select a template from the table or run a preview from the form.</div>
    {% else %}
        <div class="space-y-3">
            <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Identity</p>
                <p class="mt-2 text-sm font-semibold text-slate-900">{{ preview.identity.display_name }}</p>
                <p class="text-xs text-slate-500">Key: {{ preview.identity.game_key }}</p>
                {% if preview.identity.steam_app_id %}
                    <p class="text-xs text-slate-500">Steam App ID: {{ preview.identity.steam_app_id }}</p>
                {% endif %}
                {% if preview.identity.sniper_profile %}
                    <p class="text-xs text-slate-500">Sniper Profile: {{ preview.identity.sniper_profile }}</p>
                {% endif %}
            </div>

            <div class="rounded-lg border border-slate-200 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Required Ports</p>
                <div class="mt-2 flex flex-wrap gap-2">
                    {% for port in preview.required_ports %}
                        <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-2.5 py-1 text-xs font-semibold text-slate-600">
                            {{ port.label ?? port.name }} Â· {{ port.protocol|upper }}
                        </span>
                    {% else %}
                        <span class="text-xs text-slate-400">No ports configured.</span>
                    {% endfor %}
                </div>
            </div>

            <div class="rounded-lg border border-slate-200 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Start Params</p>
                <pre class="mt-2 whitespace-pre-wrap text-xs text-slate-600">{{ preview.start_params }}</pre>
            </div>

            <div class="rounded-lg border border-slate-200 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Commands</p>
                <p class="mt-2 text-xs text-slate-600"><span class="font-semibold text-slate-500">Install:</span> {{ preview.install_command }}</p>
                <p class="mt-2 text-xs text-slate-600"><span class="font-semibold text-slate-500">Update:</span> {{ preview.update_command }}</p>
            </div>

            <div class="rounded-lg border border-slate-200 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Env Vars</p>
                <div class="mt-2 space-y-1 text-xs text-slate-600">
                    {% for entry in preview.env_vars %}
                        <div><span class="font-semibold">{{ entry.key }}</span>=<span>{{ entry.value }}</span></div>
                    {% else %}
                        <div class="text-slate-400">No env vars.</div>
                    {% endfor %}
                </div>
            </div>

            <div class="rounded-lg border border-slate-200 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Config Files</p>
                <div class="mt-2 space-y-2 text-xs text-slate-600">
                    {% for entry in preview.config_files %}
                        <div>
                            <p class="font-semibold">{{ entry.path }}</p>
                            {% if entry.description %}
                                <p class="text-slate-500">{{ entry.description }}</p>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="text-slate-400">No config files.</div>
                    {% endfor %}
                </div>
            </div>

            <div class="rounded-lg border border-slate-200 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Plugin Paths</p>
                <div class="mt-2 space-y-1 text-xs text-slate-600">
                    {% for entry in preview.plugin_paths %}
                        <div>{{ entry }}</div>
                    {% else %}
                        <div class="text-slate-400">No plugin paths.</div>
                    {% endfor %}
                </div>
            </div>

            <div class="rounded-lg border border-slate-200 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">FastDL</p>
                <p class="mt-2 text-xs text-slate-600">Enabled: {{ preview.fastdl_settings.enabled ? 'Yes' : 'No' }}</p>
                {% if preview.fastdl_settings.base_url %}
                    <p class="text-xs text-slate-600">Base URL: {{ preview.fastdl_settings.base_url }}</p>
                {% endif %}
                {% if preview.fastdl_settings.root_path %}
                    <p class="text-xs text-slate-600">Root Path: {{ preview.fastdl_settings.root_path }}</p>
                {% endif %}
            </div>

            <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
                <p class="text-xs uppercase text-slate-500 font-semibold">Dry Run</p>
                <ul class="mt-2 list-disc list-inside text-xs text-slate-600 space-y-1">
                    {% for step in preview.dry_run_steps %}
                        <li>{{ step }}</li>
                    {% else %}
                        <li class="text-slate-400">No actions generated.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}
</div>
