<div class="px-5 py-4 border-b border-slate-200">
    {% if form.is_edit %}
        <h2 class="text-lg font-semibold">{{ t('admin_templates_edit_title', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('admin_templates_edit_intro', page_locale()) }}</p>
    {% else %}
        <h2 class="text-lg font-semibold">{{ t('admin_templates_create_title', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('admin_templates_create_intro', page_locale()) }}</p>
    {% endif %}
</div>
<div class="p-5 space-y-4">
    {% if form.errors is not empty %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold mb-1">{{ t('admin_form_fix_following', page_locale()) }}</p>
            <ul class="list-disc list-inside space-y-1">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <form
        class="space-y-4"
        hx-post="{{ form.is_edit ? '/admin/templates/' ~ form.template_id : '/admin/templates' }}"
        hx-target="#template-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_game_key', page_locale()) }}</label>
            <input name="game_key" value="{{ form.game_key }}" placeholder="{{ t('admin_templates_game_key_placeholder', page_locale()) }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_game_key_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_display_name', page_locale()) }}</label>
            <input name="display_name" value="{{ form.display_name }}" placeholder="{{ t('admin_templates_display_name_placeholder', page_locale()) }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('description', page_locale()) }}</label>
            <textarea name="description" rows="2" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_description_placeholder', page_locale()) }}">{{ form.description }}</textarea>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_steam_app_id', page_locale()) }}</label>
            <input name="steam_app_id" value="{{ form.steam_app_id }}" placeholder="{{ t('admin_templates_steam_app_id_placeholder', page_locale()) }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_steam_app_id_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_sniper_profile', page_locale()) }}</label>
            <input name="sniper_profile" value="{{ form.sniper_profile }}" placeholder="{{ t('admin_templates_sniper_profile_placeholder', page_locale()) }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_sniper_profile_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_required_ports', page_locale()) }}</label>
            {% set selected_ports = form.required_ports is iterable ? form.required_ports : [] %}
            <div class="mt-2 grid grid-cols-2 gap-2 text-sm text-slate-600">
                {% for port in ['game', 'query', 'rcon', 'tv'] %}
                    <label class="flex items-center gap-2 rounded-lg border border-slate-200 bg-slate-50 px-3 py-2">
                        <input type="checkbox" name="required_ports[]" value="{{ port }}" {% if port in selected_ports %}checked{% endif %} class="rounded border-slate-300 text-indigo-600">
                        <span class="font-medium">{{ port|upper }}</span>
                    </label>
                {% endfor %}
            </div>
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_ports_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_fixed_start_params', page_locale()) }}</label>
            <textarea name="start_params" rows="2" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_fixed_start_params_placeholder', page_locale()) }}">{{ form.start_params }}</textarea>
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_fixed_start_params_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_env_vars', page_locale()) }}</label>
            <textarea name="env_vars" rows="3" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_env_vars_placeholder', page_locale()) }}">{{ form.env_vars }}</textarea>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_requirement_vars', page_locale()) }}</label>
            <textarea name="requirement_vars" rows="4" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_requirement_vars_placeholder', page_locale()) }}">{{ form.requirement_vars }}</textarea>
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_requirement_vars_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_requirement_secrets', page_locale()) }}</label>
            <textarea name="requirement_secrets" rows="4" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_requirement_secrets_placeholder', page_locale()) }}">{{ form.requirement_secrets }}</textarea>
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_requirement_secrets_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_config_files', page_locale()) }}</label>
            <textarea name="config_files" rows="3" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_config_files_placeholder', page_locale()) }}">{{ form.config_files }}</textarea>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_plugin_paths', page_locale()) }}</label>
            <textarea name="plugin_paths" rows="2" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_plugin_paths_placeholder', page_locale()) }}">{{ form.plugin_paths }}</textarea>
        </div>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
            <div class="flex items-center justify-between">
                <label class="text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_fastdl_settings', page_locale()) }}</label>
                <label class="flex items-center gap-2 text-xs font-medium text-slate-600">
                    <input type="checkbox" name="fastdl_enabled" value="1" {% if form.fastdl_enabled %}checked{% endif %} class="rounded border-slate-300 text-indigo-600">
                    {{ t('admin_status_enabled', page_locale()) }}
                </label>
            </div>
            <div class="mt-3 space-y-2">
                <input name="fastdl_base_url" value="{{ form.fastdl_base_url }}" placeholder="{{ t('admin_templates_fastdl_base_url_placeholder', page_locale()) }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm">
                <input name="fastdl_root_path" value="{{ form.fastdl_root_path }}" placeholder="{{ t('admin_templates_fastdl_root_placeholder', page_locale()) }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm">
            </div>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_install_command', page_locale()) }}</label>
            <textarea name="install_command" rows="2" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_install_command_placeholder', page_locale()) }}">{{ form.install_command }}</textarea>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_update_command', page_locale()) }}</label>
            <textarea name="update_command" rows="2" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder="{{ t('admin_templates_update_command_placeholder', page_locale()) }}">{{ form.update_command }}</textarea>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_install_resolver', page_locale()) }}</label>
            <textarea name="install_resolver" rows="2" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm" placeholder='{"type":"minecraft_vanilla"}'>{{ form.install_resolver }}</textarea>
            <p class="mt-1 text-xs text-slate-700">{{ t('admin_templates_install_resolver_hint', page_locale()) }}</p>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase">{{ t('admin_templates_switch_flags', page_locale()) }}</label>
            <input name="allowed_switch_flags" value="{{ form.allowed_switch_flags }}" placeholder="{{ t('admin_templates_switch_flags_placeholder', page_locale()) }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <button type="submit" class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-slate-900 text-white">
                {{ form.is_edit ? t('admin_templates_update_submit', page_locale()) : t('admin_templates_create_submit', page_locale()) }}
            </button>
            <button
                type="button"
                class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-600"
                hx-get="{{ form.reset_url }}"
                hx-target="#template-form"
                hx-swap="outerHTML"
            >{{ t('reset', page_locale()) }}</button>
            {% if form.preview_url %}
                <a
                    class="rounded-lg border border-indigo-200 bg-indigo-50 px-4 py-2 text-sm font-semibold text-slate-900 text-indigo-700"
                    href="{{ form.preview_url }}"
                >{{ t('admin_templates_preview', page_locale()) }}</a>
            {% endif %}
        </div>
    </form>
</div>
