{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_templates_edit_title', page_locale()) }} Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between mb-6">
    <div>
        <a class="text-sm text-slate-700 hover:text-slate-700" href="/admin/templates">{{ t('back', page_locale()) }}</a>
        <h1 class="text-2xl font-semibold">{{ t('admin_templates_edit_title', page_locale()) }}</h1>
        <p class="text-sm text-slate-700">{{ t('admin_templates_edit_intro', page_locale()) }}</p>
    </div>
    <div class="flex items-center gap-3">
        <a class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700" href="/admin/templates/{{ form.template_id }}/preview">
            {{ t('admin_templates_preview', page_locale()) }}
        </a>
        <a class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700" href="/admin/templates/import">
            {{ t('admin_templates_import_button', page_locale()) }}
        </a>
        <a class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white" href="/admin/templates/new">
            {{ t('admin_templates_create_button', page_locale()) }}
        </a>
    </div>
</div>

<div class="rounded-xl bg-white border border-slate-200" id="template-form">
    {% include 'admin/templates/_form.html.twig' with { form: form } %}
</div>
{% endblock %}
