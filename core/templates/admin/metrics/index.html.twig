{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_metrics_title', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold">{{ t('admin_metrics_heading', page_locale()) }}</h1>
            <p class="text-sm text-slate-700">{{ t('admin_metrics_intro', page_locale()) }}</p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <span class="inline-flex items-center rounded-full border border-slate-200 bg-white px-3 py-1 text-xs font-semibold text-slate-600">{{ t('admin_metrics_live_data', page_locale()) }}</span>
            <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white">{{ t('admin_metrics_create_alert', page_locale()) }}</button>
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5">
        <form method="get" class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
            <div class="grid flex-1 gap-4 md:grid-cols-3">
                <label class="text-sm font-medium text-slate-600">
                    {{ t('admin_metrics_filter_node', page_locale()) }}
                    <select name="agent" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        {% for agent in agents %}
                            <option value="{{ agent.id }}" {{ selectedAgent and selectedAgent.id == agent.id ? 'selected' : '' }}>
                                {{ agent.name ?? t('admin_metrics_node_unnamed', page_locale()) }} · {{ agent.id }}
                            </option>
                        {% else %}
                            <option value="">{{ t('admin_metrics_no_nodes', page_locale()) }}</option>
                        {% endfor %}
                    </select>
                </label>
                <label class="text-sm font-medium text-slate-600">
                    {{ t('admin_metrics_filter_range', page_locale()) }}
                    <select name="range" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        <option value="24h" {{ range == '24h' ? 'selected' : '' }}>{{ t('admin_metrics_range_24h', page_locale()) }}</option>
                        <option value="7d" {{ range == '7d' ? 'selected' : '' }}>{{ t('admin_metrics_range_7d', page_locale()) }}</option>
                    </select>
                </label>
                <label class="text-sm font-medium text-slate-600">
                    {{ t('admin_metrics_filter_instance', page_locale()) }}
                    <select name="instance" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        <option value="">{{ t('admin_metrics_all_instances', page_locale()) }}</option>
                        {% for instance in instances %}
                            <option value="{{ instance.id }}">{{ t('admin_metrics_instance_label', page_locale())|replace({'%id%': instance.id}) }}</option>
                        {% endfor %}
                    </select>
                </label>
            </div>
            <button class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700">{{ t('admin_metrics_filter_apply', page_locale()) }}</button>
        </form>
    </div>

    <div class="grid grid-cols-1 gap-4 lg:grid-cols-2">
        <div class="rounded-xl border border-slate-200 bg-white p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs uppercase text-slate-700">{{ t('admin_metrics_cpu_usage', page_locale()) }}</p>
                    <p class="mt-2 text-2xl font-semibold text-slate-900">{{ latestCpu is not null ? latestCpu|number_format(1, '.', ',') ~ '%' : '—' }}</p>
                </div>
                <span class="text-xs text-slate-600">{{ t('admin_metrics_average', page_locale()) }}</span>
            </div>
            <div class="mt-4">
                <svg viewBox="0 0 240 60" class="h-16 w-full">
                    {% if cpuPoints %}
                        <polyline fill="none" stroke="#6366f1" stroke-width="2" points="{{ cpuPoints }}" />
                    {% else %}
                        <text x="10" y="30" class="fill-slate-300 text-xs">{{ t('admin_metrics_no_data', page_locale()) }}</text>
                    {% endif %}
                </svg>
            </div>
        </div>

        <div class="rounded-xl border border-slate-200 bg-white p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs uppercase text-slate-700">{{ t('admin_metrics_memory_usage', page_locale()) }}</p>
                    <p class="mt-2 text-2xl font-semibold text-slate-900">{{ latestMemory is not null ? latestMemory|number_format(1, '.', ',') ~ '%' : '—' }}</p>
                </div>
                <span class="text-xs text-slate-600">{{ t('admin_metrics_average', page_locale()) }}</span>
            </div>
            <div class="mt-4">
                <svg viewBox="0 0 240 60" class="h-16 w-full">
                    {% if memoryPoints %}
                        <polyline fill="none" stroke="#10b981" stroke-width="2" points="{{ memoryPoints }}" />
                    {% else %}
                        <text x="10" y="30" class="fill-slate-300 text-xs">{{ t('admin_metrics_no_data', page_locale()) }}</text>
                    {% endif %}
                </svg>
            </div>
        </div>

        <div class="rounded-xl border border-slate-200 bg-white p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs uppercase text-slate-700">{{ t('admin_metrics_disk_usage', page_locale()) }}</p>
                    <p class="mt-2 text-2xl font-semibold text-slate-900">{{ latestDisk is not null ? latestDisk|number_format(1, '.', ',') ~ '%' : '—' }}</p>
                </div>
                <span class="text-xs text-slate-600">{{ t('admin_metrics_average', page_locale()) }}</span>
            </div>
            <div class="mt-4">
                <svg viewBox="0 0 240 60" class="h-16 w-full">
                    {% if diskPoints %}
                        <polyline fill="none" stroke="#f97316" stroke-width="2" points="{{ diskPoints }}" />
                    {% else %}
                        <text x="10" y="30" class="fill-slate-300 text-xs">{{ t('admin_metrics_no_data', page_locale()) }}</text>
                    {% endif %}
                </svg>
            </div>
        </div>

        <div class="rounded-xl border border-slate-200 bg-white p-5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs uppercase text-slate-700">{{ t('admin_metrics_network_traffic', page_locale()) }}</p>
                    <p class="mt-2 text-2xl font-semibold text-slate-900">
                        {{ latestNetSent is not null ? latestNetSent|number_format(0, '.', ',') : '—' }}
                        <span class="text-xs font-normal text-slate-600">{{ t('admin_metrics_sent', page_locale()) }}</span>
                    </p>
                    <p class="text-sm text-slate-700">
                        {{ latestNetRecv is not null ? latestNetRecv|number_format(0, '.', ',') : '—' }}
                        <span class="text-xs font-normal text-slate-600">{{ t('admin_metrics_received', page_locale()) }}</span>
                    </p>
                </div>
                <span class="text-xs text-slate-600">{{ t('admin_metrics_bytes', page_locale()) }}</span>
            </div>
            <div class="mt-4">
                <svg viewBox="0 0 240 60" class="h-16 w-full">
                    {% if netSentPoints %}
                        <polyline fill="none" stroke="#0ea5e9" stroke-width="2" points="{{ netSentPoints }}" />
                    {% endif %}
                    {% if netRecvPoints %}
                        <polyline fill="none" stroke="#94a3b8" stroke-width="2" points="{{ netRecvPoints }}" />
                    {% endif %}
                    {% if not netSentPoints and not netRecvPoints %}
                        <text x="10" y="30" class="fill-slate-300 text-xs">{{ t('admin_metrics_no_data', page_locale()) }}</text>
                    {% endif %}
                </svg>
            </div>
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-lg font-semibold">{{ t('admin_metrics_instance_metrics_title', page_locale()) }}</h2>
                <p class="text-sm text-slate-700">{{ t('admin_metrics_instance_metrics_intro', page_locale()) }}</p>
            </div>
            <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-600">{{ t('admin_metrics_planned', page_locale()) }}</span>
        </div>
        <div class="mt-4 grid grid-cols-1 gap-4 md:grid-cols-3">
            <div class="rounded-lg border border-dashed border-slate-200 p-4 text-sm text-slate-600">
                {{ t('admin_metrics_instance_card_cpu', page_locale()) }}
            </div>
            <div class="rounded-lg border border-dashed border-slate-200 p-4 text-sm text-slate-600">
                {{ t('admin_metrics_instance_card_filter', page_locale()) }}
            </div>
            <div class="rounded-lg border border-dashed border-slate-200 p-4 text-sm text-slate-600">
                {{ t('admin_metrics_instance_card_alerts', page_locale()) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
