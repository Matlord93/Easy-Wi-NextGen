<div class="p-6 border-b border-slate-200 flex items-center justify-between">
    <div>
        <h2 class="text-lg font-semibold">{{ t('admin_instances_table_title', page_locale()) }}</h2>
        <p class="text-sm text-slate-500">{{ t('admin_instances_table_intro', page_locale()) }}</p>
    </div>
</div>
<div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_id', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_customer', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_template', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_node', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_resources', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_status', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_updated', page_locale()) }}</th>
            <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">{{ t('admin_instances_table_actions', page_locale()) }}</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-slate-200 bg-white">
        {% for instance in instances %}
            {% set statusColor = instance.status == 'running' ? 'text-emerald-600 bg-emerald-50' : (instance.status == 'error' ? 'text-rose-600 bg-rose-50' : (instance.status == 'provisioning' ? 'text-indigo-600 bg-indigo-50' : 'text-slate-600 bg-slate-100')) %}
            <tr class="hover:bg-slate-50">
                <td class="px-6 py-4 text-sm text-slate-600">#{{ instance.id }}</td>
                <td class="px-6 py-4 text-sm text-slate-600">{{ instance.customer_email }}</td>
                <td class="px-6 py-4 text-sm text-slate-600">
                    <div class="font-medium text-slate-900">{{ instance.template_name }}</div>
                    <div class="text-xs text-slate-500">{{ instance.game_key }}</div>
                </td>
                <td class="px-6 py-4 text-sm text-slate-600">{{ instance.node }}</td>
                <td class="px-6 py-4 text-sm text-slate-600">
                    {{ instance.cpu_limit }} vCPU · {{ instance.ram_limit }} MB · {{ instance.disk_limit }} MB
                </td>
                <td class="px-6 py-4 text-sm">
                    <span class="rounded-full px-3 py-1 text-xs font-semibold {{ statusColor }}">{{ instance.status|title }}</span>
                </td>
                <td class="px-6 py-4 text-sm text-slate-500">{{ instance.updated_at ? instance.updated_at|date('Y-m-d H:i') : '—' }}</td>
                <td class="px-6 py-4 text-right text-sm">
                    <button
                        class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                        hx-post="/admin/instances/{{ instance.id }}/delete"
                        hx-confirm="{{ t('admin_instances_delete_confirm', page_locale()) }}"
                    >
                        {{ t('delete', page_locale()) }}
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="px-6 py-8 text-center text-sm text-slate-500" colspan="8">{{ t('admin_instances_empty', page_locale()) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
