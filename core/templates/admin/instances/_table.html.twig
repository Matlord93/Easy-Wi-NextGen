<div class="p-6 border-b border-slate-200 flex items-center justify-between">
    <div>
        <h2 class="text-lg font-semibold">{{ t('admin_instances_table_title', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('admin_instances_table_intro', page_locale()) }}</p>
    </div>
</div>
<div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_id', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_customer', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_template', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_node', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_resources', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_disk', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_status', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_updated', page_locale()) }}</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_sftp', page_locale()) }}</th>
            <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-wide text-slate-700">{{ t('admin_instances_table_actions', page_locale()) }}</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-slate-200 bg-white">
        {% for instance in instances %}
            {% set statusColor = instance.status == 'running'
                ? 'text-emerald-600 bg-emerald-50'
                : (instance.status == 'suspended'
                    ? 'text-amber-700 bg-amber-50'
                    : (instance.status == 'error'
                        ? 'text-rose-600 bg-rose-50'
                        : (instance.status == 'pending_setup'
                            ? 'text-amber-700 bg-amber-50'
                            : (instance.status == 'provisioning'
                                ? 'text-indigo-600 bg-indigo-50'
                                : 'text-slate-600 bg-slate-100')))) %}
            {% set diskStateStyles = {
                'ok': 'text-emerald-700 bg-emerald-50',
                'warning': 'text-amber-700 bg-amber-50',
                'over_limit': 'text-rose-700 bg-rose-50',
                'hard_block': 'text-rose-700 bg-rose-100'
            } %}
            {% set diskBadge = diskStateStyles[instance.disk_state] ?? 'text-slate-600 bg-slate-100' %}
            {% set diskPercent = instance.disk_percent|default(0) %}
            {% set diskBarWidth = diskPercent > 100 ? 100 : diskPercent %}
            <tr class="hover:bg-slate-50">
                <td class="px-6 py-4 text-sm text-slate-600">#{{ instance.id }}</td>
                <td class="px-6 py-4 text-sm text-slate-600">{{ instance.customer_email }}</td>
                <td class="px-6 py-4 text-sm text-slate-600">
                    <div class="font-medium text-slate-900">{{ instance.template_name }}</div>
                    <div class="text-xs text-slate-700">{{ instance.game_key }}</div>
                </td>
                <td class="px-6 py-4 text-sm text-slate-600">{{ instance.node }}</td>
                <td class="px-6 py-4 text-sm text-slate-600">
                    {{ instance.cpu_limit }} vCPU · {{ instance.ram_limit }} MB · {{ instance.disk_limit }} MB
                </td>
                <td class="px-6 py-4 text-sm text-slate-600">
                    <div class="flex items-center gap-2">
                        <span class="rounded-full px-2.5 py-1 text-[11px] font-semibold {{ diskBadge }}">{{ instance.disk_state|replace({'_': ' '})|title }}</span>
                        <span class="text-xs text-slate-600">{{ instance.disk_used_human }} / {{ instance.disk_limit_human }}</span>
                    </div>
                    <div class="mt-2 h-2 w-full rounded-full bg-slate-100">
                        <div class="h-2 rounded-full bg-indigo-500" style="width: {{ diskBarWidth }}%"></div>
                    </div>
                    <div class="mt-1 text-[11px] text-slate-500">
                        {{ t('admin_instances_disk_last_scan', page_locale()) }}: {{ instance.disk_last_scanned_at ? instance.disk_last_scanned_at|date('Y-m-d H:i') : '—' }}
                    </div>
                </td>
                <td class="px-6 py-4 text-sm">
                    <span class="rounded-full px-3 py-1 text-xs font-semibold {{ statusColor }}">{{ instance.status|replace({'_': ' '})|title }}</span>
                    {% if instance.install_error_code == 'INSTALL_APPROVAL_REQUIRED' %}
                        <div class="mt-1 text-xs font-semibold text-amber-600">Installationsfreigabe erforderlich</div>
                    {% endif %}
                </td>
                <td class="px-6 py-4 text-sm text-slate-700">{{ instance.updated_at ? instance.updated_at|date('Y-m-d H:i') : '—' }}</td>
                <td class="px-6 py-4 text-sm text-slate-700">
                    <div class="flex flex-col gap-2">
                        <span class="font-medium text-slate-900">{{ instance.sftp_username ?: '—' }}</span>
                        {% if not instance.sftp_ready %}
                            <span class="text-xs text-amber-600">{{ t('admin_instances_sftp_missing', page_locale()) }}</span>
                        {% endif %}
                    </div>
                </td>
                <td class="px-6 py-4 text-right text-sm">
                    <div class="flex flex-col items-end gap-2">
                        <div class="flex gap-2">
                            <button type="button" class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-600">{{ t('admin_instances_cleanup', page_locale()) }}</button>
                            <button type="button" class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-600">{{ t('admin_instances_file_manager', page_locale()) }}</button>
                        </div>
                        {% if not instance.sftp_ready %}
                            <button
                                class="rounded-lg border border-indigo-200 px-3 py-2 text-xs font-semibold text-indigo-600"
                                hx-post="/admin/instances/{{ instance.id }}/sftp/provision"
                            >
                                {{ t('admin_instances_sftp_provision', page_locale()) }}
                            </button>
                        {% endif %}
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/instances/{{ instance.id }}/delete"
                            hx-confirm="{{ t('admin_instances_delete_confirm', page_locale()) }}"
                        >
                            {{ t('delete', page_locale()) }}
                        </button>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="px-6 py-8 text-center text-sm text-slate-700" colspan="10">{{ t('admin_instances_empty', page_locale()) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
