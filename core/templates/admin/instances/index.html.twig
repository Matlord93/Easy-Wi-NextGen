{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_instances_title', page_locale()) }} Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">{{ t('admin_instances_title', page_locale()) }}</h1>
        <p class="text-sm text-slate-500">{{ t('admin_instances_intro', page_locale()) }}</p>
    </div>
    <div class="flex items-center gap-3">
        <button
            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
            hx-get="/admin/instances/table"
            hx-target="#instances-table"
            hx-swap="outerHTML"
        >{{ t('admin_instances_refresh', page_locale()) }}</button>
        <button
            class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white"
            hx-get="/admin/instances/form"
            hx-target="#instance-form"
            hx-swap="outerHTML"
        >{{ t('admin_instances_new', page_locale()) }}</button>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_instances_total', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold">{{ summary.total }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_instances_running', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-emerald-600">{{ summary.running }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_instances_provisioning', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-indigo-600">{{ summary.provisioning }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">{{ t('admin_instances_needs_attention', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-rose-500">{{ summary.error }}</p>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="space-y-6">
        <div id="instance-form"
             class="rounded-xl bg-white border border-slate-200"
             hx-get="/admin/instances/form"
             hx-trigger="instances-form-refresh from:body"
             hx-swap="outerHTML">
            {% include 'admin/instances/_form.html.twig' with { customers: customers, nodes: nodes, templates: templates, form: form } %}
        </div>
        <div id="instance-customer-form" class="rounded-xl bg-white border border-slate-200">
            {% include 'admin/instances/_customer_form.html.twig' with { customerForm: customerForm } %}
        </div>
    </div>
    <div class="lg:col-span-2">
        <div id="instances-table" class="rounded-xl bg-white border border-slate-200"
             hx-get="/admin/instances/table"
             hx-trigger="instances-changed from:body"
             hx-swap="outerHTML">
            {% include 'admin/instances/_table.html.twig' with { instances: instances } %}
        </div>
    </div>
</div>
{% endblock %}
