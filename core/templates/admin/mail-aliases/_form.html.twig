<div class="p-6 space-y-6">
    <div>
        <h2 class="text-lg font-semibold">{{ form.action == 'create' ? t('admin_mail_aliases_create_title', page_locale()) : t('admin_mail_aliases_edit_title', page_locale()) }}</h2>
        <p class="text-sm text-slate-500">{{ t('admin_mail_aliases_form_intro', page_locale()) }}</p>
    </div>

    {% if form.errors is not empty %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <ul class="list-disc pl-4 space-y-1">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-5"
        hx-post="{{ form.action_url }}"
        hx-target="#mail-alias-form"
        hx-swap="outerHTML"
    >
        <div class="space-y-2">
            <label class="block text-xs font-semibold text-slate-500 uppercase">{{ t('admin_mail_aliases_domain', page_locale()) }}</label>
            <select name="domain_id" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm" {{ form.action == 'update' ? 'disabled' : '' }}>
                <option value="">{{ t('admin_mail_aliases_domain_select', page_locale()) }}</option>
                {% for domain in domains %}
                    <option value="{{ domain.id }}" {{ domain.id == form.domain_id ? 'selected' : '' }}>{{ domain.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="space-y-2">
            <label class="block text-xs font-semibold text-slate-500 uppercase">{{ t('admin_mail_aliases_name', page_locale()) }}</label>
            <input
                type="text"
                name="local_part"
                value="{{ form.local_part }}"
                placeholder="{{ t('admin_mail_aliases_name_placeholder', page_locale()) }}"
                class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm"
                {{ form.action == 'update' ? 'disabled' : '' }}
            >
            {% if form.address %}
                <p class="text-xs text-slate-500">{{ t('admin_mail_aliases_address_label', page_locale()) }}</p>
                <p class="text-sm font-semibold text-slate-900 text-slate-700">{{ form.address }}</p>
            {% endif %}
        </div>

        <div class="space-y-2">
            <label class="block text-xs font-semibold text-slate-500 uppercase">{{ t('admin_mail_aliases_destinations', page_locale()) }}</label>
            <textarea
                name="destinations"
                rows="3"
                placeholder="{{ t('admin_mail_aliases_destinations_placeholder', page_locale()) }}"
                class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm"
            >{{ form.destinations }}</textarea>
            <p class="text-xs text-slate-500">{{ t('admin_mail_aliases_destinations_hint', page_locale()) }}</p>
        </div>

        <div class="flex items-center gap-2">
            <input id="alias-enabled" name="enabled" type="checkbox" value="1" class="h-4 w-4 rounded border-slate-300 text-indigo-600" {{ form.enabled ? 'checked' : '' }}>
            <label for="alias-enabled" class="text-sm text-slate-600">{{ t('admin_mail_aliases_enabled_forwarding', page_locale()) }}</label>
        </div>

        <div class="flex items-center gap-3">
            <button type="submit" class="rounded-lg px-4 py-2 text-sm font-medium text-white {{ form.submit_color }}">{{ form.submit_label }}</button>
            <button
                type="button"
                class="rounded-lg border border-slate-200 px-4 py-2 text-sm text-slate-600"
                hx-get="/admin/mail-aliases/form"
                hx-target="#mail-alias-form"
                hx-swap="outerHTML"
            >{{ t('reset', page_locale()) }}</button>
        </div>
    </form>
</div>
