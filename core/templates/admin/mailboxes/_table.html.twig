<div class="px-5 py-4 border-b border-slate-200 flex items-center justify-between">
    <div>
        <h2 class="text-lg font-semibold">{{ t('admin_mailboxes_inventory_title', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('admin_mailboxes_inventory_intro', page_locale()) }}</p>
    </div>
    <button
        class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
        hx-get="/admin/mailboxes/table"
        hx-target="#mailboxes-table"
        hx-swap="outerHTML"
    >{{ t('refresh', page_locale()) }}</button>
</div>
<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="bg-slate-50 text-slate-700">
        <tr>
            <th class="px-5 py-3 text-left text-xs font-semibold uppercase">{{ t('admin_mailboxes_table_mailbox', page_locale()) }}</th>
            <th class="px-5 py-3 text-left text-xs font-semibold uppercase">{{ t('admin_mailboxes_table_customer', page_locale()) }}</th>
            <th class="px-5 py-3 text-left text-xs font-semibold uppercase">{{ t('admin_mailboxes_table_quota', page_locale()) }}</th>
            <th class="px-5 py-3 text-left text-xs font-semibold uppercase">{{ t('status', page_locale()) }}</th>
            <th class="px-5 py-3 text-left text-xs font-semibold uppercase">{{ t('updated', page_locale()) }}</th>
            <th class="px-5 py-3 text-right text-xs font-semibold uppercase">{{ t('actions', page_locale()) }}</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
        {% for mailbox in mailboxes %}
            <tr class="text-slate-700">
                <td class="px-5 py-4">
                    <div class="font-semibold">{{ mailbox.address }}</div>
                    <div class="text-xs text-slate-700">Domain {{ mailbox.domain.name }}</div>
                </td>
                <td class="px-5 py-4">
                    <div class="font-semibold">{{ mailbox.customer.email }}</div>
                    <div class="text-xs text-slate-700">ID {{ mailbox.customer.id }}</div>
                </td>
                <td class="px-5 py-4 text-slate-600">{{ mailbox.quota }}</td>
                <td class="px-5 py-4">
                    {% if mailbox.enabled %}
                        <span class="inline-flex items-center rounded-full border border-emerald-200 bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700">{{ t('admin_status_enabled', page_locale()) }}</span>
                    {% else %}
                        <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ t('admin_status_disabled', page_locale()) }}</span>
                    {% endif %}
                </td>
                <td class="px-5 py-4 text-xs text-slate-700">{{ mailbox.updatedAt|date('Y-m-d H:i') }}</td>
                <td class="px-5 py-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
                            hx-get="/admin/mailboxes/{{ mailbox.id }}/edit"
                            hx-target="#mailbox-form"
                            hx-swap="outerHTML"
                        >{{ t('edit', page_locale()) }}</button>
                        {% if mailbox.enabled %}
                            <button
                                class="rounded-lg border border-rose-200 bg-rose-50 px-3 py-2 text-xs font-semibold text-rose-600"
                                hx-post="/admin/mailboxes/{{ mailbox.id }}/disable"
                                hx-target="#mailboxes-table"
                                hx-swap="outerHTML"
                            >{{ t('disable', page_locale()) }}</button>
                        {% else %}
                            <button
                                class="rounded-lg border border-emerald-200 bg-emerald-50 px-3 py-2 text-xs font-semibold text-emerald-600"
                                hx-post="/admin/mailboxes/{{ mailbox.id }}/enable"
                                hx-target="#mailboxes-table"
                                hx-swap="outerHTML"
                            >{{ t('enable', page_locale()) }}</button>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="px-5 py-8 text-center text-sm text-slate-700">
                    No mailboxes yet. Create one to start provisioning mail delivery.
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
