<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="border-b border-slate-200 bg-slate-50 text-left text-xs uppercase text-slate-600">
            <tr>
                <th class="px-5 py-3">Name</th>
                <th class="px-5 py-3">Kategorie</th>
                <th class="px-5 py-3">Preis/Monat</th>
                <th class="px-5 py-3">Ressourcen</th>
                <th class="px-5 py-3">Status</th>
                <th class="px-5 py-3 text-right">Aktion</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
            {% for product in products %}
                <tr>
                    <td class="px-5 py-4 font-medium text-slate-900">{{ product.name }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ product.category }}</td>
                    <td class="px-5 py-4 text-slate-600">€ {{ product.price_monthly }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ product.cpu_limit }} CPU · {{ product.ram_limit }} GB RAM · {{ product.disk_limit }} GB</td>
                    <td class="px-5 py-4">
                        <span class="inline-flex rounded-full border px-2.5 py-1 text-xs font-semibold {{ product.is_active ? 'border-emerald-200 bg-emerald-50 text-emerald-700' : 'border-slate-200 bg-slate-50 text-slate-600' }}">
                            {{ product.is_active ? 'Aktiv' : 'Inaktiv' }}
                        </span>
                    </td>
                    <td class="px-5 py-4 text-right">
                        <div class="flex items-center justify-end gap-2">
                            <button class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700" hx-get="/admin/shop/products/{{ product.id }}/edit" hx-target="#shop-products-form">
                                Bearbeiten
                            </button>
                            <button class="rounded-lg border border-rose-200 bg-rose-50 px-3 py-2 text-xs font-semibold text-rose-600" hx-post="/admin/shop/products/{{ product.id }}/delete" hx-confirm="Produkt löschen?" hx-swap="none">
                                Löschen
                            </button>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-6 text-center text-slate-600">Noch keine Produkte.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
