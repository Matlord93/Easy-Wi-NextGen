<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="border-b border-slate-200 bg-slate-50 text-left text-xs uppercase text-slate-600">
            <tr>
                <th class="px-5 py-3">Name</th>
                <th class="px-5 py-3">Slug</th>
                <th class="px-5 py-3">Sortierung</th>
                <th class="px-5 py-3 text-right">Aktion</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
            {% for category in categories %}
                <tr>
                    <td class="px-5 py-4 font-medium text-slate-900">{{ category.name }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ category.slug }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ category.sort_order }}</td>
                    <td class="px-5 py-4 text-right">
                        <div class="flex items-center justify-end gap-2">
                            <button class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700" hx-get="/admin/shop/categories/{{ category.id }}/edit" hx-target="#shop-categories-form">
                                Bearbeiten
                            </button>
                            <button class="rounded-lg border border-rose-200 bg-rose-50 px-3 py-2 text-xs font-semibold text-rose-600" hx-post="/admin/shop/categories/{{ category.id }}/delete" hx-confirm="Kategorie löschen?" hx-swap="none">
                                Löschen
                            </button>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-5 py-6 text-center text-slate-600">Noch keine Kategorien.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
