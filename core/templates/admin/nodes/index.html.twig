{% extends 'admin/base.html.twig' %}

{% block title %}Nodes · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">Nodes</h1>
        <p class="text-sm text-slate-500">Monitor agent-backed infrastructure and capacity.</p>
    </div>
    <div class="flex items-center gap-3">
        {% if summary.latestVersion %}
            <span class="inline-flex items-center rounded-full border border-indigo-200 bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
                {{ updateChannel|upper }} channel · {{ summary.latestVersion }}
            </span>
            <span class="inline-flex items-center rounded-full border border-amber-200 bg-amber-50 px-3 py-1 text-xs font-semibold text-amber-700">
                {{ summary.updates }} update{{ summary.updates == 1 ? '' : 's' }} available
            </span>
        {% else %}
            <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-500">
                Release check unavailable
            </span>
        {% endif %}
        <button
            class="rounded-lg border border-indigo-200 bg-indigo-50 px-4 py-2 text-sm font-semibold text-slate-900 text-indigo-700"
            hx-post="/admin/nodes/update"
            hx-target="#nodes-table"
            hx-swap="outerHTML"
        >Update Agents</button>
        <a href="/admin/nodes/register" class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700">Register Node</a>
        <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white">Provision Node</button>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Total Nodes</p>
        <p class="mt-2 text-2xl font-semibold">{{ summary.total }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Online</p>
        <p class="mt-2 text-2xl font-semibold text-emerald-600">{{ summary.online }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Stale</p>
        <p class="mt-2 text-2xl font-semibold text-amber-500">{{ summary.stale }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Offline</p>
        <p class="mt-2 text-2xl font-semibold text-rose-500">{{ summary.offline }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Updates Available</p>
        <p class="mt-2 text-2xl font-semibold text-amber-500">{{ summary.updates }}</p>
        <p class="mt-1 text-xs text-slate-400">{{ summary.latestVersion ?? 'Release check unavailable' }}</p>
    </div>
</div>

<div class="rounded-xl bg-white border border-slate-200">
    <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200">
        <div>
            <h2 class="text-lg font-semibold">Node Fleet</h2>
            <p class="text-sm text-slate-500">Provision, update, and monitor status in real time.</p>
        </div>
        <button
            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
            hx-get="/admin/nodes/table"
            hx-target="#nodes-table"
            hx-swap="outerHTML"
        >Refresh</button>
    </div>
    {% include 'admin/nodes/_table.html.twig' with { nodes: nodes, updateChannel: updateChannel } %}
</div>
{% endblock %}
