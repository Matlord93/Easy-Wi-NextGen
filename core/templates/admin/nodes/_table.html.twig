{% set statusStyles = {
    'online': 'bg-emerald-50 text-emerald-700 border-emerald-200',
    'stale': 'bg-amber-50 text-amber-700 border-amber-200',
    'offline': 'bg-rose-50 text-rose-700 border-rose-200',
    'provisioning': 'bg-indigo-50 text-indigo-700 border-indigo-200',
    'maintenance': 'bg-slate-100 text-slate-700 border-slate-200'
} %}

{% set roleStyles = {
    'web': 'bg-indigo-50 text-indigo-700 border-indigo-200',
    'mail': 'bg-amber-50 text-amber-700 border-amber-200',
    'dns': 'bg-sky-50 text-sky-700 border-sky-200',
    'game': 'bg-emerald-50 text-emerald-700 border-emerald-200',
    'db': 'bg-purple-50 text-purple-700 border-purple-200'
} %}

{% set updateJobStyles = {
    'queued': 'bg-slate-100 text-slate-700 border-slate-200',
    'running': 'bg-sky-50 text-sky-700 border-sky-200',
    'succeeded': 'bg-emerald-50 text-emerald-700 border-emerald-200',
    'failed': 'bg-rose-50 text-rose-700 border-rose-200',
    'cancelled': 'bg-amber-50 text-amber-700 border-amber-200'
} %}

<div id="nodes-table" class="overflow-x-auto" hx-get="/admin/nodes/table" hx-trigger="every 15s" hx-swap="outerHTML">
    {% if notice is defined or error is defined %}
        <div class="px-5 pt-4">
            {% if notice is defined and notice %}
                <div class="mb-3 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-2 text-sm text-emerald-700">
                    {{ notice }}
                </div>
            {% endif %}
            {% if error %}
                <div class="mb-3 rounded-lg border border-rose-200 bg-rose-50 px-4 py-2 text-sm text-rose-700">
                    {{ error }}
                </div>
            {% endif %}
        </div>
    {% endif %}
    <table class="min-w-full text-sm">
        <thead class="bg-slate-50 text-slate-500 uppercase text-xs">
        <tr>
            <th class="px-5 py-3 text-left font-medium">{{ t('admin_nodes_table_node', page_locale()) }}</th>
            <th class="px-5 py-3 text-left font-medium">{{ t('admin_nodes_table_role', page_locale()) }}</th>
            <th class="px-5 py-3 text-left font-medium">{{ t('status', page_locale()) }}</th>
            <th class="px-5 py-3 text-left font-medium">{{ t('admin_nodes_table_last_seen', page_locale()) }}</th>
            <th class="px-5 py-3 text-left font-medium">{{ t('admin_nodes_table_version', page_locale()) }}</th>
            <th class="px-5 py-3 text-left font-medium">{{ t('admin_nodes_table_actions', page_locale()) }}</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
        {% for node in nodes %}
            <tr class="hover:bg-slate-50">
                <td class="px-5 py-4">
                    <div class="font-medium">{{ node.name ?? t('admin_nodes_unnamed', page_locale()) }}</div>
                    <div class="text-xs text-slate-500">{{ node.id }}</div>
                    {% if node.lastHeartbeatIp %}
                        <div class="text-xs text-slate-400">{{ t('admin_nodes_last_ip', page_locale())|replace({'%ip%': node.lastHeartbeatIp}) }}</div>
                    {% endif %}
                </td>
                <td class="px-5 py-4">
                    <div class="flex flex-wrap gap-2">
                        {% for role in node.roles %}
                            {% set roleKey = role|lower %}
                            {% set roleStyle = roleStyles[roleKey] ?? 'bg-slate-100 text-slate-600 border-slate-200' %}
                            <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ roleStyle }}">
                                {{ role }}
                            </span>
                        {% endfor %}
                    </div>
                    <form
                        class="mt-3 space-y-2"
                        hx-post="/admin/nodes/{{ node.id }}/roles"
                        hx-target="#nodes-table"
                        hx-swap="outerHTML"
                    >
                        <div class="grid grid-cols-2 gap-2">
                            {% for roleOption in roleOptions %}
                                <label class="flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-2 py-1 text-xs font-medium text-slate-600">
                                    <input
                                        type="checkbox"
                                        name="roles[]"
                                        value="{{ roleOption }}"
                                        class="h-3 w-3 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500"
                                        {% if roleOption|lower in node.roleKeys %}checked{% endif %}
                                    >
                                    {{ roleOption }}
                                </label>
                            {% endfor %}
                        </div>
                        <button class="rounded-lg bg-indigo-600 px-3 py-1.5 text-xs font-semibold text-white">{{ t('admin_nodes_update_roles', page_locale()) }}</button>
                    </form>
                </td>
                <td class="px-5 py-4">
                    {% set style = statusStyles[node.status] ?? 'bg-slate-100 text-slate-600 border-slate-200' %}
                    <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ style }}">
                        {{ node.status|title }}
                    </span>
                </td>
                <td class="px-5 py-4 text-slate-500">
                    {% if node.lastSeenAt %}
                        <div class="text-sm font-medium text-slate-700">{{ node.lastSeenAt|date('Y-m-d H:i') }}</div>
                        <div class="text-xs text-slate-400">{{ t('admin_nodes_heartbeat', page_locale())|replace({'%time%': node.lastHeartbeatAt ? node.lastHeartbeatAt|date('Y-m-d H:i') : '—'}) }}</div>
                        <div class="text-xs text-slate-400">{{ t('admin_nodes_updated', page_locale())|replace({'%time%': node.updatedAt|date('Y-m-d H:i')}) }}</div>
                    {% else %}
                        <span class="text-xs text-slate-400">{{ t('admin_nodes_never_reported', page_locale()) }}</span>
                    {% endif %}
                </td>
                <td class="px-5 py-4 text-slate-500">
                    <div class="flex flex-col gap-1">
                        <span class="text-sm font-medium text-slate-700">{{ node.lastHeartbeatVersion ?? '—' }}</span>
                        {% if updateChannel is defined %}
                            <span class="inline-flex w-fit items-center rounded-full border border-slate-200 bg-slate-50 px-2 py-0.5 text-[11px] font-semibold text-slate-500">
                                {{ t('admin_nodes_channel', page_locale())|replace({'%channel%': updateChannel|upper}) }}
                            </span>
                        {% endif %}
                        {% if node.updateAvailable is same as(true) %}
                            <span class="inline-flex w-fit items-center rounded-full border border-amber-200 bg-amber-50 px-2 py-0.5 text-[11px] font-semibold text-amber-700">
                                {{ t('admin_nodes_update_available', page_locale()) }}
                            </span>
                        {% elseif node.updateAvailable is same as(false) and node.lastHeartbeatVersion %}
                            <span class="inline-flex w-fit items-center rounded-full border border-emerald-200 bg-emerald-50 px-2 py-0.5 text-[11px] font-semibold text-emerald-700">
                                {{ t('admin_nodes_up_to_date', page_locale()) }}
                            </span>
                        {% else %}
                            <span class="inline-flex w-fit items-center rounded-full border border-slate-200 bg-slate-50 px-2 py-0.5 text-[11px] font-semibold text-slate-500">
                                {{ t('admin_nodes_unknown', page_locale()) }}
                            </span>
                        {% endif %}
                        {% if node.updateJob %}
                            {% set updateStyle = updateJobStyles[node.updateJob.status] ?? 'bg-slate-100 text-slate-600 border-slate-200' %}
                            <span class="inline-flex w-fit items-center rounded-full border px-2 py-0.5 text-[11px] font-semibold {{ updateStyle }}">
                                {{ t('admin_nodes_update_status', page_locale())|replace({'%status%': node.updateJob.status|title}) }}
                            </span>
                            <span class="text-[11px] text-slate-400">
                                {{ node.updateJob.updatedAt|date('Y-m-d H:i') }}
                                {% if node.updateJob.resultMessage %}· {{ node.updateJob.resultMessage }}{% endif %}
                            </span>
                        {% else %}
                            <span class="text-[11px] text-slate-400">{{ t('admin_nodes_no_update_job', page_locale()) }}</span>
                        {% endif %}
                    </div>
                </td>
                <td class="px-5 py-4">
                    <div class="flex items-center gap-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-1.5 text-xs font-semibold text-slate-600"
                            hx-post="/admin/nodes/{{ node.id }}/provision"
                            hx-target="#nodes-table"
                            hx-swap="outerHTML"
                            hx-confirm="Provision {{ node.name ?? node.id }}?"
                        >{{ t('admin_nodes_provision', page_locale()) }}</button>
                        <button
                            class="rounded-lg bg-slate-900 px-3 py-1.5 text-xs font-semibold text-white"
                            hx-post="/admin/nodes/{{ node.id }}/update"
                            hx-target="#nodes-table"
                            hx-swap="outerHTML"
                        >{{ t('update', page_locale()) }}</button>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="px-5 py-8 text-center text-slate-400">{{ t('admin_nodes_empty', page_locale()) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
