{% extends 'admin/base.html.twig' %}

{% block title %}{{ t('admin_gdpr_retention_title', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">{{ t('admin_gdpr_retention_heading', page_locale()) }}</h1>
        <p class="text-sm text-slate-500">{{ t('admin_gdpr_retention_intro', page_locale()) }}</p>
    </div>
    {% if saved %}
        <span class="inline-flex items-center rounded-full border border-emerald-200 bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700">{{ t('admin_gdpr_retention_saved', page_locale()) }}</span>
    {% endif %}
</div>

<div class="rounded-xl bg-white border border-slate-200">
        <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold">{{ t('admin_gdpr_retention_windows_title', page_locale()) }}</h2>
                <p class="text-sm text-slate-500">{{ t('admin_gdpr_retention_windows_intro', page_locale()) }}</p>
            </div>
            <span class="text-xs text-slate-400">{{ t('admin_gdpr_retention_last_update', page_locale()) }} {{ policy.updatedAt ? policy.updatedAt|date('Y-m-d H:i') : '—' }}</span>
        </div>
    <form method="post" action="/admin/gdpr/retention" class="px-5 py-5 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">{{ t('admin_gdpr_retention_tickets', page_locale()) }}</label>
                <input type="number" min="1" name="ticket_retention_days" value="{{ policy.ticketRetentionDays }}" class="mt-1 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            </div>
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">{{ t('admin_gdpr_retention_logs', page_locale()) }}</label>
                <input type="number" min="1" name="log_retention_days" value="{{ policy.logRetentionDays }}" class="mt-1 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            </div>
            <div>
                <label class="text-xs font-semibold uppercase text-slate-500">{{ t('admin_gdpr_retention_sessions', page_locale()) }}</label>
                <input type="number" min="1" name="session_retention_days" value="{{ policy.sessionRetentionDays }}" class="mt-1 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
            </div>
        </div>
        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-xs text-slate-500">
            {{ t('admin_gdpr_retention_command', page_locale())|raw }}
        </div>
        <div class="flex justify-end">
            <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-slate-900 text-white hover:bg-indigo-500">{{ t('admin_gdpr_retention_save', page_locale()) }}</button>
        </div>
    </form>
</div>
{% endblock %}
