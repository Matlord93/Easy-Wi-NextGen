<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">{{ t('title', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('version', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('size', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('visibility', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('updated', page_locale()) }}</th>
                <th class="px-5 py-3 text-right font-semibold">{{ t('actions', page_locale()) }}</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for item in items %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">
                        <div>{{ item.title }}</div>
                        <div class="text-xs text-slate-500 truncate max-w-xs">{{ item.url }}</div>
                    </td>
                    <td class="px-5 py-4 text-slate-600">{{ item.version ?: '—' }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ item.file_size ?: '—' }}</td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if item.visible_public %}
                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">{{ t('public', page_locale()) }}</span>
                        {% else %}
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ t('hidden', page_locale()) }}</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-500">{{ item.updated_at ? item.updated_at|date('Y-m-d H:i') : '—' }}</td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            hx-get="/admin/downloads/{{ item.id }}/edit"
                            hx-target="#download-form"
                            hx-swap="outerHTML"
                        >
                            {{ t('edit', page_locale()) }}
                        </button>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/downloads/{{ item.id }}/delete"
                            hx-confirm="{{ t('admin_downloads_delete_confirm', page_locale())|replace({'%title%': item.title}) }}"
                        >
                            {{ t('delete', page_locale()) }}
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-6 text-center text-sm text-slate-500">{{ t('admin_downloads_empty', page_locale()) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
