<div class="px-5 py-4">
    <div class="mb-4">
        <h2 class="text-lg font-semibold">{{ form.action == 'create' ? 'Add download' : 'Edit download' }}</h2>
        <p class="text-sm text-slate-500">{{ t('admin_downloads_form_intro', page_locale()) }}</p>
    </div>

    {% if form.errors is not empty %}
        <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold">{{ t('admin_form_fix_following', page_locale()) }}</p>
            <ul class="list-disc pl-5 mt-2">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-4"
        hx-post="{{ form.action_url }}"
        hx-target="#download-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">{{ t('title', page_locale()) }}</label>
            <input type="text" name="title" value="{{ form.title }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Easy-Wi Launcher">
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">{{ t('url', page_locale()) }}</label>
            <input type="url" name="url" value="{{ form.url }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="https://example.com/downloads/launcher.zip">
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">{{ t('description', page_locale()) }}</label>
            <textarea name="description" rows="3" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Short summary">{{ form.description }}</textarea>
        </div>
        <div class="grid gap-4 sm:grid-cols-3">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">{{ t('version', page_locale()) }}</label>
                <input type="text" name="version" value="{{ form.version }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="v2.4.1">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">{{ t('admin_downloads_file_size', page_locale()) }}</label>
                <input type="text" name="file_size" value="{{ form.file_size }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="92 MB">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">{{ t('admin_downloads_sort_order', page_locale()) }}</label>
                <input type="number" name="sort_order" value="{{ form.sort_order }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" step="1">
            </div>
        </div>
        <div class="grid gap-3 sm:grid-cols-1">
            <label class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-600">
                <input type="checkbox" name="visible_public" class="rounded border-slate-300 text-indigo-600" {% if form.visible_public %}checked{% endif %}>
                Visible (Public)
            </label>
        </div>
        <button type="submit" class="w-full rounded-lg px-4 py-2 text-sm font-semibold text-slate-900 text-white {{ form.submit_color }} hover:opacity-90">{{ form.submit_label }}</button>
    </form>
</div>
