<div id="cms-pages-table" class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">{{ t('page', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('slug', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('status', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('blocks', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('updated', page_locale()) }}</th>
                <th class="px-5 py-3 text-right font-semibold">{{ t('actions', page_locale()) }}</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for page in pages %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4">
                        <div class="font-semibold text-slate-900">{{ page.title }}</div>
                        <div class="text-xs text-slate-500">ID #{{ page.id }}</div>
                    </td>
                    <td class="px-5 py-4 text-slate-600">/{{ page.slug }}</td>
                    <td class="px-5 py-4">
                        {% if page.is_published %}
                            <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700">{{ t('published', page_locale()) }}</span>
                        {% else %}
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ t('draft', page_locale()) }}</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-600">{{ page.block_count }}</td>
                    <td class="px-5 py-4 text-slate-500">{{ page.updated_at|date('Y-m-d H:i') }}</td>
                    <td class="px-5 py-4 text-right">
                        <div class="flex items-center justify-end gap-2">
                            <button
                                class="inline-flex items-center rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50"
                                hx-get="/admin/cms/pages/{{ page.id }}/edit"
                                hx-target="#cms-page-form"
                                hx-swap="outerHTML"
                            >
                                {{ t('edit', page_locale()) }}
                            </button>
                            <a href="/admin/cms/pages/{{ page.id }}" class="inline-flex items-center rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700">{{ t('manage_blocks', page_locale()) }}</a>
                            <button
                                class="inline-flex items-center rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-700 hover:bg-rose-50"
                                hx-post="/admin/cms/pages/{{ page.id }}/delete"
                                hx-confirm="{{ t('delete_page_confirm', page_locale()) }}"
                            >
                                {{ t('delete', page_locale()) }}
                            </button>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-5 py-6 text-center text-sm text-slate-500">{{ t('no_cms_pages', page_locale()) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
