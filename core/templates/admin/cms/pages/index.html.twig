{% extends 'admin/base.html.twig' %}


{% block content %}
<div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">{{ t('cms_pages_title', page_locale()) }}</h1>
        <p class="text-sm text-slate-700">{{ t('cms_pages_description', page_locale()) }}</p>
    </div>
    <div class="flex items-center gap-3">
        <span class="inline-flex items-center rounded-full border border-indigo-200 bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">
            {{ summary.total }} {{ summary.total == 1 ? t('cms_page_singular', page_locale()) : t('cms_page_plural', page_locale()) }} {{ t('cms_pages_tracked_suffix', page_locale()) }}
        </span>
        <button
            class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700"
            hx-get="/admin/cms/pages/table"
            hx-target="#cms-pages-table"
            hx-swap="outerHTML"
        >{{ t('refresh', page_locale()) }}</button>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-700">{{ t('total_pages', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold">{{ summary.total }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-700">{{ t('published', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-emerald-600">{{ summary.published }}</p>
        <p class="mt-1 text-xs text-slate-600">{{ t('live_pages_visible', page_locale()) }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-700">{{ t('blocks', page_locale()) }}</p>
        <p class="mt-2 text-2xl font-semibold text-indigo-600">{{ summary.blocks }}</p>
        <p class="mt-1 text-xs text-slate-600">{{ t('structured_content_blocks', page_locale()) }}</p>
    </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-[1.2fr_0.8fr]">
    <div class="rounded-xl bg-white border border-slate-200">
        <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold">{{ t('pages_overview', page_locale()) }}</h2>
                <p class="text-sm text-slate-700">{{ t('pages_overview_description', page_locale()) }}</p>
            </div>
            <button
                class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
                hx-get="/admin/cms/pages/table"
                hx-target="#cms-pages-table"
                hx-swap="outerHTML"
            >{{ t('refresh', page_locale()) }}</button>
        </div>
        {% include 'admin/cms/pages/_table.html.twig' with { pages: pages } %}
    </div>

    <div class="space-y-6">
        <div class="rounded-xl bg-white border border-slate-200" id="cms-template-form">
            {% include 'admin/cms/pages/_template_form.html.twig' with { templateForm: templateForm, templates: templates } %}
        </div>
        <div class="rounded-xl bg-white border border-slate-200" id="cms-page-form" hx-trigger="cms-pages-changed from:body" hx-get="/admin/cms/pages/form" hx-swap="outerHTML">
            {% include 'admin/cms/pages/_form.html.twig' with { form: form } %}
        </div>
    </div>
</div>
{% endblock %}
