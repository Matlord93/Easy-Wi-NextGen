<div class="px-5 py-4">
    <div class="mb-4">
        <h2 class="text-lg font-semibold">Create a CMS page</h2>
        <p class="text-sm text-slate-500">Define a slug and publishing status for the new page.</p>
    </div>

    {% if form.errors is not empty %}
        <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold">Please fix the following:</p>
            <ul class="list-disc pl-5 mt-2">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-4"
        hx-post="/admin/cms/pages"
        hx-target="#cms-page-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Title</label>
            <input type="text" name="title" value="{{ form.title }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Homepage, Pricing, FAQ">
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Slug</label>
            <input type="text" name="slug" value="{{ form.slug }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="pricing">
        </div>
        <label class="flex items-center gap-2 text-sm text-slate-600">
            <input type="checkbox" name="is_published" class="rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" {% if form.is_published %}checked{% endif %}>
            Publish immediately
        </label>
        <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-700">Create page</button>
    </form>
</div>
