<div class="p-5 border-b border-slate-200">
    <h2 class="text-lg font-semibold">{{ t('cms_template_title', page_locale()) }}</h2>
    <p class="text-sm text-slate-500">{{ t('cms_template_description', page_locale()) }}</p>
</div>
<div class="p-5 space-y-4">
    {% if templateForm.success %}
        <div class="rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            {{ t('cms_template_selected_success', page_locale()) }}
        </div>
    {% endif %}

    {% if templateForm.errors is not empty %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold">{{ t('please_fix_following', page_locale()) }}</p>
            <ul class="list-disc pl-5 mt-2 space-y-1">
                {% for error in templateForm.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-4"
        hx-post="/admin/cms/pages/template"
        hx-target="#cms-template-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="text-xs font-semibold uppercase text-slate-500">{{ t('select_cms_template', page_locale()) }}</label>
            <select name="template_key" class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                <option value="">{{ t('select_cms_template_placeholder', page_locale()) }}</option>
                {% for template in templates %}
                    <option value="{{ template.key }}" {% if templateForm.template_key == template.key %}selected{% endif %}>
                        {{ template.label }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <label class="flex items-center gap-3 text-sm text-slate-600">
            <input type="checkbox" name="apply_template" class="rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" {% if templateForm.apply_template %}checked{% endif %}>
            <span>{{ t('cms_template_apply_now', page_locale()) }}</span>
        </label>
        <p class="text-xs text-slate-400">{{ t('cms_template_apply_help', page_locale()) }}</p>

        <button class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700">
            {{ t('save', page_locale()) }}
        </button>
    </form>

    <div class="space-y-4">
        {% for template in templates %}
            <div class="rounded-xl border border-slate-200 bg-white p-4">
                <div class="flex items-start justify-between gap-4">
                    <div>
                        <p class="text-sm font-semibold text-slate-900">{{ template.label }}</p>
                        <p class="mt-1 text-xs text-slate-500">{{ template.description }}</p>
                    </div>
                    {% if templateForm.template_key == template.key %}
                        <span class="rounded-full bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600">{{ t('selected', page_locale()) }}</span>
                    {% endif %}
                </div>
                <div class="mt-3 text-xs text-slate-500">
                    <span class="font-semibold text-slate-600">{{ t('cms_template_pages_included', page_locale()) }}</span>
                    <span>{{ template.pages|map(page => page.title)|join(', ') }}</span>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
