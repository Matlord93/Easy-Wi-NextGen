<div class="px-5 py-4">
    <div class="mb-4">
        {% if blockForm.action == 'update' %}
            <h2 class="text-lg font-semibold">{{ t('edit_content_block', page_locale()) }}</h2>
            <p class="text-sm text-slate-700">{{ t('edit_content_block_description', page_locale()) }}</p>
        {% else %}
            <h2 class="text-lg font-semibold">{{ t('add_content_block', page_locale()) }}</h2>
            <p class="text-sm text-slate-700">{{ t('add_content_block_description', page_locale()) }}</p>
        {% endif %}
    </div>

    {% if blockForm.errors is not empty %}
        <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold">{{ t('please_fix_following', page_locale()) }}</p>
            <ul class="list-disc pl-5 mt-2">
                {% for error in blockForm.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-4"
        hx-post="/admin/cms/pages/{{ page.id }}/blocks{% if blockForm.action == 'update' %}/{{ blockForm.id }}{% endif %}"
        hx-target="#cms-block-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase mb-1">{{ t('block_type', page_locale()) }}</label>
            <input type="text" name="type" value="{{ blockForm.type }}" list="cms-block-types" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="{{ t('block_type_placeholder', page_locale()) }}">
            <datalist id="cms-block-types">
                <option value="server_list"></option>
                <option value="server_featured"></option>
            </datalist>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-700 uppercase mb-1">{{ t('content', page_locale()) }}</label>
            <textarea name="content" rows="6" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="{{ t('block_content_placeholder', page_locale()) }}">{{ blockForm.content }}</textarea>
        </div>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-4 space-y-3">
            <div class="text-xs font-semibold uppercase text-slate-700">{{ t('server_block_settings', page_locale()) }}</div>
            <div class="grid gap-3 sm:grid-cols-2">
                <div>
                    <label class="block text-xs font-semibold text-slate-700 uppercase mb-1">{{ t('game_filter', page_locale()) }}</label>
                    <input type="text" name="server_game" value="{{ blockForm.settings.game }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="{{ t('game_filter_placeholder', page_locale()) }}">
                </div>
                <div>
                    <label class="block text-xs font-semibold text-slate-700 uppercase mb-1">{{ t('limit', page_locale()) }}</label>
                    <input type="number" name="server_limit" value="{{ blockForm.settings.limit }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" min="1" max="100">
                </div>
            </div>
            <div class="grid gap-3 sm:grid-cols-2">
                <label class="inline-flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600">
                    <input type="checkbox" name="server_show_players" class="rounded border-slate-300 text-indigo-600" {% if blockForm.settings.show_players %}checked{% endif %}>
                    {{ t('show_players', page_locale()) }}
                </label>
                <label class="inline-flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600">
                    <input type="checkbox" name="server_show_join_button" class="rounded border-slate-300 text-indigo-600" {% if blockForm.settings.show_join_button %}checked{% endif %}>
                    {{ t('show_join_button', page_locale()) }}
                </label>
            </div>
            <p class="text-xs text-slate-700">{{ t('server_block_settings_help', page_locale())|raw }}</p>
        </div>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <button type="submit" class="w-full rounded-lg px-4 py-2 text-sm font-semibold text-white {{ blockForm.submit_color }}">{{ t(blockForm.submit_label, page_locale()) }}</button>
            {% if blockForm.action == 'update' %}
                <button
                    type="button"
                    class="w-full rounded-lg border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-600 hover:bg-slate-50 sm:w-auto"
                    hx-get="/admin/cms/pages/{{ page.id }}/blocks/form"
                    hx-target="#cms-block-form"
                    hx-swap="outerHTML"
                >
                    {{ t('cancel', page_locale()) }}
                </button>
            {% endif %}
        </div>
    </form>
</div>
