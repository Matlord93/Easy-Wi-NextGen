<div class="px-5 py-4">
    <div class="mb-4">
        <h2 class="text-lg font-semibold">Add content block</h2>
        <p class="text-sm text-slate-500">Keep blocks modular for flexible page layouts.</p>
    </div>

    {% if blockForm.errors is not empty %}
        <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold">Please fix the following:</p>
            <ul class="list-disc pl-5 mt-2">
                {% for error in blockForm.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-4"
        hx-post="/admin/cms/pages/{{ page.id }}/blocks"
        hx-target="#cms-block-form"
        hx-swap="outerHTML"
    >
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Block type</label>
            <input type="text" name="type" value="{{ blockForm.type }}" list="cms-block-types" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="hero, feature-grid, faq">
            <datalist id="cms-block-types">
                <option value="server_list"></option>
                <option value="server_featured"></option>
            </datalist>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Content</label>
            <textarea name="content" rows="6" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Markdown or HTML content">{{ blockForm.content }}</textarea>
        </div>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-4 space-y-3">
            <div class="text-xs font-semibold uppercase text-slate-500">Server block settings</div>
            <div class="grid gap-3 sm:grid-cols-2">
                <div>
                    <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Game filter</label>
                    <input type="text" name="server_game" value="{{ blockForm.settings.game }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="valheim">
                </div>
                <div>
                    <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Limit</label>
                    <input type="number" name="server_limit" value="{{ blockForm.settings.limit }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" min="1" max="100">
                </div>
            </div>
            <div class="grid gap-3 sm:grid-cols-2">
                <label class="inline-flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600">
                    <input type="checkbox" name="server_show_players" class="rounded border-slate-300 text-indigo-600" {% if blockForm.settings.show_players %}checked{% endif %}>
                    Show players
                </label>
                <label class="inline-flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600">
                    <input type="checkbox" name="server_show_join_button" class="rounded border-slate-300 text-indigo-600" {% if blockForm.settings.show_join_button %}checked{% endif %}>
                    Show join button
                </label>
            </div>
            <p class="text-xs text-slate-500">These settings apply to <strong>server_list</strong> and <strong>server_featured</strong> blocks only.</p>
        </div>
        <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-700">Add block</button>
    </form>
</div>
