{% if query is empty %}
    <div class="rounded-xl border border-slate-200 bg-white px-5 py-6 text-sm text-slate-400 dark:border-slate-800 dark:bg-slate-900">
        {{ t('no_results', page_locale()) }}
    </div>
{% else %}
    <div class="rounded-xl border border-slate-200 bg-white p-5 text-sm dark:border-slate-800 dark:bg-slate-900">
        <div class="grid gap-6 lg:grid-cols-2">
            <div>
                <h2 class="text-sm font-semibold text-slate-700 dark:text-slate-200">Customers</h2>
                <div class="mt-3 space-y-3">
                    {% for customer in results.customers %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3 dark:border-slate-800">
                            <p class="text-sm font-semibold">{{ customer.email }}</p>
                            <p class="text-xs text-slate-500">ID {{ customer.id }}</p>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-400">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-slate-700 dark:text-slate-200">Instances</h2>
                <div class="mt-3 space-y-3">
                    {% for instance in results.instances %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3 dark:border-slate-800">
                            <p class="text-sm font-semibold">Instance #{{ instance.id }} 路 {{ instance.template }}</p>
                            <p class="text-xs text-slate-500">{{ instance.customer }} 路 {{ instance.status|title }}</p>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-400">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-slate-700 dark:text-slate-200">Domains</h2>
                <div class="mt-3 space-y-3">
                    {% for domain in results.domains %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3 dark:border-slate-800">
                            <p class="text-sm font-semibold">{{ domain.name }}</p>
                            <p class="text-xs text-slate-500">{{ domain.customer }} 路 {{ domain.status|title }}</p>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-400">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-slate-700 dark:text-slate-200">Tickets</h2>
                <div class="mt-3 space-y-3">
                    {% for ticket in results.tickets %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3 dark:border-slate-800">
                            <p class="text-sm font-semibold">{{ ticket.subject }}</p>
                            <p class="text-xs text-slate-500">{{ ticket.customer }} 路 {{ ticket.status|title }}</p>
                            <a href="/admin/tickets/{{ ticket.id }}" class="mt-2 inline-flex text-xs font-semibold text-indigo-600">Open ticket</a>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-400">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}
