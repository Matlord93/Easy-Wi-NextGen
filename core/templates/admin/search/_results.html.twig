{% if query is empty %}
    <div class="rounded-xl border border-slate-200 bg-white px-5 py-6 text-sm text-slate-600">
        {{ t('no_results', page_locale()) }}
    </div>
{% else %}
    <div class="rounded-xl border border-slate-200 bg-white p-5 text-sm">
        <div class="grid gap-6 lg:grid-cols-2">
            <div>
                <h2 class="text-sm font-semibold text-slate-700">{{ t('admin_search_customers', page_locale()) }}</h2>
                <div class="mt-3 space-y-3">
                    {% for customer in results.customers %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3">
                            <p class="text-sm font-semibold text-slate-900">{{ customer.email }}</p>
                            <p class="text-xs text-slate-700">ID {{ customer.id }}</p>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-600">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-slate-700">{{ t('admin_search_instances', page_locale()) }}</h2>
                <div class="mt-3 space-y-3">
                    {% for instance in results.instances %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3">
                            <p class="text-sm font-semibold text-slate-900">Instance #{{ instance.id }} 路 {{ instance.template }}</p>
                            <p class="text-xs text-slate-700">{{ instance.customer }} 路 {{ instance.status|title }}</p>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-600">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-slate-700">{{ t('admin_search_domains', page_locale()) }}</h2>
                <div class="mt-3 space-y-3">
                    {% for domain in results.domains %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3">
                            <p class="text-sm font-semibold text-slate-900">{{ domain.name }}</p>
                            <p class="text-xs text-slate-700">{{ domain.customer }} 路 {{ domain.status|title }}</p>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-600">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h2 class="text-sm font-semibold text-slate-700">{{ t('admin_search_tickets', page_locale()) }}</h2>
                <div class="mt-3 space-y-3">
                    {% for ticket in results.tickets %}
                        <div class="rounded-lg border border-slate-100 px-4 py-3">
                            <p class="text-sm font-semibold text-slate-900">{{ ticket.subject }}</p>
                            <p class="text-xs text-slate-700">{{ ticket.customer }} 路 {{ ticket.status|title }}</p>
                            <a href="/admin/tickets/{{ ticket.id }}" class="mt-2 inline-flex text-xs font-semibold text-indigo-600">{{ t('admin_search_open_ticket', page_locale()) }}</a>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-600">{{ t('no_results', page_locale()) }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}
