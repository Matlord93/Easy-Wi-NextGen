{% extends 'admin/base.html.twig' %}

{% block title %}DDoS policy · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div>
        <h1 class="text-2xl font-semibold">DDoS policy</h1>
        <p class="text-sm text-slate-700">Apply mitigation policies and review live attack status from agents.</p>
    </div>

    {% if errors is not empty %}
        <div class="rounded-xl border border-rose-200 bg-rose-50 px-5 py-4 text-sm text-rose-700">
            <ul class="list-disc space-y-1 pl-4">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {% if ddosApplied %}
        <div class="rounded-xl border border-emerald-200 bg-emerald-50 px-5 py-4 text-sm text-emerald-700">
            DDoS policy jobs queued.
        </div>
    {% endif %}

    <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-5 py-4">
            <h2 class="text-lg font-semibold">Current attack status</h2>
            <p class="text-sm text-slate-700">Latest telemetry from ddos.status.check jobs.</p>
        </div>
        <div class="grid gap-4 px-5 py-5 md:grid-cols-2 xl:grid-cols-3">
            {% if statusPanels is empty %}
                <p class="text-sm text-slate-700">No nodes available yet.</p>
            {% else %}
                {% for panel in statusPanels %}
                    <div class="rounded-lg border border-slate-200 p-4">
                        <div class="flex items-start justify-between gap-3">
                            <div>
                                <p class="text-sm font-semibold text-slate-900">{{ panel.name }}</p>
                                <p class="text-xs text-slate-600">Node #{{ panel.id }}</p>
                            </div>
                            <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ panel.attackActive ? 'border-rose-200 bg-rose-50 text-rose-700' : 'border-emerald-200 bg-emerald-50 text-emerald-700' }}">
                                {{ panel.attackActive ? 'Attack active' : 'Idle' }}
                            </span>
                        </div>
                        <div class="mt-4 space-y-2 text-xs text-slate-700">
                            <div class="flex items-center justify-between">
                                <span>Packets per second</span>
                                <span class="font-medium text-slate-700">{{ panel.pps ?? '—' }}</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span>Connections</span>
                                <span class="font-medium text-slate-700">{{ panel.connCount ?? '—' }}</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span>Mode</span>
                                <span class="font-medium text-slate-700">{{ panel.mode ?? '—' }}</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span>Reported</span>
                                <span class="font-medium text-slate-700">{{ panel.reportedAt ? panel.reportedAt|date('Y-m-d H:i') : '—' }}</span>
                            </div>
                        </div>
                        <div class="mt-4">
                            <p class="text-xs font-semibold uppercase text-slate-600">Protected ports</p>
                            <div class="mt-2 flex flex-wrap gap-2">
                                {% if panel.ports is empty %}
                                    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-600">No ports reported</span>
                                {% else %}
                                    {% for port in panel.ports %}
                                        <span class="rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-600">
                                            {{ port }}
                                        </span>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                        <div class="mt-3">
                            <p class="text-xs font-semibold uppercase text-slate-600">Protocols</p>
                            <div class="mt-2 flex flex-wrap gap-2">
                                {% if panel.protocols is empty %}
                                    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-600">No protocols reported</span>
                                {% else %}
                                    {% for protocol in panel.protocols %}
                                        <span class="rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-600">
                                            {{ protocol|upper }}
                                        </span>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                        <div class="mt-4 border-t border-slate-100 pt-4">
                            <div class="flex items-center justify-between text-xs text-slate-700">
                                <span class="font-semibold uppercase text-slate-600">Policy</span>
                                <span class="font-medium">
                                    {% if panel.policyEnabled is same as(false) %}
                                        Disabled
                                    {% else %}
                                        {{ panel.policyMode ?? '—' }}
                                    {% endif %}
                                </span>
                            </div>
                            <div class="mt-2 space-y-2 text-xs text-slate-700">
                                <div class="flex items-center justify-between">
                                    <span>Applied</span>
                                    <span class="font-medium text-slate-700">{{ panel.policyAppliedAt ? panel.policyAppliedAt|date('Y-m-d H:i') : '—' }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span>Last update</span>
                                    <span class="font-medium text-slate-700">{{ panel.policyUpdatedAt ? panel.policyUpdatedAt|date('Y-m-d H:i') : '—' }}</span>
                                </div>
                            </div>
                            <div class="mt-3">
                                <p class="text-xs font-semibold uppercase text-slate-600">Policy ports</p>
                                <div class="mt-2 flex flex-wrap gap-2">
                                    {% if panel.policyPorts is empty %}
                                        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-600">No policy ports</span>
                                    {% else %}
                                        {% for port in panel.policyPorts %}
                                            <span class="rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-600">
                                                {{ port }}
                                            </span>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <div class="mt-3">
                                <p class="text-xs font-semibold uppercase text-slate-600">Policy protocols</p>
                                <div class="mt-2 flex flex-wrap gap-2">
                                    {% if panel.policyProtocols is empty %}
                                        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-600">No policy protocols</span>
                                    {% else %}
                                        {% for protocol in panel.policyProtocols %}
                                            <span class="rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs text-slate-600">
                                                {{ protocol|upper }}
                                            </span>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-5 py-4">
            <h2 class="text-lg font-semibold">Apply mitigation policy</h2>
            <p class="text-sm text-slate-700">Select nodes, ports, and protocols to update.</p>
        </div>
        <form method="post" action="/admin/ddos/apply" class="space-y-6 px-5 py-5">
            <div>
                <p class="text-xs font-semibold uppercase text-slate-700">Target nodes</p>
                <div class="mt-3 grid gap-3 md:grid-cols-2 xl:grid-cols-3">
                    {% for node in nodes %}
                        <label class="flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-700">
                            <input
                                type="checkbox"
                                name="nodes[]"
                                value="{{ node.id }}"
                                class="rounded border-slate-300 text-indigo-600 focus:ring-indigo-500"
                                {{ node.id in formData.nodes ? 'checked' : '' }}
                            >
                            <span>{{ node.name ?? 'Unnamed node' }} <span class="text-xs text-slate-500">#{{ node.id }}</span></span>
                        </label>
                    {% else %}
                        <p class="text-sm text-slate-700">No nodes available.</p>
                    {% endfor %}
                </div>
            </div>

            <div class="grid gap-6 lg:grid-cols-2">
                <div>
                    <label class="block text-xs font-semibold uppercase text-slate-700">Protected ports</label>
                    <select
                        name="ports[]"
                        multiple
                        size="7"
                        class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                    >
                        {% for port in portOptions %}
                            <option value="{{ port }}" {{ port in formData.ports ? 'selected' : '' }}>{{ port }}</option>
                        {% endfor %}
                    </select>
                    <p class="mt-2 text-xs text-slate-500">Hold Ctrl/⌘ to select multiple ports.</p>
                    <label class="mt-4 block text-xs font-semibold uppercase text-slate-700">Custom ports (comma separated)</label>
                    <input
                        name="custom_ports"
                        value="{{ formData.custom_ports }}"
                        placeholder="12345, 23456"
                        class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                    >
                </div>

                <div class="space-y-5">
                    <div>
                        <p class="text-xs font-semibold uppercase text-slate-700">Protocols</p>
                        <div class="mt-3 flex flex-wrap gap-3">
                            {% for protocol in protocolOptions %}
                                <label class="flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-700">
                                    <input
                                        type="checkbox"
                                        name="protocols[]"
                                        value="{{ protocol }}"
                                        class="rounded border-slate-300 text-indigo-600 focus:ring-indigo-500"
                                        {{ protocol in formData.protocols ? 'checked' : '' }}
                                    >
                                    <span>{{ protocol|upper }}</span>
                                </label>
                            {% endfor %}
                        </div>
                    </div>

                    <div>
                        <label class="block text-xs font-semibold uppercase text-slate-700">Mode</label>
                        <select
                            name="mode"
                            class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200"
                        >
                            {% for mode in modeOptions %}
                                <option value="{{ mode }}" {{ mode == formData.mode ? 'selected' : '' }}>{{ mode|title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>

            <div class="flex items-center gap-3">
                <button type="submit" class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white">Apply policy</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
