<div class="px-5 py-4">
    <div class="mb-4">
        <h2 class="text-lg font-semibold">{{ form.action == 'create' ? 'Add server' : 'Edit server' }}</h2>
        <p class="text-sm text-slate-500">Manual directory entries only. Visibility controls public exposure.</p>
    </div>

    {% if form.errors is not empty %}
        <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
            <p class="font-semibold">Please fix the following:</p>
            <ul class="list-disc pl-5 mt-2">
                {% for error in form.errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form
        class="space-y-4"
        hx-post="{{ form.action_url }}"
        hx-target="#public-server-form"
        hx-swap="outerHTML"
    >
        <div class="grid gap-4 sm:grid-cols-2">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Name</label>
                <input type="text" name="name" value="{{ form.name }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="EU #1">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Category</label>
                <input type="text" name="category" value="{{ form.category }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="community">
            </div>
        </div>
        <div class="grid gap-4 sm:grid-cols-2">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Game Key</label>
                <input type="text" name="game_key" value="{{ form.game_key }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="valheim">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Query Type</label>
                <input type="text" name="query_type" value="{{ form.query_type }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="steam_a2s">
            </div>
        </div>
        <div class="grid gap-4 sm:grid-cols-3">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">IP</label>
                <input type="text" name="ip" value="{{ form.ip }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="8.8.8.8">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Port</label>
                <input type="number" name="port" value="{{ form.port }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" min="1" max="65535">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Query Port</label>
                <input type="number" name="query_port" value="{{ form.query_port }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" min="1" max="65535">
            </div>
        </div>
        <div class="grid gap-4 sm:grid-cols-3">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Check Interval (sec)</label>
                <input type="number" name="check_interval_seconds" value="{{ form.check_interval_seconds }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" min="10" step="1">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Sort Order</label>
                <input type="number" name="sort_order" value="{{ form.sort_order }}" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" step="1">
            </div>
        </div>
        <div class="grid gap-3 sm:grid-cols-2">
            <label class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-600">
                <input type="checkbox" name="visible_public" class="rounded border-slate-300 text-indigo-600" {% if form.visible_public %}checked{% endif %}>
                Visible (Public)
            </label>
            <label class="inline-flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-600">
                <input type="checkbox" name="visible_logged_in" class="rounded border-slate-300 text-indigo-600" {% if form.visible_logged_in %}checked{% endif %}>
                Visible (Logged In)
            </label>
        </div>
        <div>
            <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Internal Notes</label>
            <textarea name="notes_internal" rows="3" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Internal notes (not public)">{{ form.notes_internal }}</textarea>
        </div>
        <button type="submit" class="w-full rounded-lg px-4 py-2 text-sm font-semibold text-white {{ form.submit_color }} hover:opacity-90">{{ form.submit_label }}</button>
    </form>
</div>
