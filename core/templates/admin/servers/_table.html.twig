<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">Name</th>
                <th class="px-5 py-3 text-left font-semibold">Game</th>
                <th class="px-5 py-3 text-left font-semibold">Address</th>
                <th class="px-5 py-3 text-left font-semibold">Status</th>
                <th class="px-5 py-3 text-left font-semibold">Visibility</th>
                <th class="px-5 py-3 text-left font-semibold">Interval</th>
                <th class="px-5 py-3 text-left font-semibold">Last Check</th>
                <th class="px-5 py-3 text-right font-semibold">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for server in servers %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 text-slate-900 font-medium">{{ server.name }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ server.game_key }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ server.address }}</td>
                    <td class="px-5 py-4">
                        {% set statusColor = server.status == 'online' ? 'bg-emerald-100 text-emerald-700' : (server.status == 'offline' ? 'bg-slate-100 text-slate-600' : (server.status == 'error' ? 'bg-rose-100 text-rose-700' : 'bg-amber-100 text-amber-700')) %}
                        <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ statusColor }}">
                            {{ server.status|default('unknown')|capitalize }}
                        </span>
                    </td>
                    <td class="px-5 py-4 text-slate-600">
                        {% if server.visible_public %}
                            <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold text-indigo-700">Public</span>
                        {% else %}
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Hidden</span>
                        {% endif %}
                    </td>
                    <td class="px-5 py-4 text-slate-600">{{ server.check_interval_seconds }}s</td>
                    <td class="px-5 py-4 text-slate-500">{{ server.last_checked_at ? server.last_checked_at|date('Y-m-d H:i') : 'â€”' }}</td>
                    <td class="px-5 py-4 text-right space-x-2">
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700"
                            hx-get="/admin/servers/{{ server.id }}/edit"
                            hx-target="#public-server-form"
                            hx-swap="outerHTML"
                        >
                            Edit
                        </button>
                        <button
                            class="rounded-lg border border-rose-200 px-3 py-2 text-xs font-semibold text-rose-600"
                            hx-post="/admin/servers/{{ server.id }}/delete"
                            hx-confirm="Delete {{ server.name }}?"
                        >
                            Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="px-5 py-6 text-center text-sm text-slate-500">No servers yet. Add the first server to the directory.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
