{% extends 'admin/base.html.twig' %}

{% block title %}Jobs Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">Jobs</h1>
        <p class="text-sm text-slate-500">Track agent work across the platform.</p>
    </div>
    <div class="flex items-center gap-3">
        <button class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700">Export</button>
        <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white">Create Job</button>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Total Jobs</p>
        <p class="mt-2 text-2xl font-semibold">{{ summary.total }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Running</p>
        <p class="mt-2 text-2xl font-semibold text-indigo-600">{{ summary.running }}</p>
    </div>
    <div class="rounded-xl bg-white border border-slate-200 p-4">
        <p class="text-xs uppercase text-slate-500">Queued</p>
        <p class="mt-2 text-2xl font-semibold text-amber-500">{{ summary.queued }}</p>
    </div>
</div>

<div class="rounded-xl bg-white border border-slate-200">
    <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200">
        <div>
            <h2 class="text-lg font-semibold">Recent Jobs</h2>
            <p class="text-sm text-slate-500">Latest agent workloads and lock status.</p>
        </div>
        <button
            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
            hx-get="/admin/jobs/table"
            hx-target="#jobs-table"
            hx-swap="outerHTML"
        >Refresh</button>
    </div>
    {% include 'admin/jobs/_table.html.twig' with { jobs: jobs } %}
</div>
{% endblock %}
