{% set siteTitle = app_setting('site_title', 'Easy-Wi NextGen') %}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>
        (function () {
            const storedTheme = localStorage.getItem('theme');
            if (storedTheme === 'light') {
                document.documentElement.classList.remove('dark');
            } else {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>
    {% block title %}{{ siteTitle }}{% endblock %}
    <title>{{ block('title')|replace({'Easy-Wi NextGen': siteTitle}) }}</title>
    <link rel="stylesheet" href="/ui.css">
    <link rel="stylesheet" href="/admin-customer.css">
</head>
<body class="bg-slate-50 text-slate-900">
    <main class="min-h-screen px-4 py-6 sm:px-6">
        {% block content %}{% endblock %}
    </main>
</body>
</html>
