{% trans_default_domain 'installer' %}

{% set currentStep = step|default(1) %}
{% set currentLocale = app.request.locale %}
<div class="flex flex-wrap items-center justify-between gap-3">
    <div>
        <h1 class="text-lg font-semibold text-slate-900">{{ 'wizard.title'|trans }}</h1>
        <p class="text-sm text-slate-500">{{ 'wizard.subtitle'|trans }}</p>
    </div>
    <div class="flex items-center gap-2 text-sm">
        <span class="text-slate-500">{{ 'language.label'|trans }}</span>
        <a href="{{ path('public_install', {'step': currentStep, 'lang': 'de'}) }}" class="rounded-full border px-3 py-1 {{ currentLocale == 'de' ? 'border-indigo-600 text-indigo-600' : 'border-slate-200 text-slate-500' }}">
            {{ 'language.de'|trans }}
        </a>
        <a href="{{ path('public_install', {'step': currentStep, 'lang': 'en'}) }}" class="rounded-full border px-3 py-1 {{ currentLocale == 'en' ? 'border-indigo-600 text-indigo-600' : 'border-slate-200 text-slate-500' }}">
            {{ 'language.en'|trans }}
        </a>
    </div>
</div>
