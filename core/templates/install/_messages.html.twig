{% trans_default_domain 'installer' %}

{% if errors is not empty %}
    <div class="rounded-xl border border-rose-200 bg-rose-50 px-6 py-4 text-sm text-rose-700">
        <ul class="list-disc space-y-1 pl-5">
            {% for error in errors %}
                <li>{{ error.key|trans(error.params|default({})) }}</li>
            {% endfor %}
        </ul>
        {% if debugAvailable|default(false) %}
            <div class="mt-4">
                <a href="{{ path('public_install_debug') }}" class="inline-flex items-center rounded-lg border border-rose-200 bg-white px-3 py-1.5 text-xs font-semibold text-rose-700 hover:bg-rose-100">
                    {{ 'actions.download_debug'|trans }}
                </a>
            </div>
        {% endif %}
    </div>
{% endif %}

{% if success is not empty %}
    <div class="rounded-xl border border-emerald-200 bg-emerald-50 px-6 py-4 text-sm text-emerald-700">
        <ul class="list-disc space-y-1 pl-5">
            {% for message in success %}
                <li>{{ message.key|trans(message.params|default({})) }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
