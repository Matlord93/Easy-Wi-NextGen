{% extends 'install/base.html.twig' %}
{% trans_default_domain 'installer' %}

{% block title %}{{ 'step2.title'|trans }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="mx-auto max-w-5xl space-y-6">
    {% include 'install/_language_switcher.html.twig' with { step: step } %}
    {% include 'install/_messages.html.twig' with { errors: errors, success: success } %}

    <div class="rounded-xl border border-slate-200 bg-white px-6 py-5">
        <h2 class="text-lg font-semibold text-slate-900">{{ 'step2.title'|trans }}</h2>
        <p class="mt-2 text-sm text-slate-600">{{ 'step2.lead'|trans }}</p>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white px-6 py-5">
        <h3 class="text-sm font-semibold text-slate-900">{{ 'requirements.title'|trans }}</h3>
        <div class="mt-4 space-y-4">
            {% for requirement in requirements %}
                <div class="rounded-lg border px-4 py-3 {{ requirement.ok ? 'border-emerald-200 bg-emerald-50' : 'border-rose-200 bg-rose-50' }}">
                    <div class="flex flex-wrap items-center justify-between gap-3">
                        <div class="text-sm font-medium text-slate-900">
                            {{ requirement.messageKey|trans(requirement.messageParams) }}
                        </div>
                        <div class="text-xs font-semibold uppercase {{ requirement.ok ? 'text-emerald-600' : 'text-rose-600' }}">
                            {{ requirement.ok ? 'requirements.ok'|trans : 'requirements.failed'|trans }}
                            {% if not requirement.required %}
                                · {{ 'requirements.optional'|trans }}
                            {% endif %}
                        </div>
                    </div>
                    {% if not requirement.ok and requirement.fixHintKey %}
                        <p class="mt-2 text-xs text-slate-600">{{ requirement.fixHintKey|trans(requirement.fixHintParams) }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white px-6 py-5">
        <h3 class="text-sm font-semibold text-slate-900">{{ 'requirements.loaded_extensions'|trans }}</h3>
        <p class="mt-2 text-sm text-slate-600">{{ 'requirements.php_version_detected'|trans({'%version%': phpVersion}) }}</p>
        <div class="mt-4 flex flex-wrap gap-2 text-xs text-slate-600">
            {% for extension in phpExtensions %}
                <span class="rounded-full border border-slate-200 bg-slate-50 px-2 py-1">{{ extension }}</span>
            {% else %}
                <span class="text-sm text-slate-700">{{ 'requirements.no_extensions'|trans }}</span>
            {% endfor %}
        </div>
    </div>

    <form method="post" action="{{ path('public_install', {'step': step}) }}" class="flex flex-wrap items-center gap-3">
        <input type="hidden" name="step" value="{{ step }}">
        <button type="submit" name="action" value="recheck" class="inline-flex items-center justify-center rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm transition hover:bg-slate-50">
            {{ 'actions.recheck'|trans }}
        </button>
        <button type="submit" name="action" value="continue" class="inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500" {% if not requirementsOk %}disabled{% endif %}>
            {{ 'actions.continue'|trans }}
        </button>
    </form>
</div>
{% endblock %}
