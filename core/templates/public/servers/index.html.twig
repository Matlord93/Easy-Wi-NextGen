{% extends 'public/base.html.twig' %}

{% block title %}Server Directory Â· Easy-Wi NextGen{% endblock %}

{% set activeNav = 'servers' %}

{% block content %}
<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-semibold">Server Directory</h1>
        <p class="text-sm text-slate-500">Browse public servers for this site.</p>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-4">
        <form method="get" class="grid gap-4 lg:grid-cols-[2fr,1fr,1fr,auto] lg:items-end">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Search</label>
                <input type="search" name="search" value="{{ filters.search }}" placeholder="Server name or game" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Game</label>
                <select name="game" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                    <option value="">All games</option>
                    {% for game in games %}
                        <option value="{{ game }}" {% if filters.game == game %}selected{% endif %}>{{ game }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">Status</label>
                <select name="status" class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                    <option value="">All</option>
                    <option value="online" {% if filters.status == 'online' %}selected{% endif %}>Online</option>
                    <option value="offline" {% if filters.status == 'offline' %}selected{% endif %}>Offline</option>
                    <option value="unknown" {% if filters.status == 'unknown' %}selected{% endif %}>Unknown</option>
                    <option value="error" {% if filters.status == 'error' %}selected{% endif %}>Error</option>
                </select>
            </div>
            <div>
                <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-700">Filter</button>
            </div>
        </form>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white">
        {% include 'public/servers/_server_list.html.twig' with { servers: servers, show_players: true, show_join_button: false } %}
    </div>
</div>
{% endblock %}
