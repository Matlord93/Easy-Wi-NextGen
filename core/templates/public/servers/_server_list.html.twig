<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="text-xs uppercase text-slate-500 border-b border-slate-200">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">Server</th>
                <th class="px-5 py-3 text-left font-semibold">Game</th>
                <th class="px-5 py-3 text-left font-semibold">Address</th>
                <th class="px-5 py-3 text-left font-semibold">Status</th>
                {% if show_players %}
                    <th class="px-5 py-3 text-left font-semibold">Players</th>
                    <th class="px-5 py-3 text-left font-semibold">Map</th>
                {% endif %}
                <th class="px-5 py-3 text-left font-semibold">Last Update</th>
                {% if show_join_button %}
                    <th class="px-5 py-3 text-right font-semibold">Join</th>
                {% endif %}
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            {% for server in servers %}
                <tr class="hover:bg-slate-50">
                    <td class="px-5 py-4 font-medium text-slate-900">{{ server.name }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ server.game_key }}</td>
                    <td class="px-5 py-4 text-slate-600">{{ server.address }}</td>
                    <td class="px-5 py-4">
                        {% set statusColor = server.status == 'online' ? 'bg-emerald-100 text-emerald-700' : (server.status == 'offline' ? 'bg-slate-100 text-slate-600' : (server.status == 'error' ? 'bg-rose-100 text-rose-700' : 'bg-amber-100 text-amber-700')) %}
                        <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ statusColor }}">
                            {{ server.status|capitalize }}
                        </span>
                    </td>
                    {% if show_players %}
                        <td class="px-5 py-4 text-slate-600">
                            {% if server.players is not null %}
                                {{ server.players }}{% if server.max_players is not null %} / {{ server.max_players }}{% endif %}
                            {% else %}
                                —
                            {% endif %}
                        </td>
                        <td class="px-5 py-4 text-slate-600">{{ server.map ?? '—' }}</td>
                    {% endif %}
                    <td class="px-5 py-4 text-slate-500">{{ server.last_checked_at ? server.last_checked_at|date('Y-m-d H:i') : '—' }}</td>
                    {% if show_join_button %}
                        <td class="px-5 py-4 text-right">
                            <a href="steam://connect/{{ server.address }}" class="inline-flex items-center rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700">Join</a>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="{{ show_players ? (show_join_button ? 8 : 7) : (show_join_button ? 6 : 5) }}" class="px-5 py-6 text-center text-sm text-slate-500">No public servers available.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
