{% set theme = theme|default('light') %}
{% if theme == 'emerald-dark' %}
    {% set headerClass = 'text-xs uppercase text-emerald-200/80 border-b border-emerald-500/20' %}
    {% set bodyClass = 'divide-y divide-emerald-500/10 text-emerald-100/80' %}
    {% set rowHoverClass = 'hover:bg-slate-900' %}
    {% set nameClass = 'text-emerald-100' %}
    {% set cellClass = 'text-emerald-100/70' %}
    {% set metaClass = 'text-emerald-100/80' %}
    {% set joinClass = 'border-emerald-500/30 text-emerald-100 hover:bg-slate-900' %}
{% else %}
    {% set headerClass = 'text-xs uppercase text-slate-700 border-b border-slate-200' %}
    {% set bodyClass = 'divide-y divide-slate-100 text-slate-600' %}
    {% set rowHoverClass = 'hover:bg-slate-50' %}
    {% set nameClass = 'text-slate-900' %}
    {% set cellClass = 'text-slate-600' %}
    {% set metaClass = 'text-slate-700' %}
    {% set joinClass = 'border-slate-200 text-slate-700' %}
{% endif %}
<div class="overflow-x-auto">
    <table class="min-w-full text-sm">
        <thead class="{{ headerClass }}">
            <tr>
                <th class="px-5 py-3 text-left font-semibold">{{ t('server', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('game', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('address', page_locale()) }}</th>
                <th class="px-5 py-3 text-left font-semibold">{{ t('status', page_locale()) }}</th>
                {% if show_players %}
                    <th class="px-5 py-3 text-left font-semibold">{{ t('players', page_locale()) }}</th>
                    <th class="px-5 py-3 text-left font-semibold">{{ t('map', page_locale()) }}</th>
                {% endif %}
                <th class="px-5 py-3 text-left font-semibold">{{ t('last_update', page_locale()) }}</th>
                {% if show_join_button %}
                    <th class="px-5 py-3 text-right font-semibold">{{ t('join', page_locale()) }}</th>
                {% endif %}
            </tr>
        </thead>
        <tbody class="{{ bodyClass }}">
            {% for server in servers %}
                <tr class="{{ rowHoverClass }}">
                    <td class="px-5 py-4 font-medium {{ nameClass }}">{{ server.name }}</td>
                    <td class="px-5 py-4 {{ cellClass }}">{{ server.game_key }}</td>
                    <td class="px-5 py-4 {{ cellClass }}">{{ server.address }}</td>
                    <td class="px-5 py-4">
                        {% set statusColor = server.status == 'online' ? 'bg-emerald-100 text-emerald-700' : (server.status == 'offline' ? 'bg-slate-100 text-slate-600' : (server.status == 'error' ? 'bg-rose-100 text-rose-700' : 'bg-amber-100 text-amber-700')) %}
                        <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ statusColor }}">
                            {{ t('status_' ~ server.status, page_locale()) }}
                        </span>
                    </td>
                    {% if show_players %}
                        <td class="px-5 py-4 {{ cellClass }}">
                            {% if server.players is not null %}
                                {{ server.players }}{% if server.max_players is not null %} / {{ server.max_players }}{% endif %}
                            {% else %}
                                —
                            {% endif %}
                        </td>
                        <td class="px-5 py-4 {{ cellClass }}">{{ server.map ?? '—' }}</td>
                    {% endif %}
                    <td class="px-5 py-4 {{ metaClass }}">{{ server.last_checked_at ? server.last_checked_at|date('Y-m-d H:i') : '—' }}</td>
                    {% if show_join_button %}
                        <td class="px-5 py-4 text-right">
                            <a href="steam://connect/{{ server.address }}" class="inline-flex items-center rounded-lg border px-3 py-2 text-xs font-semibold {{ joinClass }}">{{ t('join', page_locale()) }}</a>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="{{ show_players ? (show_join_button ? 8 : 7) : (show_join_button ? 6 : 5) }}" class="px-5 py-6 text-center text-sm {{ metaClass }}">{{ t('no_public_servers', page_locale()) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
