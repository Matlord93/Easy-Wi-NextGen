{% extends 'public/base.html.twig' %}

{% block title %}{{ t('status', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
{% set componentStyles = {
    'operational': 'bg-emerald-100 text-emerald-700',
    'degraded': 'bg-amber-100 text-amber-700',
    'outage': 'bg-rose-100 text-rose-700',
    'maintenance': 'bg-indigo-100 text-indigo-700'
} %}
{% set incidentStyles = {
    'investigating': 'bg-amber-100 text-amber-700',
    'identified': 'bg-indigo-100 text-indigo-700',
    'monitoring': 'bg-sky-100 text-sky-700',
    'resolved': 'bg-emerald-100 text-emerald-700'
} %}

<div class="space-y-8">
    <div class="rounded-xl border border-slate-200 bg-white">
        <div class="border-b border-slate-200 px-6 py-4">
            <h2 class="text-lg font-semibold">{{ t('service_status', page_locale()) }}</h2>
            <p class="text-sm text-slate-700">{{ t('service_status_description', page_locale()) }}</p>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="text-xs uppercase text-slate-700 border-b border-slate-200">
                    <tr>
                        <th class="px-5 py-3 text-left font-semibold">{{ t('component', page_locale()) }}</th>
                        <th class="px-5 py-3 text-left font-semibold">{{ t('type', page_locale()) }}</th>
                        <th class="px-5 py-3 text-left font-semibold">{{ t('status', page_locale()) }}</th>
                        <th class="px-5 py-3 text-left font-semibold">{{ t('last_checked', page_locale()) }}</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    {% for component in components %}
                        <tr class="hover:bg-slate-50">
                            <td class="px-5 py-4 text-slate-900 font-medium">{{ component.name }}</td>
                            <td class="px-5 py-4 text-slate-600">{{ component.type|capitalize }}</td>
                            <td class="px-5 py-4">
                                <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ componentStyles[component.status]|default('bg-slate-100 text-slate-600') }}">
                                    {{ t('status_' ~ component.status, page_locale()) }}
                                </span>
                            </td>
                            <td class="px-5 py-4 text-slate-700">{{ component.last_checked_at ? component.last_checked_at|date('Y-m-d H:i') : '—' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-5 py-6 text-center text-sm text-slate-700">{{ t('no_public_components', page_locale()) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
        <div class="rounded-xl border border-slate-200 bg-white">
            <div class="border-b border-slate-200 px-6 py-4">
                <h2 class="text-lg font-semibold">{{ t('current_incidents', page_locale()) }}</h2>
                <p class="text-sm text-slate-700">{{ t('current_incidents_description', page_locale()) }}</p>
            </div>
            <div class="divide-y divide-slate-100">
                {% for incident in incidents %}
                    <div class="px-6 py-4">
                        <div class="flex items-start justify-between gap-3">
                            <div>
                                <h3 class="text-sm font-semibold text-slate-900">{{ incident.title }}</h3>
                                {% if incident.message %}
                                    <p class="mt-1 text-xs text-slate-700">{{ incident.message }}</p>
                                {% endif %}
                                {% if incident.components is not empty %}
                                    <div class="mt-2 flex flex-wrap gap-2">
                                        {% for component in incident.components %}
                                            <span class="rounded-full bg-slate-100 px-2 py-1 text-xs text-slate-600">{{ component.name }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                            <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ incidentStyles[incident.status]|default('bg-slate-100 text-slate-600') }}">
                                {{ t('status_' ~ incident.status, page_locale()) }}
                            </span>
                        </div>
                        {% set updates = incidentUpdates[incident.id]|default([]) %}
                        {% if updates is not empty %}
                            <div class="mt-4 space-y-3">
                                {% for update in updates %}
                                    <div class="rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-xs text-slate-700">
                                        <div class="flex items-center justify-between">
                                            <span class="font-semibold">{{ t('status_' ~ update.status, page_locale()) }}</span>
                                            <span class="text-slate-700">{{ update.created_at|date('Y-m-d H:i') }}</span>
                                        </div>
                                        <p class="mt-1">{{ update.message }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="mt-3 text-xs text-slate-600">{{ t('no_public_updates', page_locale()) }}</p>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="px-6 py-8 text-center text-sm text-slate-700">{{ t('no_active_incidents', page_locale()) }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white">
            <div class="border-b border-slate-200 px-6 py-4">
                <h2 class="text-lg font-semibold">{{ t('maintenance', page_locale()) }}</h2>
                <p class="text-sm text-slate-700">{{ t('maintenance_description', page_locale()) }}</p>
            </div>
            <div class="divide-y divide-slate-100">
                {% for window in currentMaintenance %}
                    <div class="px-6 py-4">
                        <div class="flex items-center justify-between">
                            <h3 class="text-sm font-semibold text-slate-900">{{ window.title }}</h3>
                            <span class="inline-flex items-center rounded-full bg-indigo-100 px-3 py-1 text-xs font-semibold text-indigo-700">{{ t('in_progress', page_locale()) }}</span>
                        </div>
                        {% if window.message %}
                            <p class="mt-1 text-xs text-slate-700">{{ window.message }}</p>
                        {% endif %}
                        <p class="mt-2 text-xs text-slate-700">{{ window.start_at|date('Y-m-d H:i') }} → {{ window.end_at|date('Y-m-d H:i') }}</p>
                        {% if window.components is not empty %}
                            <div class="mt-2 flex flex-wrap gap-2">
                                {% for component in window.components %}
                                    <span class="rounded-full bg-slate-100 px-2 py-1 text-xs text-slate-600">{{ component.name }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
                {% for window in upcomingMaintenance %}
                    <div class="px-6 py-4">
                        <div class="flex items-center justify-between">
                            <h3 class="text-sm font-semibold text-slate-900">{{ window.title }}</h3>
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ t('upcoming', page_locale()) }}</span>
                        </div>
                        {% if window.message %}
                            <p class="mt-1 text-xs text-slate-700">{{ window.message }}</p>
                        {% endif %}
                        <p class="mt-2 text-xs text-slate-700">{{ window.start_at|date('Y-m-d H:i') }} → {{ window.end_at|date('Y-m-d H:i') }}</p>
                        {% if window.components is not empty %}
                            <div class="mt-2 flex flex-wrap gap-2">
                                {% for component in window.components %}
                                    <span class="rounded-full bg-slate-100 px-2 py-1 text-xs text-slate-600">{{ component.name }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% else %}
                    {% if currentMaintenance is empty %}
                        <div class="px-6 py-8 text-center text-sm text-slate-700">{{ t('no_scheduled_maintenance', page_locale()) }}</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
