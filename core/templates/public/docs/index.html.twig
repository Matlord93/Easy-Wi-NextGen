{% extends 'public/base.html.twig' %}

{% block title %}Docs Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-semibold">Docs & Knowledge Base</h1>
        <p class="text-sm text-slate-500">Browse FAQs and troubleshooting guides.</p>
    </div>

    <div class="grid gap-6 lg:grid-cols-2">
        {% for category in categories %}
            <div class="rounded-xl border border-slate-200 bg-white p-5">
                <h2 class="text-lg font-semibold text-slate-900">{{ category.label }}</h2>
                <ul class="mt-4 space-y-3 text-sm text-slate-600">
                    {% for item in category.items %}
                        <li class="flex flex-col gap-1">
                            <a href="/docs/{{ item.slug }}" class="text-sm font-semibold text-indigo-600 hover:text-indigo-700">{{ item.title }}</a>
                            <span class="text-xs text-slate-500">{{ item.excerpt }}</span>
                        </li>
                    {% else %}
                        <li class="text-sm text-slate-500">No articles in this category yet.</li>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <div class="rounded-xl border border-slate-200 bg-white px-5 py-6 text-sm text-slate-500">No public docs available yet.</div>
        {% endfor %}
    </div>
</div>
{% endblock %}
