{% extends 'public/base.html.twig' %}


{% block content %}
<div class="grid gap-6 lg:grid-cols-[minmax(0,1.2fr)_minmax(0,0.8fr)]">
    <div class="rounded-xl border border-slate-200 bg-white">
        <div class="border-b border-slate-200 px-6 py-4">
            <h1 class="text-lg font-semibold">{{ t('create_account_title', page_locale()) }}</h1>
            <p class="text-sm text-slate-700">{{ t('create_account_description', page_locale()) }}</p>
        </div>
        <div class="px-6 py-6">
            {% if registered %}
                <div class="rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
                    {{ t('registration_success', page_locale()) }}
                </div>
            {% else %}
                {% if errors is not empty %}
                    <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
                        <ul class="list-disc space-y-1 pl-5">
                            {% for error in errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                <form method="post" action="/register" class="space-y-4">
                    <div>
                        <label class="text-sm font-medium text-slate-700" for="email">{{ t('email_address', page_locale()) }}</label>
                        <input id="email" name="email" type="email" value="{{ form.email }}" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="{{ t('email_placeholder', page_locale()) }}">
                    </div>
                    <div class="grid gap-4 sm:grid-cols-2">
                        <div>
                            <label class="text-sm font-medium text-slate-700" for="first_name">{{ t('first_name', page_locale()) }}</label>
                            <input id="first_name" name="first_name" type="text" value="{{ form.first_name }}" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700" for="last_name">{{ t('last_name', page_locale()) }}</label>
                            <input id="last_name" name="last_name" type="text" value="{{ form.last_name }}" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                        </div>
                    </div>
                    <div class="grid gap-4 sm:grid-cols-2">
                        <div>
                            <label class="text-sm font-medium text-slate-700" for="password">{{ t('password', page_locale()) }}</label>
                            <input id="password" name="password" type="password" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="{{ t('password_minimum', page_locale()) }}">
                        </div>
                        <div>
                            <label class="text-sm font-medium text-slate-700" for="password_confirm">{{ t('confirm_password', page_locale()) }}</label>
                            <input id="password_confirm" name="password_confirm" type="password" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="{{ t('confirm_password_placeholder', page_locale()) }}">
                        </div>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-slate-700" for="portal_language">{{ t('portal_language', page_locale()) }}</label>
                        <select id="portal_language" name="portal_language" class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                            {% for key, label in portalLanguages %}
                                <option value="{{ key }}" {{ key == form.portal_language ? 'selected' : '' }}>{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="space-y-3 rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                        <label class="flex items-start gap-3">
                            <input type="checkbox" name="accept_terms" class="mt-1 h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" {% if form.accept_terms %}checked{% endif %}>
                            <span>{{ t('terms_agree', page_locale()) }} <a href="#" class="font-semibold text-indigo-600">{{ t('terms_of_service', page_locale()) }}</a>.</span>
                        </label>
                        <label class="flex items-start gap-3">
                            <input type="checkbox" name="accept_privacy" class="mt-1 h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" {% if form.accept_privacy %}checked{% endif %}>
                            <span>{{ t('terms_agree', page_locale()) }} <a href="#" class="font-semibold text-indigo-600">{{ t('privacy_policy', page_locale()) }}</a>.</span>
                        </label>
                    </div>
                    <button type="submit" class="inline-flex w-full items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500">{{ t('create_account', page_locale()) }}</button>
                </form>
            {% endif %}
        </div>
    </div>
    <div class="space-y-6">
        <div class="rounded-xl border border-slate-200 bg-white px-6 py-5">
            <h2 class="text-sm font-semibold text-slate-900">{{ t('what_happens_next', page_locale()) }}</h2>
            <ul class="mt-3 space-y-2 text-sm text-slate-600">
                <li class="flex items-start gap-2">
                    <span class="mt-1 h-2 w-2 rounded-full bg-indigo-500"></span>
                    {{ t('next_step_verify_email', page_locale()) }}
                </li>
                <li class="flex items-start gap-2">
                    <span class="mt-1 h-2 w-2 rounded-full bg-indigo-500"></span>
                    {{ t('next_step_login', page_locale()) }}
                </li>
                <li class="flex items-start gap-2">
                    <span class="mt-1 h-2 w-2 rounded-full bg-indigo-500"></span>
                    {{ t('next_step_support', page_locale()) }}
                </li>
            </ul>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white px-6 py-5">
            <h2 class="text-sm font-semibold text-slate-900">{{ t('need_help', page_locale()) }}</h2>
            <p class="mt-2 text-sm text-slate-600">{{ t('onboarding_help', page_locale())|replace({'%site%': siteName}) }}</p>
            <span class="mt-3 inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{ t('support_available', page_locale()) }}</span>
        </div>
    </div>
</div>
{% endblock %}
