{% extends 'public/base.html.twig' %}

{% block title %}Login Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="grid gap-6 lg:grid-cols-[minmax(0,1.2fr)_minmax(0,0.8fr)]">
    <div class="rounded-xl border border-slate-200 bg-white">
        <div class="border-b border-slate-200 px-6 py-4">
            <h1 class="text-lg font-semibold">Welcome back</h1>
            <p class="text-sm text-slate-500">Sign in to manage your portal access.</p>
        </div>
        <div class="px-6 py-6">
            {% if errors is not empty %}
                <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
                    <ul class="list-disc space-y-1 pl-5">
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <form method="post" action="/login" class="space-y-4">
                <div>
                    <label class="text-sm font-medium text-slate-700" for="email">Email address</label>
                    <input id="email" name="email" type="email" value="{{ form.email }}" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="you@example.com">
                </div>
                <div>
                    <label class="text-sm font-medium text-slate-700" for="password">Password</label>
                    <input id="password" name="password" type="password" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200" placeholder="Your password">
                </div>
                <button type="submit" class="inline-flex w-full items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500">Log in</button>
            </form>
        </div>
    </div>
    <div class="space-y-6">
        <div class="rounded-xl border border-slate-200 bg-white px-6 py-5">
            <h2 class="text-sm font-semibold text-slate-900">First time here?</h2>
            <p class="mt-2 text-sm text-slate-600">Create an account to access services, tickets, and billing.</p>
            <a href="/register" class="mt-4 inline-flex items-center rounded-lg bg-slate-900 px-4 py-2 text-xs font-semibold text-white transition hover:bg-slate-800">Register now</a>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white px-6 py-5">
            <h2 class="text-sm font-semibold text-slate-900">Need help?</h2>
            <p class="mt-2 text-sm text-slate-600">Contact {{ siteName }} support for login assistance.</p>
            <span class="mt-3 inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">Support available 24/7</span>
        </div>
    </div>
</div>
{% endblock %}
