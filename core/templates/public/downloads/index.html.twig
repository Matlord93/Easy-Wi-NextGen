{% extends 'public/base.html.twig' %}

{% block title %}{{ t('downloads', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-semibold">{{ t('downloads', page_locale()) }}</h1>
        <p class="text-sm text-slate-700">{{ t('downloads_description', page_locale()) }}</p>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white">
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="text-xs uppercase text-slate-700 border-b border-slate-200">
                    <tr>
                        <th class="px-5 py-3 text-left font-semibold">{{ t('download', page_locale()) }}</th>
                        <th class="px-5 py-3 text-left font-semibold">{{ t('version', page_locale()) }}</th>
                        <th class="px-5 py-3 text-left font-semibold">{{ t('size', page_locale()) }}</th>
                        <th class="px-5 py-3 text-right font-semibold">{{ t('action', page_locale()) }}</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    {% for item in items %}
                        <tr class="hover:bg-slate-50">
                            <td class="px-5 py-4">
                                <div class="font-semibold text-slate-900">{{ item.title }}</div>
                                <div class="text-sm text-slate-700">{{ item.description ?: '—' }}</div>
                            </td>
                            <td class="px-5 py-4 text-slate-600">{{ item.version ?: '—' }}</td>
                            <td class="px-5 py-4 text-slate-600">{{ item.file_size ?: '—' }}</td>
                            <td class="px-5 py-4 text-right">
                                <a href="{{ item.url }}" class="inline-flex items-center rounded-lg bg-indigo-600 px-3 py-2 text-xs font-semibold text-white hover:bg-indigo-700">{{ t('download', page_locale()) }}</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-5 py-6 text-center text-sm text-slate-700">{{ t('no_downloads_available', page_locale()) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
