<div class="px-5 py-5 space-y-4">
    {% if request is null %}
        <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
            No deletion request submitted yet.
        </div>
        <form hx-post="/gdpr/delete" hx-target="#gdpr-delete-status" hx-swap="outerHTML">
            <button class="rounded-lg bg-rose-600 px-4 py-2 text-sm font-semibold text-slate-900 text-white hover:bg-rose-500">
                Request anonymization
            </button>
        </form>
    {% else %}
        {% set style = statusStyles[request.status.value] %}
        <div class="flex items-center justify-between">
            <div>
                <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold {{ style.badge }}">
                    {{ style.label }}
                </span>
                <div class="mt-2 text-sm text-slate-500">Requested {{ request.requestedAt|date('Y-m-d H:i') }}</div>
                {% if request.processedAt %}
                    <div class="text-xs text-slate-400">Completed {{ request.processedAt|date('Y-m-d H:i') }}</div>
                {% endif %}
            </div>
            {% if request.status.value != 'completed' %}
                <span class="text-xs text-slate-400">Job ID {{ request.jobId }}</span>
            {% endif %}
        </div>
        {% if request.status.value == 'completed' %}
            <div class="rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
                Your account data has been anonymized.
            </div>
        {% else %}
            <div class="rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600">
                We are processing your anonymization request. You will be notified when complete.
            </div>
        {% endif %}
    {% endif %}
</div>
