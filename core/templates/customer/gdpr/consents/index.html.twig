{% extends 'customer/base.html.twig' %}

{% block title %}Consent Log Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between mb-6">
    <div>
        <h1 class="text-2xl font-semibold">Consent Log</h1>
        <p class="text-sm text-slate-500">Review your consent history for terms, privacy, and marketing.</p>
    </div>
    <button
        class="rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700"
        hx-get="/gdpr/consents/table"
        hx-target="#consent-table"
        hx-swap="outerHTML"
    >Refresh</button>
</div>

<div class="grid grid-cols-1 lg:grid-cols-[1.2fr_0.8fr] gap-6">
    <div class="rounded-xl bg-white border border-slate-200">
        <div class="flex items-center justify-between px-5 py-4 border-b border-slate-200">
            <div>
                <h2 class="text-lg font-semibold">Consent History</h2>
                <p class="text-sm text-slate-500">Chronological record of accepted policies.</p>
            </div>
            <button
                class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600"
                hx-get="/gdpr/consents/table"
                hx-target="#consent-table"
                hx-swap="outerHTML"
            >Refresh</button>
        </div>
        <div id="consent-table" hx-get="/gdpr/consents/table" hx-trigger="consent-log-updated from:body" hx-swap="outerHTML">
            {% include 'customer/gdpr/consents/_table.html.twig' with { logs: logs, typeStyles: typeStyles } %}
        </div>
    </div>

    <div class="rounded-xl bg-white border border-slate-200 p-5">
        <div class="mb-4">
            <h2 class="text-lg font-semibold">Record consent</h2>
            <p class="text-sm text-slate-500">Use this form to capture new consent acknowledgements.</p>
        </div>
        <form
            class="space-y-4"
            hx-post="/gdpr/consents"
            hx-target="#consent-table"
            hx-swap="outerHTML"
        >
            <div>
                <label class="text-sm font-medium text-slate-600">Consent Type</label>
                <select name="type" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                    {% for type in types %}
                        <option value="{{ type.value }}">{{ typeStyles[type.value].label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="text-sm font-medium text-slate-600">Version</label>
                <input
                    type="text"
                    name="version"
                    required
                    placeholder="e.g. 2025-02 / v3"
                    class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm"
                />
            </div>
            <button class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500">
                Save consent
            </button>
        </form>
        <div class="mt-5 rounded-lg border border-amber-200 bg-amber-50 px-4 py-3 text-xs text-amber-700">
            Make sure the recorded version matches the document that was accepted.
        </div>
    </div>
</div>
{% endblock %}
