{% extends 'customer/base.html.twig' %}

{% block title %}{{ t('customer_nav_instances', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="px-4 py-6 sm:px-6 lg:px-8">
    <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Game Servers</h1>
            <p class="mt-1 text-sm text-slate-600">Übersicht über Status, Ports und letzte Aktionen.</p>
        </div>
        <div class="flex flex-wrap items-center gap-3">
            <a href="/instances" class="rounded-lg border border-slate-200 px-4 py-2 text-xs font-semibold text-slate-600 hover:border-indigo-200 hover:text-indigo-600">
                Classic View
            </a>
        </div>
    </div>

    <div class="mt-6 flex flex-wrap items-center gap-2">
        <span class="text-xs font-semibold uppercase text-slate-500">Filter</span>
        {% set filter = statusFilter|default('') %}
        {% set statuses = ['','pending_setup','provisioning','running','stopped','unknown'] %}
        {% for status in statuses %}
            {% set label = status == '' ? 'Alle' : status|replace({'_': ' '})|title %}
            {% set isActive = filter == status %}
            <a href="/kunden/servers{% if status != '' %}?status={{ status }}{% endif %}"
               class="server-pill {{ isActive ? 'is-active' : '' }}">
                {{ label }}
            </a>
        {% endfor %}
    </div>

    <div class="mt-6 grid gap-4 lg:grid-cols-2">
        {% for server in servers %}
            <div class="server-card" data-instance-card data-instance-id="{{ server.id }}">
                <div class="server-card__header">
                    <div>
                        <p class="text-xs font-semibold uppercase text-slate-400">{{ server.gameKey }}</p>
                        <h2 class="text-lg font-semibold text-slate-900">{{ server.name }}</h2>
                    </div>
                    <div class="flex flex-wrap gap-2">
                        <span class="status-badge status-{{ server.status }}">{{ server.status|replace({'_': ' '})|title }}</span>
                        <span class="setup-badge {{ server.setupRequired ? 'setup-warning' : 'setup-ready' }}">
                            {{ server.setupRequired ? 'Setup erforderlich' : 'Setup ready' }}
                        </span>
                    </div>
                </div>
                <div class="server-card__body">
                    <div class="server-meta">
                        <div>
                            <p class="server-meta__label">Letzte Aktion</p>
                            <p class="server-meta__value">{{ server.lastActionLabel ?? '—' }}</p>
                            <p class="server-meta__sub">{{ server.lastActionAt ? server.lastActionAt|date('Y-m-d H:i') : 'Keine Aktionen' }}</p>
                        </div>
                        <div>
                            <p class="server-meta__label">Zuletzt gesehen</p>
                            <p class="server-meta__value">{{ server.lastSeenAt ? server.lastSeenAt|date('Y-m-d H:i') : 'Nie' }}</p>
                            <p class="server-meta__sub">Node: {{ server.nodeName ?? '—' }}</p>
                        </div>
                    </div>

                    <div class="server-ports">
                        <p class="server-meta__label">Ports</p>
                        <div class="server-ports__list">
                            {% for port in server.ports %}
                                <span class="server-ports__chip">{{ port.label }} {{ port.port }}</span>
                            {% else %}
                                <span class="text-xs text-slate-500">Keine Ports zugeordnet</span>
                            {% endfor %}
                        </div>
                    </div>

                    {% if not server.setupRequired %}
                        <div class="server-quick-actions" data-action-row>
                            <p class="server-meta__label">Quick Actions</p>
                            <div class="server-actions">
                                <button type="button" class="btn-ghost" data-server-action="start">Start</button>
                                <button type="button" class="btn-ghost" data-server-action="stop">Stop</button>
                                <button type="button" class="btn-ghost" data-server-action="restart">Restart</button>
                            </div>
                            <p class="server-action-feedback text-xs text-slate-500" data-action-feedback>Aktionen starten Jobs im Hintergrund.</p>
                        </div>
                    {% else %}
                        <p class="text-xs text-slate-500">Quick Actions verfügbar, sobald das Setup abgeschlossen ist.</p>
                    {% endif %}

                    <div class="server-actions">
                        <a href="/kunden/servers/{{ server.id }}" class="btn-primary">Öffnen</a>
                        {% if server.quickConnect %}
                            <a href="{{ server.quickConnect }}" class="btn-ghost">Quick Connect</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="rounded-lg border border-dashed border-slate-200 bg-white p-6 text-sm text-slate-600">
                Keine Server für die aktuelle Auswahl.
            </div>
        {% endfor %}
    </div>
</div>

<script>
    (() => {
        const handleAction = async (button) => {
            const card = button.closest('[data-instance-card]');
            if (!card) {
                return;
            }
            const instanceId = card.dataset.instanceId;
            const action = button.dataset.serverAction;
            if (!instanceId || !action) {
                return;
            }
            const feedback = card.querySelector('[data-action-feedback]');
            if (feedback) {
                feedback.textContent = 'Aktion wird ausgeführt...';
                feedback.classList.remove('text-rose-500');
                feedback.classList.add('text-slate-500');
            }

            const response = await fetch(`/api/customer/instances/${instanceId}/actions`, {
                method: 'POST',
                credentials: 'same-origin',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                },
                body: JSON.stringify({ action }),
            });

            if (!response.ok) {
                const data = await response.json().catch(() => ({}));
                if (feedback) {
                    feedback.textContent = data.error || 'Aktion fehlgeschlagen.';
                    feedback.classList.remove('text-slate-500');
                    feedback.classList.add('text-rose-500');
                }
                return;
            }

            if (feedback) {
                feedback.textContent = 'Aktion wurde gestartet.';
            }
        };

        document.addEventListener('click', (event) => {
            const target = event.target;
            if (!(target instanceof HTMLElement)) {
                return;
            }
            const button = target.closest('[data-server-action]');
            if (!button) {
                return;
            }
            event.preventDefault();
            handleAction(button);
        });
    })();
</script>
{% endblock %}
