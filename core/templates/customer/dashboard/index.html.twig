{% extends 'customer/base.html.twig' %}

{% block content %}
<div class="flex flex-col gap-6">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-semibold">{{ t('customer_dashboard_welcome', page_locale()) }} {{ customerName }}!</h1>
            <p class="text-sm text-slate-700">{{ t('customer_dashboard_description', page_locale()) }}</p>
        </div>
    </div>

    {% set healthStyles = {
        'healthy': 'bg-emerald-50 text-emerald-700 border-emerald-200',
        'degraded': 'bg-amber-50 text-amber-700 border-amber-200',
        'critical': 'bg-rose-50 text-rose-700 border-rose-200'
    } %}
    {% set instanceState = summary.instances_total > 0 and summary.instances_running < summary.instances_total ? 'degraded' : 'healthy' %}
    {% set ticketState = summary.tickets_open > 0 ? 'degraded' : 'healthy' %}
    {% set databaseState = summary.databases_total > 0 ? 'healthy' : 'degraded' %}

    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h2 class="text-lg font-semibold">Service-Status</h2>
                <p class="text-sm text-slate-700">Alle wichtigsten Hinweise auf einen Blick.</p>
            </div>
            <a href="/tickets" class="btn rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600">Zur Support-Übersicht</a>
        </div>
        <div class="mt-5 grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div class="rounded-xl border border-slate-200 bg-slate-50/40 p-4">
                <p class="text-xs font-semibold uppercase text-slate-500">Game-Server</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">{{ summary.instances_running }} / {{ summary.instances_total }}</p>
                <p class="mt-1 text-xs text-slate-600">Laufend vs. Gesamt</p>
                <span class="mt-3 inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ healthStyles[instanceState] }}">
                    {{ instanceState == 'healthy' ? 'Stabil' : 'Achtung' }}
                </span>
            </div>
            <div class="rounded-xl border border-slate-200 bg-slate-50/40 p-4">
                <p class="text-xs font-semibold uppercase text-slate-500">Support</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">{{ summary.tickets_open }}</p>
                <p class="mt-1 text-xs text-slate-600">Offene Tickets</p>
                <span class="mt-3 inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ healthStyles[ticketState] }}">
                    {{ ticketState == 'healthy' ? 'Keine Warteschlange' : 'Offen' }}
                </span>
            </div>
            <div class="rounded-xl border border-slate-200 bg-slate-50/40 p-4">
                <p class="text-xs font-semibold uppercase text-slate-500">Datenbanken</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">{{ summary.databases_total }}</p>
                <p class="mt-1 text-xs text-slate-600">Aktive Instanzen</p>
                <span class="mt-3 inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ healthStyles[databaseState] }}">
                    {{ databaseState == 'healthy' ? 'Bereit' : 'Nicht aktiv' }}
                </span>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-4">
        <a href="/instances" class="rounded-xl bg-gradient-to-br from-slate-700 via-slate-800 to-slate-900 p-4 text-white shadow-md transition hover:shadow-lg">
            <p class="text-xs uppercase text-slate-200/80">{{ t('customer_dashboard_card_game_servers', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ summary.instances_total }}</p>
            <p class="mt-2 text-xs text-slate-200/80">{{ summary.instances_running }} {{ t('customer_dashboard_card_active', page_locale()) }}</p>
            <div class="mt-3 h-1 w-full rounded-full bg-slate-600">
                <div class="h-1 w-2/3 rounded-full bg-emerald-400"></div>
            </div>
        </a>
        <a href="/files" class="rounded-xl bg-gradient-to-br from-indigo-600 via-indigo-700 to-indigo-800 p-4 text-white shadow-md transition hover:shadow-lg">
            <p class="text-xs uppercase text-indigo-200/90">{{ t('customer_dashboard_card_websites', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ summary.webspaces_total }}</p>
            <p class="mt-2 text-xs text-indigo-200/90">{{ t('customer_dashboard_card_hosted', page_locale()) }}</p>
            <div class="mt-3 flex gap-2">
                <span class="h-1 w-10 rounded-full bg-emerald-300"></span>
                <span class="h-1 w-6 rounded-full bg-emerald-200"></span>
                <span class="h-1 w-4 rounded-full bg-emerald-100"></span>
            </div>
        </a>
        <a href="/databases" class="rounded-xl bg-gradient-to-br from-slate-700 via-slate-800 to-slate-900 p-4 text-white shadow-md transition hover:shadow-lg">
            <p class="text-xs uppercase text-slate-200/80">{{ t('customer_dashboard_card_databases', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ summary.databases_total }}</p>
            <p class="mt-2 text-xs text-slate-200/80">{{ t('customer_dashboard_card_databases_total', page_locale()) }}</p>
            <div class="mt-3 h-1 w-full rounded-full bg-slate-600">
                <div class="h-1 w-1/2 rounded-full bg-amber-400"></div>
            </div>
        </a>
        <a href="/tickets" class="rounded-xl bg-gradient-to-br from-slate-700 via-slate-800 to-slate-900 p-4 text-white shadow-md transition hover:shadow-lg">
            <p class="text-xs uppercase text-slate-200/80">{{ t('customer_dashboard_card_support_tickets', page_locale()) }}</p>
            <p class="mt-3 text-2xl font-semibold">{{ summary.tickets_open }}</p>
            <p class="mt-2 text-xs text-slate-200/80">{{ summary.tickets_total }} {{ t('customer_dashboard_card_total', page_locale()) }}</p>
            <div class="mt-3 h-1 w-full rounded-full bg-slate-600">
                <div class="h-1 w-1/3 rounded-full bg-sky-400"></div>
            </div>
        </a>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-4">
        <a href="/instances" class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm transition hover:shadow-md">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-emerald-50 p-2 text-emerald-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M4 4.75A.75.75 0 0 1 4.75 4h10.5a.75.75 0 0 1 .75.75v2.5a.75.75 0 0 1-.75.75H4.75A.75.75 0 0 1 4 7.25v-2.5Zm0 8a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 .75.75v2.5a.75.75 0 0 1-.75.75H4.75a.75.75 0 0 1-.75-.75v-2.5Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('customer_dashboard_my_game_servers', page_locale()) }}</p>
                    <p class="text-xs text-slate-700">{{ t('customer_dashboard_manage_update', page_locale()) }}</p>
                </div>
            </div>
        </a>
        <a href="/files" class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm transition hover:shadow-md">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-sky-50 p-2 text-sky-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M2.5 3.75a.75.75 0 0 1 .75-.75h13.5a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75H3.25a.75.75 0 0 1-.75-.75V3.75Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('customer_dashboard_my_websites', page_locale()) }}</p>
                    <p class="text-xs text-slate-700">{{ t('customer_dashboard_domains_files', page_locale()) }}</p>
                </div>
            </div>
        </a>
        <a href="/databases" class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm transition hover:shadow-md">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-amber-50 p-2 text-amber-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M4 3.5A1.5 1.5 0 0 1 5.5 2h9A1.5 1.5 0 0 1 16 3.5v13a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 4 16.5v-13Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('customer_dashboard_my_databases', page_locale()) }}</p>
                    <p class="text-xs text-slate-700">{{ t('customer_dashboard_db_management', page_locale()) }}</p>
                </div>
            </div>
        </a>
        <a href="/profile" class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm transition hover:shadow-md">
            <div class="flex items-center gap-3">
                <div class="rounded-lg bg-rose-50 p-2 text-rose-600">
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path d="M4 3.75A1.75 1.75 0 0 1 5.75 2h5.5A1.75 1.75 0 0 1 13 3.75v2h1.25A1.75 1.75 0 0 1 16 7.5v8.75A1.75 1.75 0 0 1 14.25 18H5.75A1.75 1.75 0 0 1 4 16.25V3.75Z"/>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ t('customer_dashboard_billing_invoices', page_locale()) }}</p>
                    <p class="text-xs text-slate-700">{{ t('customer_dashboard_view_pay_bills', page_locale()) }}</p>
                </div>
            </div>
        </a>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
        <div class="rounded-xl border border-slate-200 bg-white shadow-sm lg:col-span-2">
            <div class="flex items-center justify-between border-b border-slate-200 px-5 py-4">
                <div>
                    <h2 class="text-lg font-semibold">{{ t('customer_dashboard_my_servers', page_locale()) }}</h2>
                    <p class="text-sm text-slate-700">{{ t('customer_dashboard_my_servers_description', page_locale()) }}</p>
                </div>
                <a href="/instances" class="btn rounded-lg border border-slate-200 px-3 py-2 text-xs font-medium text-slate-600">{{ t('customer_dashboard_manage', page_locale()) }}</a>
            </div>
            <div class="divide-y divide-slate-200">
                {% if instances is empty %}
                    <div class="px-5 py-4 text-sm text-slate-700">{{ t('customer_dashboard_no_instances', page_locale()) }}</div>
                {% else %}
                    {% set statusStyles = {
                        'running': 'bg-emerald-50 text-emerald-700 border-emerald-200',
                        'pending_setup': 'bg-amber-50 text-amber-700 border-amber-200',
                        'provisioning': 'bg-amber-50 text-amber-700 border-amber-200',
                        'stopped': 'bg-rose-50 text-rose-700 border-rose-200',
                        'error': 'bg-rose-100 text-rose-700 border-rose-200'
                    } %}
                    {% for instance in instances %}
                        {% set style = statusStyles[instance.status] ?? 'bg-slate-100 text-slate-600 border-slate-200' %}
                        <div class="flex items-center justify-between gap-4 px-5 py-4">
                            <div>
                                <p class="text-sm font-semibold text-slate-900">{{ instance.name }}</p>
                                <p class="text-xs text-slate-700">#{{ instance.id }}</p>
                            </div>
                            <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ style }}">
                                {{ instance.status_label }}
                            </span>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
            <div class="border-b border-slate-200 px-5 py-4">
                <h2 class="text-lg font-semibold">{{ t('customer_dashboard_latest_tickets', page_locale()) }}</h2>
                <p class="text-sm text-slate-700">{{ t('customer_dashboard_latest_tickets_description', page_locale()) }}</p>
            </div>
            <div class="divide-y divide-slate-200">
                {% if tickets is empty %}
                    <div class="px-5 py-4 text-sm text-slate-700">{{ t('customer_dashboard_no_tickets', page_locale()) }}</div>
                {% else %}
                    {% set ticketStyles = {
                        'open': 'bg-amber-50 text-amber-700 border-amber-200',
                        'pending': 'bg-sky-50 text-sky-700 border-sky-200',
                        'resolved': 'bg-emerald-50 text-emerald-700 border-emerald-200',
                        'closed': 'bg-slate-100 text-slate-600 border-slate-200'
                    } %}
                    {% for ticket in tickets %}
                        {% set style = ticketStyles[ticket.status] ?? 'bg-slate-100 text-slate-600 border-slate-200' %}
                        <div class="flex items-center justify-between gap-4 px-5 py-4">
                            <div>
                                <p class="text-sm font-semibold text-slate-900">#{{ ticket.id }} · {{ ticket.subject }}</p>
                            </div>
                            <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ style }}">
                                {{ ticket.status_label }}
                            </span>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="border-t border-slate-200 px-5 py-4">
                <a href="/tickets" class="text-xs font-semibold text-indigo-600">{{ t('customer_dashboard_view_all_tickets', page_locale()) }}</a>
            </div>
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-5 py-4">
            <h2 class="text-lg font-semibold">{{ t('customer_dashboard_resource_usage', page_locale()) }}</h2>
            <p class="text-sm text-slate-700">{{ t('customer_dashboard_resource_usage_description', page_locale()) }}</p>
        </div>
        <div class="grid grid-cols-1 gap-6 px-5 py-6 sm:grid-cols-3">
            {% set usageBlocks = [
                { 'label': t('customer_dashboard_cpu_usage', page_locale()), 'value': resourceUsage.cpu, 'color': 'text-emerald-500' },
                { 'label': t('customer_dashboard_ram_usage', page_locale()), 'value': resourceUsage.ram, 'color': 'text-sky-500' },
                { 'label': t('customer_dashboard_disk_usage', page_locale()), 'value': resourceUsage.disk, 'color': 'text-amber-500' }
            ] %}
            {% for block in usageBlocks %}
                <div class="flex flex-col items-center gap-3">
                    <div class="relative flex h-28 w-28 items-center justify-center {{ block.color }}">
                        <div class="absolute inset-0 rounded-full" style="background: conic-gradient(currentColor {{ block.value }}%, #e2e8f0 {{ block.value }}%);"></div>
                        <div class="absolute inset-2 rounded-full bg-white"></div>
                        <div class="relative text-xl font-semibold">{{ block.value }}%</div>
                    </div>
                    <p class="text-xs font-semibold uppercase tracking-wide text-slate-700">{{ block.label }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
