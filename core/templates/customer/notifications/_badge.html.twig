{% set isHidden = count == 0 %}
<span
    id="notification-badge"
    class="absolute -right-2 -top-2 inline-flex h-5 min-w-[1.25rem] items-center justify-center rounded-full bg-rose-500 px-1 text-[10px] font-semibold text-white {{ isHidden ? 'hidden' : '' }}"
    {% if oob %}
        hx-swap-oob="true"
    {% endif %}
>
    {{ count }}
</span>
