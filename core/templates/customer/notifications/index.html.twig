{% extends 'customer/base.html.twig' %}

{% block title %}{{ t('notifications', page_locale()) }} Â· Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div>
        <h1 class="text-2xl font-semibold">{{ t('notifications', page_locale()) }}</h1>
        <p class="text-sm text-slate-500">{{ t('customer_notifications_intro', page_locale()) }}</p>
    </div>
    <div class="space-y-4">
        {% for notification in notifications %}
            <div class="rounded-xl border border-slate-200 bg-white px-5 py-4 dark:border-slate-800 dark:bg-slate-900">
                <div class="flex flex-wrap items-center justify-between gap-3">
                    <div>
                        <p class="text-sm font-semibold text-slate-900">{{ notification.title }}</p>
                        <p class="text-xs text-slate-500">{{ notification.body }}</p>
                    </div>
                    <div class="flex items-center gap-3">
                        {% if notification.action_url %}
                            <a href="{{ notification.action_url }}" class="text-xs font-semibold text-indigo-600">{{ t('customer_notifications_open', page_locale()) }}</a>
                        {% endif %}
                        <span class="rounded-full border px-3 py-1 text-xs font-semibold {{ notification.read_at ? 'border-slate-200 text-slate-500' : 'border-indigo-200 bg-indigo-50 text-indigo-700' }}">
                            {{ notification.read_at ? t('read', page_locale()) : t('unread', page_locale()) }}
                        </span>
                        {% if not notification.read_at %}
                            <button
                                class="rounded-lg border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600"
                                hx-post="/notifications/{{ notification.id }}/read"
                                hx-swap="none"
                            >{{ t('mark_read', page_locale()) }}</button>
                        {% endif %}
                    </div>
                </div>
                <div class="mt-2 text-xs text-slate-400">{{ notification.created_at|date('Y-m-d H:i') }}</div>
            </div>
        {% else %}
            <div class="rounded-xl border border-slate-200 bg-white px-5 py-6 text-sm text-slate-400 dark:border-slate-800 dark:bg-slate-900">
                {{ t('no_results', page_locale()) }}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
