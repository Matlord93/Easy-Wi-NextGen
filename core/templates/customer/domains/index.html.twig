{% extends 'customer/base.html.twig' %}


{% block content %}
<div class="flex flex-col gap-6">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900">{{ t('customer_domains_title', page_locale()) }}</h1>
        <p class="text-sm text-slate-700">{{ t('customer_domains_description', page_locale()) }}</p>
    </div>

    {% if errors is defined and errors is not empty %}
        <div class="rounded-xl border border-rose-200 bg-rose-50 px-6 py-4 text-sm text-rose-700">
            <ul class="list-disc space-y-1 pl-5">
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="border-b border-slate-200 px-5 py-4">
            <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_domains_create_title', page_locale()) }}</h2>
            <p class="text-sm text-slate-700">{{ t('customer_domains_create_description', page_locale()) }}</p>
        </div>
        <form method="post" action="/domains" class="space-y-4 px-5 py-4">
            <div>
                <label class="text-xs font-semibold uppercase text-slate-700">{{ t('customer_domains_webspace_label', page_locale()) }}</label>
                <select name="webspace_id" class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm" required>
                    <option value="">{{ t('customer_domains_webspace_placeholder', page_locale()) }}</option>
                    {% for webspace in webspaces %}
                        <option value="{{ webspace.id }}">{{ webspace.domain }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="text-xs font-semibold uppercase text-slate-700">{{ t('customer_domains_domain_label', page_locale()) }}</label>
                <input type="text" name="domain" class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm" placeholder="{{ t('customer_domains_domain_placeholder', page_locale()) }}" required>
                <p class="mt-1 text-xs text-slate-600">{{ t('customer_domains_domain_hint', page_locale()) }}</p>
            </div>
            <button type="submit" class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500">
                {{ t('customer_domains_create_action', page_locale()) }}
            </button>
        </form>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="flex items-center justify-between border-b border-slate-200 px-5 py-4">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_domains_overview', page_locale()) }}</h2>
                <p class="text-sm text-slate-700">{{ t('customer_domains_overview_description', page_locale()) }}</p>
            </div>
        </div>
        {% if domains is empty %}
            <div class="px-5 py-6 text-sm text-slate-700">{{ t('customer_domains_empty', page_locale()) }}</div>
        {% else %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200 text-sm">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_domains_table_domain', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_domains_table_webspace', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_domains_table_status', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_domains_table_ssl', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_domains_table_updated', page_locale()) }}</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200">
                        {% for domain in domains %}
                            <tr>
                                <td class="px-5 py-4">
                                    <div class="font-semibold text-slate-900">{{ domain.name }}</div>
                                    <div class="text-xs text-slate-700">ID {{ domain.id }}</div>
                                </td>
                                <td class="px-5 py-4 text-slate-600">{{ domain.webspace }}</td>
                                <td class="px-5 py-4 text-slate-600">{{ domain.status|replace({'_': ' '})|title }}</td>
                                <td class="px-5 py-4 text-slate-600">{{ domain.ssl_expires_at ? domain.ssl_expires_at|date('Y-m-d') : 'â€”' }}</td>
                                <td class="px-5 py-4 text-slate-600">{{ domain.updated_at|date('Y-m-d H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
