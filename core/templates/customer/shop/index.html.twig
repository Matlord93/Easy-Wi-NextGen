{% extends 'customer/base.html.twig' %}

{% block title %}Shop · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="space-y-8">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900">Prepaid Shop</h1>
        <p class="text-sm text-slate-600">Wähle dein Produkt und entscheide selbst, wie viele Monate du im Voraus buchen möchtest.</p>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900">Aktive Laufzeiten</h2>
        <div class="mt-4 grid gap-4 md:grid-cols-2">
            {% for rental in rentals %}
                <div class="rounded-xl border border-slate-200 bg-slate-50 p-4">
                    <p class="text-sm font-semibold text-slate-900">{{ rental.product_name }}</p>
                    <p class="mt-1 text-xs text-slate-600">Instance #{{ rental.instance_id }}</p>
                    <p class="mt-2 text-xs text-slate-700">Läuft bis: {{ rental.expires_at }}</p>
                    <form class="mt-3 flex items-center gap-2" method="post" action="/marketplace/rentals/{{ rental.id }}/extend">
                        <input type="number" name="months" min="1" value="1" class="w-20 rounded-lg border border-slate-200 bg-white px-2 py-1 text-xs">
                        <button type="submit" class="rounded-lg bg-slate-900 px-3 py-2 text-xs font-semibold text-white">Verlängern</button>
                    </form>
                </div>
            {% else %}
                <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 p-6 text-sm text-slate-600">
                    Noch keine aktiven Laufzeiten.
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="space-y-6">
        {% for category in categories %}
            <section class="space-y-4">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-slate-900">{{ category.name }}</h2>
                </div>
                <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
                    {% for product in category.products %}
                        <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                            {% if product.image_url %}
                                <img src="{{ product.image_url }}" alt="{{ product.name }}" class="h-32 w-full rounded-xl object-cover">
                            {% endif %}
                            <h3 class="mt-4 text-base font-semibold text-slate-900">{{ product.name }}</h3>
                            <p class="mt-2 text-sm text-slate-600">{{ product.description }}</p>
                            <div class="mt-4 text-xs text-slate-600">
                                <p>{{ product.cpu_limit }} CPU · {{ product.ram_limit }} GB RAM · {{ product.disk_limit }} GB SSD</p>
                            </div>
                            <div class="mt-4 flex items-center justify-between">
                                <span class="text-sm font-semibold text-slate-900">€ {{ product.price_monthly }} / Monat</span>
                            </div>
                            <form class="mt-4 flex items-center gap-2" method="post" action="/marketplace/order">
                                <input type="hidden" name="product_id" value="{{ product.id }}">
                                <input type="number" name="months" min="1" value="1" class="w-20 rounded-lg border border-slate-200 bg-white px-2 py-1 text-xs">
                                <button type="submit" class="flex-1 rounded-lg bg-slate-900 px-3 py-2 text-xs font-semibold text-white">Jetzt buchen</button>
                            </form>
                        </div>
                    {% else %}
                        <div class="rounded-xl border border-dashed border-slate-200 bg-white p-6 text-sm text-slate-600">
                            Keine Produkte verfügbar.
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endfor %}
    </div>
</div>
{% endblock %}
