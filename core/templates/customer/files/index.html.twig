{% extends 'customer/base.html.twig' %}

{% block title %}File Manager · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
            <p class="text-xs uppercase tracking-wide text-slate-400">Webspace</p>
            <h1 class="text-2xl font-semibold text-slate-900">File Manager</h1>
            <p class="text-sm text-slate-500">Browse your SFTP areas with safe, agent-backed listings.</p>
        </div>
        <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700">
            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
            SFTP Ready
        </span>
    </div>

    <div class="grid gap-6 lg:grid-cols-3">
        <div class="space-y-6 lg:col-span-1">
            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <h2 class="text-sm font-semibold text-slate-700">Webspace selection</h2>
                <p class="mt-1 text-xs text-slate-500">Choose which webspace root to browse.</p>
                <form class="mt-4 space-y-4" hx-get="/files/listing" hx-target="#file-listing" hx-swap="innerHTML">
                    <div>
                        <label class="text-xs font-semibold text-slate-500">Webspace</label>
                        <select name="webspace_id" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                            {% for webspace in webspaces %}
                                <option value="{{ webspace.id }}" {{ selectedWebspace and webspace.id == selectedWebspace.id ? 'selected' : '' }}>
                                    #{{ webspace.id }} · {{ webspace.node.name }}
                                </option>
                            {% else %}
                                <option disabled>No webspaces available</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="text-xs font-semibold text-slate-500">Relative path</label>
                        <input name="path" value="{{ path }}" placeholder="e.g. public/uploads" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                        <p class="mt-2 text-xs text-slate-400">Leave empty to list the root directory.</p>
                    </div>
                    <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-700">Load listing</button>
                </form>
            </div>

            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <h2 class="text-sm font-semibold text-slate-700">Webspace details</h2>
                {% if selectedWebspace %}
                    <dl class="mt-4 space-y-3 text-sm text-slate-600">
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">Node</dt>
                            <dd class="font-medium text-slate-800">{{ selectedWebspace.node.name }}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">Root path</dt>
                            <dd class="font-medium text-slate-800 truncate max-w-[180px]" title="{{ selectedWebspace.path }}">{{ selectedWebspace.path }}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">Quota</dt>
                            <dd class="font-medium text-slate-800">{{ selectedWebspace.quota }} MB</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">PHP</dt>
                            <dd class="font-medium text-slate-800">{{ selectedWebspace.php_version }}</dd>
                        </div>
                    </dl>
                {% else %}
                    <p class="mt-3 text-sm text-slate-500">No webspace assigned yet.</p>
                {% endif %}
            </div>
        </div>

        <div class="lg:col-span-2">
            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-sm font-semibold text-slate-700">Directory listing</h2>
                        <p class="text-xs text-slate-500">Listings are fetched via the Agent and protected by chroot rules.</p>
                    </div>
                    {% if selectedWebspace %}
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-600 hover:border-indigo-200 hover:text-indigo-600"
                            hx-get="/files/listing?webspace_id={{ selectedWebspace.id }}&path={{ path|url_encode }}"
                            hx-target="#file-listing"
                            hx-swap="innerHTML"
                        >
                            Refresh
                        </button>
                    {% endif %}
                </div>

                <div
                    id="file-listing"
                    class="mt-4"
                    {% if selectedWebspace %}
                        hx-get="/files/listing?webspace_id={{ selectedWebspace.id }}&path={{ path|url_encode }}"
                        hx-trigger="load"
                        hx-target="this"
                        hx-swap="innerHTML"
                    {% endif %}
                >
                    {% if not selectedWebspace %}
                        <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
                            No webspace selected yet.
                        </div>
                    {% else %}
                        <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
                            Loading listing...
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
