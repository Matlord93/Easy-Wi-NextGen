{% extends 'customer/base.html.twig' %}

{% block title %}{{ t('customer_files_title', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
            <p class="text-xs uppercase tracking-wide text-slate-400">{{ t('customer_files_webspace_kicker', page_locale()) }}</p>
            <h1 class="text-2xl font-semibold text-slate-900">{{ t('customer_files_title', page_locale()) }}</h1>
            <p class="text-sm text-slate-500">{{ t('customer_files_intro', page_locale()) }}</p>
        </div>
        <span class="inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700">
            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
            {{ t('customer_files_sftp_ready', page_locale()) }}
        </span>
    </div>

    <div class="grid gap-6 lg:grid-cols-3">
        <div class="space-y-6 lg:col-span-1">
            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <h2 class="text-sm font-semibold text-slate-900 text-slate-700">{{ t('customer_files_selection_title', page_locale()) }}</h2>
                <p class="mt-1 text-xs text-slate-500">{{ t('customer_files_selection_intro', page_locale()) }}</p>
                <form class="mt-4 space-y-4" hx-get="/files/listing" hx-target="#file-listing" hx-swap="innerHTML">
                    <div>
                        <label class="text-xs font-semibold text-slate-500">{{ t('customer_files_webspace_label', page_locale()) }}</label>
                        <select name="webspace_id" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                            {% for webspace in webspaces %}
                                <option value="{{ webspace.id }}" {{ selectedWebspace and webspace.id == selectedWebspace.id ? 'selected' : '' }}>
                                    #{{ webspace.id }} · {{ webspace.node.name }}
                                </option>
                            {% else %}
                                <option disabled>{{ t('customer_files_no_webspaces', page_locale()) }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="text-xs font-semibold text-slate-500">{{ t('customer_files_relative_path', page_locale()) }}</label>
                        <input name="path" value="{{ path }}" placeholder="{{ t('customer_files_relative_path_placeholder', page_locale()) }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                        <p class="mt-2 text-xs text-slate-400">{{ t('customer_files_relative_path_hint', page_locale()) }}</p>
                    </div>
                    <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-slate-900 text-white hover:bg-indigo-700">{{ t('customer_files_load_listing', page_locale()) }}</button>
                </form>
            </div>

            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <h2 class="text-sm font-semibold text-slate-900 text-slate-700">{{ t('customer_files_details_title', page_locale()) }}</h2>
                {% if selectedWebspace %}
                    <dl class="mt-4 space-y-3 text-sm text-slate-600">
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">{{ t('customer_files_details_node', page_locale()) }}</dt>
                            <dd class="font-medium text-slate-800">{{ selectedWebspace.node.name }}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">{{ t('customer_files_details_root_path', page_locale()) }}</dt>
                            <dd class="font-medium text-slate-800 truncate max-w-[180px]" title="{{ selectedWebspace.path }}">{{ selectedWebspace.path }}</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">{{ t('customer_files_details_quota', page_locale()) }}</dt>
                            <dd class="font-medium text-slate-800">{{ selectedWebspace.quota }} MB</dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="text-slate-400">{{ t('customer_files_details_php', page_locale()) }}</dt>
                            <dd class="font-medium text-slate-800">{{ selectedWebspace.php_version }}</dd>
                        </div>
                    </dl>
                {% else %}
                    <p class="mt-3 text-sm text-slate-500">{{ t('customer_files_no_webspace_assigned', page_locale()) }}</p>
                {% endif %}
            </div>
        </div>

        <div class="lg:col-span-2">
            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-sm font-semibold text-slate-900 text-slate-700">{{ t('customer_files_listing_title', page_locale()) }}</h2>
                        <p class="text-xs text-slate-500">{{ t('customer_files_listing_intro', page_locale()) }}</p>
                    </div>
                    {% if selectedWebspace %}
                        <button
                            class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-600 hover:border-indigo-200 hover:text-indigo-600"
                            hx-get="/files/listing?webspace_id={{ selectedWebspace.id }}&path={{ path|url_encode }}"
                            hx-target="#file-listing"
                            hx-swap="innerHTML"
                        >
                            {{ t('refresh', page_locale()) }}
                        </button>
                    {% endif %}
                </div>

                <div
                    id="file-listing"
                    class="mt-4"
                    {% if selectedWebspace %}
                        hx-get="/files/listing?webspace_id={{ selectedWebspace.id }}&path={{ path|url_encode }}"
                        hx-trigger="load"
                        hx-target="this"
                        hx-swap="innerHTML"
                    {% endif %}
                >
                    {% if not selectedWebspace %}
                        <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
                            {{ t('customer_files_no_webspace_selected', page_locale()) }}
                        </div>
                    {% else %}
                        <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
                            {{ t('customer_files_loading_listing', page_locale()) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
