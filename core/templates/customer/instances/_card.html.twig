{% set status = instance.status %}
{% set statusColor = 'bg-slate-100 text-slate-600' %}
{% if status == 'running' %}
    {% set statusColor = 'bg-emerald-100 text-emerald-700' %}
{% elseif status == 'stopped' %}
    {% set statusColor = 'bg-amber-100 text-amber-700' %}
{% elseif status == 'error' %}
    {% set statusColor = 'bg-rose-100 text-rose-700' %}
{% elseif status == 'provisioning' %}
    {% set statusColor = 'bg-sky-100 text-sky-700' %}
{% endif %}

{% set policyColor = instance.update_policy == 'auto' ? 'bg-indigo-100 text-indigo-700' : 'bg-slate-100 text-slate-600' %}

<div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
        <div>
            <div class="flex flex-wrap items-center gap-3">
                <h2 class="text-lg font-semibold text-slate-900">{{ instance.template.name }}</h2>
                <span class="rounded-full px-3 py-1 text-xs font-semibold {{ statusColor }}">{{ status|capitalize }}</span>
                <span class="rounded-full px-3 py-1 text-xs font-semibold {{ policyColor }}">{{ instance.update_policy == 'auto' ? 'Auto Update' : 'Manual Update' }}</span>
            </div>
            <p class="mt-1 text-xs text-slate-500">Instance #{{ instance.id }} · {{ instance.template.game_key }}</p>
            <p class="mt-2 text-sm text-slate-600">Node: {{ instance.node.name }} ({{ instance.node.id }})</p>
        </div>
        <div class="flex flex-wrap gap-3">
            <form hx-post="/instances/{{ instance.id }}/update" hx-target="#instance-card-{{ instance.id }}" hx-swap="outerHTML">
                <button type="submit" class="rounded-lg bg-indigo-600 px-4 py-2 text-xs font-semibold text-white transition hover:bg-indigo-700">Manual Update</button>
            </form>
            <form hx-post="/instances/{{ instance.id }}/rollback" hx-target="#instance-card-{{ instance.id }}" hx-swap="outerHTML">
                <button type="submit" class="rounded-lg border border-slate-200 px-4 py-2 text-xs font-semibold text-slate-700 transition hover:border-slate-300">Rollback</button>
            </form>
        </div>
    </div>

    {% if instance.notice %}
        <div class="mt-4 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">{{ instance.notice }}</div>
    {% endif %}
    {% if instance.error %}
        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">{{ instance.error }}</div>
    {% endif %}

    <div class="mt-6 grid gap-6 lg:grid-cols-3">
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
            <p class="text-xs font-semibold uppercase text-slate-500">Current Build</p>
            <p class="mt-2 text-sm font-semibold text-slate-900">{{ instance.current_build_id ?? 'Unknown' }}</p>
            <p class="text-xs text-slate-500">{{ instance.current_version ?? 'No version tag' }}</p>
            <p class="mt-3 text-xs text-slate-400">Last queued: {{ instance.last_update_queued_at ? instance.last_update_queued_at|date('Y-m-d H:i') : 'Never' }}</p>
        </div>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
            <p class="text-xs font-semibold uppercase text-slate-500">Previous Build</p>
            <p class="mt-2 text-sm font-semibold text-slate-900">{{ instance.previous_build_id ?? '—' }}</p>
            <p class="text-xs text-slate-500">{{ instance.previous_version ?? 'No prior version' }}</p>
            <p class="mt-3 text-xs text-slate-400">Rollback uses previous build when available.</p>
        </div>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
            <p class="text-xs font-semibold uppercase text-slate-500">Locked Version</p>
            <p class="mt-2 text-sm font-semibold text-slate-900">{{ instance.locked_build_id ?? 'Not locked' }}</p>
            <p class="text-xs text-slate-500">{{ instance.locked_version ?? 'No lock label' }}</p>
            <p class="mt-3 text-xs text-slate-400">Locks keep updates pinned to a specific build.</p>
        </div>
    </div>

    <form class="mt-6 space-y-4" hx-post="/instances/{{ instance.id }}/settings" hx-target="#instance-card-{{ instance.id }}" hx-swap="outerHTML">
        <div class="grid gap-4 lg:grid-cols-2">
            <div class="rounded-lg border border-slate-200 bg-white p-4">
                <p class="text-xs font-semibold uppercase text-slate-500">Update Policy</p>
                <div class="mt-3 space-y-2 text-sm text-slate-600">
                    <label class="flex items-center gap-2">
                        <input type="radio" name="update_policy" value="manual" {% if instance.update_policy != 'auto' %}checked{% endif %} class="text-indigo-600">
                        Manual updates only
                    </label>
                    <label class="flex items-center gap-2">
                        <input type="radio" name="update_policy" value="auto" {% if instance.update_policy == 'auto' %}checked{% endif %} class="text-indigo-600">
                        Auto update on schedule
                    </label>
                </div>
                <div class="mt-4 grid gap-3 sm:grid-cols-2">
                    <div>
                        <label class="text-xs font-semibold uppercase text-slate-500">Cron Schedule</label>
                        <input type="text" name="cron_expression" value="{{ instance.schedule ? instance.schedule.cron_expression : '0 3 * * *' }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                        <p class="mt-1 text-xs text-slate-500">Default: daily at 03:00.</p>
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase text-slate-500">Time Zone</label>
                        <input type="text" name="time_zone" value="{{ instance.schedule ? instance.schedule.time_zone : 'UTC' }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                    </div>
                </div>
            </div>
            <div class="rounded-lg border border-slate-200 bg-white p-4">
                <p class="text-xs font-semibold uppercase text-slate-500">Version Lock</p>
                <div class="mt-4 grid gap-3 sm:grid-cols-2">
                    <div>
                        <label class="text-xs font-semibold uppercase text-slate-500">Locked Build ID</label>
                        <input type="text" name="locked_build_id" value="{{ instance.locked_build_id ?? '' }}" placeholder="e.g. 123456" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase text-slate-500">Lock Label</label>
                        <input type="text" name="locked_version" value="{{ instance.locked_version ?? '' }}" placeholder="e.g. stable" class="mt-2 w-full rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm">
                    </div>
                </div>
                <p class="mt-3 text-xs text-slate-500">Leave empty to remove the lock.</p>
            </div>
        </div>
        <div class="flex justify-end">
            <button type="submit" class="rounded-lg bg-slate-900 px-4 py-2 text-xs font-semibold text-white transition hover:bg-slate-800">Save Update Settings</button>
        </div>
    </form>
</div>
