<div class="space-y-6">
    <div>
        <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_instance_tab_tasks', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('customer_instance_tasks_intro', page_locale()) }}</p>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
            <thead class="bg-slate-50">
                <tr>
                    <th class="px-4 py-2 text-left text-xs font-semibold uppercase text-slate-500">{{ t('customer_instance_tasks_table_id', page_locale()) }}</th>
                    <th class="px-4 py-2 text-left text-xs font-semibold uppercase text-slate-500">{{ t('customer_instance_tasks_table_type', page_locale()) }}</th>
                    <th class="px-4 py-2 text-left text-xs font-semibold uppercase text-slate-500">{{ t('customer_instance_tasks_table_status', page_locale()) }}</th>
                    <th class="px-4 py-2 text-left text-xs font-semibold uppercase text-slate-500">{{ t('customer_instance_tasks_table_created', page_locale()) }}</th>
                    <th class="px-4 py-2 text-right text-xs font-semibold uppercase text-slate-500">Details</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 bg-white">
                {% for job in jobs %}
                    <tr>
                        <td class="px-4 py-2 font-mono text-xs text-slate-700">{{ job.id }}</td>
                        <td class="px-4 py-2 text-sm text-slate-700">{{ job.type }}</td>
                        <td class="px-4 py-2 text-xs font-semibold">
                            <span class="rounded-full bg-slate-100 px-2 py-1 text-slate-600">{{ t('customer_job_status_' ~ job.status, page_locale()) }}</span>
                        </td>
                        <td class="px-4 py-2 text-xs text-slate-600">{{ job.created_at|date('Y-m-d H:i') }}</td>
                        <td class="px-4 py-2 text-right text-xs">
                            <button
                                type="button"
                                class="rounded-md border border-slate-200 px-2 py-1 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-900"
                                data-job-id="{{ job.id }}"
                                data-job-type="{{ job.type }}"
                            >
                                View
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-4 py-6 text-center text-sm text-slate-600">
                            {{ t('customer_instance_tasks_empty', page_locale()) }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div id="job-task-panel" class="rounded-xl border border-slate-200 bg-slate-50 p-5">
        <div class="flex flex-wrap items-center justify-between gap-3">
            <div>
                <p class="text-xs uppercase tracking-wide text-slate-500">Live task</p>
                <p class="text-sm font-semibold text-slate-900" data-job-title>Select a task to follow progress.</p>
            </div>
            <button
                type="button"
                class="rounded-md border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-500 transition hover:border-slate-300 hover:text-slate-900"
                data-job-cancel
                disabled
            >
                {{ t('customer_instance_tasks_cancel', page_locale()) }}
            </button>
        </div>

        <div class="mt-4 space-y-3">
            <div class="flex items-center justify-between text-xs text-slate-600">
                <span>Status</span>
                <span class="font-semibold text-slate-800" data-job-status>—</span>
            </div>
            <div>
                <div class="h-2 w-full rounded-full bg-slate-200">
                    <div class="h-2 rounded-full bg-indigo-500" style="width: 0%" data-job-progress></div>
                </div>
                <p class="mt-1 text-xs text-slate-600" data-job-progress-text>Progress: —</p>
            </div>
        </div>

        <div class="mt-5">
            <p class="text-xs font-semibold uppercase text-slate-500">Logs</p>
            <ul class="mt-3 space-y-2 text-xs text-slate-600" data-job-logs>
                <li class="text-slate-400">Select a task to load logs.</li>
            </ul>
        </div>
    </div>
</div>

<script>
    (() => {
        const panel = document.getElementById('job-task-panel');
        if (!panel) {
            return;
        }

        const jobTitle = panel.querySelector('[data-job-title]');
        const jobStatus = panel.querySelector('[data-job-status]');
        const jobProgress = panel.querySelector('[data-job-progress]');
        const jobProgressText = panel.querySelector('[data-job-progress-text]');
        const jobLogs = panel.querySelector('[data-job-logs]');
        const jobCancel = panel.querySelector('[data-job-cancel]');

        let currentJobId = null;
        let lastLogId = null;
        let pollTimer = null;

        const resetLogs = () => {
            jobLogs.innerHTML = '<li class="text-slate-400">Select a task to load logs.</li>';
            lastLogId = null;
        };

        const updateProgress = (progressValue) => {
            if (progressValue === null || progressValue === undefined) {
                jobProgress.style.width = '0%';
                jobProgressText.textContent = 'Progress: —';
                return;
            }

            const value = Math.max(0, Math.min(100, Number(progressValue)));
            jobProgress.style.width = `${value}%`;
            jobProgressText.textContent = `Progress: ${value}%`;
        };

        const renderLogs = (logs) => {
            if (!Array.isArray(logs) || logs.length === 0) {
                return;
            }

            if (jobLogs.querySelector('.text-slate-400')) {
                jobLogs.innerHTML = '';
            }

            logs.forEach((log) => {
                const item = document.createElement('li');
                item.className = 'flex items-start justify-between gap-4 border-l-2 border-indigo-200 pl-3';
                const message = document.createElement('span');
                message.textContent = log.message;
                const meta = document.createElement('span');
                meta.className = 'whitespace-nowrap text-[10px] text-slate-400';
                meta.textContent = log.created_at;
                item.appendChild(message);
                item.appendChild(meta);
                jobLogs.appendChild(item);
            });
        };

        const fetchJob = async () => {
            if (!currentJobId) {
                return;
            }
            const response = await fetch(`/api/customer/jobs/${currentJobId}`);
            if (!response.ok) {
                return;
            }
            const data = await response.json();
            jobStatus.textContent = data.status ?? '—';
            updateProgress(data.progress ?? null);
            jobCancel.disabled = !['queued', 'running'].includes(data.status);
        };

        const fetchLogs = async () => {
            if (!currentJobId) {
                return;
            }
            const params = lastLogId ? `?afterId=${encodeURIComponent(lastLogId)}` : '';
            const response = await fetch(`/api/customer/jobs/${currentJobId}/logs${params}`);
            if (!response.ok) {
                return;
            }
            const data = await response.json();
            renderLogs(data.logs);
            const last = data.logs?.[data.logs.length - 1];
            if (last?.id) {
                lastLogId = last.id;
            }
        };

        const poll = async () => {
            await fetchJob();
            await fetchLogs();
        };

        const startPolling = (jobId, jobType) => {
            currentJobId = jobId;
            jobTitle.textContent = `${jobType} · #${jobId}`;
            resetLogs();
            poll();
            if (pollTimer) {
                clearInterval(pollTimer);
            }
            pollTimer = setInterval(poll, 5000);
        };

        document.querySelectorAll('[data-job-id]').forEach((button) => {
            button.addEventListener('click', () => {
                startPolling(button.dataset.jobId, button.dataset.jobType ?? 'Job');
            });
        });

        jobCancel.addEventListener('click', async () => {
            if (!currentJobId) {
                return;
            }
            await fetch(`/api/customer/jobs/${currentJobId}/cancel`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
            });
            poll();
        });
    })();
</script>
