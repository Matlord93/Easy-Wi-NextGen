<div class="space-y-4">
    <div>
        <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_instance_tab_settings', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('customer_instance_settings_intro', page_locale()) }}</p>
    </div>

    {% if tabNotice %}
        <div class="rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">{{ t(tabNotice, page_locale()) }}</div>
    {% endif %}
    {% if tabError %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">{{ t(tabError, page_locale()) }}</div>
    {% endif %}

    {% include 'customer/instances/_settings_form.html.twig' with { instance: instance, detailMode: true } %}
</div>
