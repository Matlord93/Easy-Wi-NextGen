<div class="space-y-6">
    <div>
        <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_instance_tab_reinstall', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('customer_instance_reinstall_intro', page_locale()) }}</p>
    </div>

    {% if tabNotice %}
        <div class="rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">{{ t(tabNotice, page_locale()) }}</div>
    {% endif %}
    {% if tabError %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">{{ t(tabError, page_locale()) }}</div>
    {% endif %}

    <div class="rounded-lg border border-rose-200 bg-rose-50 p-4 text-sm text-rose-700">
        {{ t('customer_instance_reinstall_warning', page_locale()) }}
    </div>

<form method="post" action="{{ path('customer_instance_reinstall', {id: instance.id}) }}" class="space-y-3">
        <label class="flex items-center gap-2 text-sm text-slate-700">
            <input type="checkbox" name="confirm" value="1" class="text-rose-600">
            {{ t('customer_instance_reinstall_confirm', page_locale()) }}
        </label>
        <div class="flex justify-end">
            <button type="submit" class="rounded-lg bg-rose-600 px-4 py-2 text-xs font-semibold text-white hover:bg-rose-700">
                {{ t('customer_instance_reinstall_action', page_locale()) }}
            </button>
        </div>
    </form>
</div>
