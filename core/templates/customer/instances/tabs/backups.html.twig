<div class="space-y-6">
    <div>
        <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_instance_tab_backups', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('customer_instance_backups_intro', page_locale()) }}</p>
    </div>

    <div class="space-y-4">
        {% for backup in backups %}
            <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
                <div class="flex flex-wrap items-center justify-between gap-3">
                    <div>
                        <p class="text-sm font-semibold text-slate-800">{{ backup.label ?: t('customer_instance_backups_default_label', page_locale()) }}</p>
                        <p class="text-xs text-slate-600">{{ t('customer_instance_backups_definition_id', page_locale()) }} {{ backup.id }}</p>
                    </div>
                    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                        {{ backup.schedule and backup.schedule.enabled ? t('customer_instance_backups_schedule_enabled', page_locale()) : t('customer_instance_backups_schedule_disabled', page_locale()) }}
                    </span>
                </div>
                {% if backup.schedule %}
                    <div class="mt-3 grid gap-3 text-xs text-slate-600 sm:grid-cols-3">
                        <div>
                            <p class="uppercase text-slate-500">{{ t('customer_instance_backups_cron', page_locale()) }}</p>
                            <p class="text-sm text-slate-700">{{ backup.schedule.cron_expression }}</p>
                        </div>
                        <div>
                            <p class="uppercase text-slate-500">{{ t('customer_instance_backups_retention_days', page_locale()) }}</p>
                            <p class="text-sm text-slate-700">{{ backup.schedule.retention_days }}</p>
                        </div>
                        <div>
                            <p class="uppercase text-slate-500">{{ t('customer_instance_backups_retention_count', page_locale()) }}</p>
                            <p class="text-sm text-slate-700">{{ backup.schedule.retention_count }}</p>
                        </div>
                    </div>
                {% else %}
                    <p class="mt-3 text-sm text-slate-600">{{ t('customer_instance_backups_no_schedule', page_locale()) }}</p>
                {% endif %}
            </div>
        {% else %}
            <div class="rounded-lg border border-dashed border-slate-200 bg-slate-50 p-6 text-sm text-slate-600">
                {{ t('customer_instance_backups_empty', page_locale()) }}
            </div>
        {% endfor %}
    </div>
</div>
