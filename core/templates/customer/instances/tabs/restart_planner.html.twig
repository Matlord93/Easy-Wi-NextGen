<div class="space-y-6">
    <div>
        <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_instance_tab_restart_planner', page_locale()) }}</h2>
        <p class="text-sm text-slate-700">{{ t('customer_instance_restart_planner_intro', page_locale()) }}</p>
    </div>

    {% if tabNotice %}
        <div class="rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">{{ t(tabNotice, page_locale()) }}</div>
    {% endif %}
    {% if tabError %}
        <div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">{{ t(tabError, page_locale()) }}</div>
    {% endif %}

<form method="post" action="{{ path('customer_instance_restart_planner', {id: instance.id}) }}" class="space-y-4">
        <div class="grid gap-4 lg:grid-cols-2">
            <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
                <label class="text-xs font-semibold uppercase text-slate-700">{{ t('customer_instance_restart_planner_cron', page_locale()) }}</label>
                <input type="text" name="cron_expression" value="{{ restartSchedule ? restartSchedule.cron_expression : '0 4 * * *' }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm">
                <p class="mt-2 text-xs text-slate-600">{{ t('customer_instance_restart_planner_cron_hint', page_locale()) }}</p>
            </div>
            <div class="rounded-lg border border-slate-200 bg-slate-50 p-4">
                <label class="text-xs font-semibold uppercase text-slate-700">{{ t('customer_instance_restart_planner_time_zone', page_locale()) }}</label>
                <input type="text" name="time_zone" value="{{ restartSchedule ? restartSchedule.time_zone : 'UTC' }}" class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm">
                <p class="mt-2 text-xs text-slate-600">{{ t('customer_instance_restart_planner_time_zone_hint', page_locale()) }}</p>
            </div>
        </div>

        <label class="flex items-center gap-2 text-sm text-slate-700">
            <input type="checkbox" name="enabled" value="1" class="text-indigo-600" {% if restartSchedule and restartSchedule.enabled %}checked{% endif %}>
            {{ t('customer_instance_restart_planner_enabled', page_locale()) }}
        </label>

        <div class="flex justify-end">
            <button type="submit" class="rounded-lg bg-slate-900 px-4 py-2 text-xs font-semibold text-white hover:bg-slate-800">
                {{ t('customer_instance_restart_planner_save', page_locale()) }}
            </button>
        </div>
    </form>
</div>
