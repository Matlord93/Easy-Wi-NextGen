<div class="space-y-6" id="config-schema-app" data-instance-id="{{ instance.id }}">
    <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_instance_tab_configs', page_locale()) }}</h2>
            <p class="text-sm text-slate-700">{{ t('customer_instance_configs_intro', page_locale()) }}</p>
        </div>
        <a href="/instances/{{ instance.id }}/files" class="rounded-lg border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-700 hover:border-indigo-200 hover:text-indigo-600">
            {{ t('customer_instance_configs_open_files', page_locale()) }}
        </a>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white p-6">
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h3 class="text-sm font-semibold text-slate-900">{{ t('customer_instance_configs_schema_title', page_locale()) }}</h3>
                <p class="text-xs text-slate-600">{{ t('customer_instance_configs_schema_intro', page_locale()) }}</p>
            </div>
            <div class="w-full sm:w-64">
                <label class="text-xs font-semibold text-slate-600" for="config-schema-select">{{ t('customer_instance_configs_schema_select_label', page_locale()) }}</label>
                <select id="config-schema-select" class="mt-2 w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-700">
                    <option value="">{{ t('customer_instance_configs_schema_select_placeholder', page_locale()) }}</option>
                </select>
            </div>
        </div>

        <div id="config-schema-status" class="mt-4 text-sm text-slate-500">{{ t('customer_instance_configs_schema_loading', page_locale()) }}</div>
        <div id="config-schema-error" class="mt-4 hidden rounded-lg border border-rose-200 bg-rose-50 p-3 text-sm text-rose-700"></div>
        <div id="config-schema-warnings" class="mt-4 hidden rounded-lg border border-amber-200 bg-amber-50 p-3 text-sm text-amber-800">
            <p class="font-semibold">{{ t('customer_instance_configs_schema_warnings_title', page_locale()) }}</p>
            <ul class="mt-2 list-disc pl-5"></ul>
        </div>

        <div id="config-schema-editor" class="mt-6 hidden">
            <div class="grid gap-6 lg:grid-cols-2">
                <div>
                    <h4 class="text-sm font-semibold text-slate-900">{{ t('customer_instance_configs_schema_fields_title', page_locale()) }}</h4>
                    <div id="config-schema-fields" class="mt-4 space-y-4"></div>
                </div>
                <div>
                    <div class="flex items-center justify-between">
                        <h4 class="text-sm font-semibold text-slate-900">{{ t('customer_instance_configs_schema_raw_title', page_locale()) }}</h4>
                        <span id="config-schema-format" class="text-xs uppercase tracking-wide text-slate-400"></span>
                    </div>
                    <textarea id="config-schema-raw" rows="16" class="mt-4 w-full rounded-lg border border-slate-200 px-3 py-2 text-xs font-mono text-slate-700"></textarea>
                </div>
            </div>

            <div class="mt-6 flex flex-wrap gap-3">
                <button id="config-schema-generate" class="rounded-lg bg-indigo-600 px-4 py-2 text-xs font-semibold text-white hover:bg-indigo-500">
                    {{ t('customer_instance_configs_schema_generate_save', page_locale()) }}
                </button>
                <button id="config-schema-save-raw" class="rounded-lg border border-slate-200 px-4 py-2 text-xs font-semibold text-slate-700 hover:border-indigo-200 hover:text-indigo-600">
                    {{ t('customer_instance_configs_schema_save_raw', page_locale()) }}
                </button>
                <span id="config-schema-feedback" class="text-xs text-slate-500"></span>
            </div>
        </div>

        <div id="config-schema-empty" class="mt-6 hidden rounded-lg border border-dashed border-slate-200 bg-slate-50 p-6 text-sm text-slate-600">
            {{ t('customer_instance_configs_schema_empty', page_locale()) }}
        </div>
    </div>
</div>

<script>
    (() => {
        const app = document.getElementById('config-schema-app');
        if (!app) {
            return;
        }
        const instanceId = app.dataset.instanceId;
        const select = document.getElementById('config-schema-select');
        const status = document.getElementById('config-schema-status');
        const error = document.getElementById('config-schema-error');
        const warnings = document.getElementById('config-schema-warnings');
        const warningsList = warnings.querySelector('ul');
        const editor = document.getElementById('config-schema-editor');
        const fieldsContainer = document.getElementById('config-schema-fields');
        const rawEditor = document.getElementById('config-schema-raw');
        const formatBadge = document.getElementById('config-schema-format');
        const emptyState = document.getElementById('config-schema-empty');
        const generateButton = document.getElementById('config-schema-generate');
        const saveRawButton = document.getElementById('config-schema-save-raw');
        const feedback = document.getElementById('config-schema-feedback');

        let configs = [];
        let currentConfig = null;
        let currentSchema = null;

        const setStatus = (message, isError = false) => {
            status.textContent = message || '';
            status.classList.toggle('hidden', !message);
            error.classList.toggle('hidden', !isError);
            if (isError) {
                error.textContent = message;
                status.classList.add('hidden');
            }
        };

        const renderWarnings = (items) => {
            warningsList.innerHTML = '';
            if (!items || items.length === 0) {
                warnings.classList.add('hidden');
                return;
            }
            items.forEach((warning) => {
                const li = document.createElement('li');
                li.textContent = warning;
                warningsList.appendChild(li);
            });
            warnings.classList.remove('hidden');
        };

        const renderFields = (schema, values) => {
            fieldsContainer.innerHTML = '';
            if (!schema || !schema.fields) {
                return;
            }
            schema.fields.forEach((field) => {
                const wrapper = document.createElement('div');
                wrapper.className = 'space-y-1';

                const label = document.createElement('label');
                label.className = 'text-xs font-semibold text-slate-600';
                label.textContent = field.label || field.key || field.id;
                label.setAttribute('for', `config-field-${field.id}`);
                wrapper.appendChild(label);

                let input;
                if (field.type === 'bool' || field.type === 'boolean') {
                    input = document.createElement('input');
                    input.type = 'checkbox';
                    input.className = 'h-4 w-4 rounded border-slate-300 text-indigo-600';
                    input.checked = Boolean(values[field.id]);
                } else if (field.type === 'select' && field.options) {
                    input = document.createElement('select');
                    input.className = 'w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-700';
                    Object.entries(field.options).forEach(([value, label]) => {
                        const option = document.createElement('option');
                        option.value = value;
                        option.textContent = label;
                        if (String(values[field.id]) === String(value)) {
                            option.selected = true;
                        }
                        input.appendChild(option);
                    });
                } else {
                    input = document.createElement('input');
                    input.type = field.type === 'int' || field.type === 'integer' || field.type === 'float' || field.type === 'number' ? 'number' : 'text';
                    if (input.type === 'number' && (field.type === 'float' || field.type === 'number')) {
                        input.step = 'any';
                    }
                    input.className = 'w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-700';
                    input.value = values[field.id] ?? '';
                }
                input.id = `config-field-${field.id}`;
                input.dataset.fieldId = field.id;
                wrapper.appendChild(input);

                if (field.description) {
                    const desc = document.createElement('p');
                    desc.className = 'text-xs text-slate-500';
                    desc.textContent = field.description;
                    wrapper.appendChild(desc);
                }

                fieldsContainer.appendChild(wrapper);
            });
        };

        const collectValues = () => {
            const values = {};
            fieldsContainer.querySelectorAll('[data-field-id]').forEach((input) => {
                const key = input.dataset.fieldId;
                if (input.type === 'checkbox') {
                    values[key] = input.checked;
                } else {
                    values[key] = input.value;
                }
            });
            return values;
        };

        const updateEditor = (payload) => {
            currentConfig = payload.config;
            currentSchema = payload.schema;
            renderFields(payload.schema, payload.values || {});
            rawEditor.value = payload.raw || '';
            formatBadge.textContent = payload.config.format || '';
            renderWarnings(payload.warnings || []);
            editor.classList.remove('hidden');
            emptyState.classList.add('hidden');
            setStatus('');
        };

        const request = async (url, options = {}) => {
            const response = await fetch(url, options);
            if (!response.ok) {
                const payload = await response.json().catch(() => ({}));
                const message = payload.error || payload.message || 'Request failed.';
                throw new Error(message);
            }
            return response.json();
        };

        const loadConfigs = async () => {
            try {
                setStatus(status.textContent);
                const payload = await request(`/api/customer/instances/${instanceId}/configs`);
                configs = payload.configs || [];
                select.innerHTML = `<option value="">${select.options[0].textContent}</option>`;
                configs.forEach((config) => {
                    const option = document.createElement('option');
                    option.value = config.key || config.id;
                    option.textContent = config.name || config.key;
                    select.appendChild(option);
                });
                if (configs.length === 0) {
                    emptyState.classList.remove('hidden');
                    editor.classList.add('hidden');
                    setStatus('');
                    return;
                }
                const firstConfig = configs[0];
                select.value = firstConfig.key || firstConfig.id;
                await loadConfig(select.value);
            } catch (err) {
                setStatus(err.message, true);
            }
        };

        const loadConfig = async (configId) => {
            if (!configId) {
                editor.classList.add('hidden');
                emptyState.classList.remove('hidden');
                return;
            }
            try {
                feedback.textContent = '';
                const payload = await request(`/api/customer/instances/${instanceId}/configs/${configId}`);
                updateEditor(payload);
            } catch (err) {
                setStatus(err.message, true);
            }
        };

        select.addEventListener('change', () => loadConfig(select.value));

        generateButton.addEventListener('click', async () => {
            if (!currentConfig) {
                return;
            }
            feedback.textContent = '';
            try {
                const payload = await request(`/api/customer/instances/${instanceId}/configs/${currentConfig.key || currentConfig.id}/generate-save`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ values: collectValues() }),
                });
                updateEditor(payload);
                feedback.textContent = '{{ t('customer_instance_configs_schema_status_saved', page_locale()) }}';
            } catch (err) {
                setStatus(err.message, true);
            }
        });

        saveRawButton.addEventListener('click', async () => {
            if (!currentConfig) {
                return;
            }
            feedback.textContent = '';
            try {
                const payload = await request(`/api/customer/instances/${instanceId}/configs/${currentConfig.key || currentConfig.id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ content: rawEditor.value }),
                });
                updateEditor(payload);
                feedback.textContent = '{{ t('customer_instance_configs_schema_status_saved', page_locale()) }}';
            } catch (err) {
                setStatus(err.message, true);
            }
        });

        loadConfigs();
    })();
</script>
