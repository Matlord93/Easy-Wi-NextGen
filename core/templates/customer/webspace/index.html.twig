{% extends 'customer/base.html.twig' %}

{% block title %}{{ t('customer_webspace_title', page_locale()) }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div>
        <p class="text-xs uppercase tracking-wide text-slate-600">{{ t('customer_webspace_kicker', page_locale()) }}</p>
        <h1 class="text-2xl font-semibold text-slate-900">{{ t('customer_webspace_title', page_locale()) }}</h1>
        <p class="text-sm text-slate-700">{{ t('customer_webspace_description', page_locale()) }}</p>
    </div>

    <div class="grid gap-4 lg:grid-cols-4">
        <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <p class="text-xs uppercase text-slate-500">{{ t('customer_webspace_summary_webspaces', page_locale()) }}</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">{{ summary.webspaces }}</p>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <p class="text-xs uppercase text-slate-500">{{ t('customer_webspace_summary_domains', page_locale()) }}</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">{{ summary.domains }}</p>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <p class="text-xs uppercase text-slate-500">{{ t('customer_webspace_summary_mailboxes', page_locale()) }}</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">{{ summary.mailboxes }}</p>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
            <p class="text-xs uppercase text-slate-500">{{ t('customer_webspace_summary_ssl_expiring', page_locale()) }}</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">{{ summary.ssl_expiring }}</p>
            <p class="text-xs text-slate-500">{{ t('customer_webspace_summary_ssl_missing', page_locale()) }}: {{ summary.ssl_missing }}</p>
        </div>
    </div>

    <div class="grid gap-4 lg:grid-cols-3">
        <a href="{{ path('customer_files') }}" class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm transition hover:border-indigo-200 hover:bg-indigo-50">
            <p class="text-xs uppercase text-slate-500">{{ t('customer_webspace_action_files_kicker', page_locale()) }}</p>
            <p class="mt-2 text-lg font-semibold text-slate-900">{{ t('customer_webspace_action_files', page_locale()) }}</p>
            <p class="mt-1 text-sm text-slate-600">{{ t('customer_webspace_action_files_description', page_locale()) }}</p>
        </a>
        <a href="{{ path('customer_domains') }}" class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm transition hover:border-indigo-200 hover:bg-indigo-50">
            <p class="text-xs uppercase text-slate-500">{{ t('customer_webspace_action_domains_kicker', page_locale()) }}</p>
            <p class="mt-2 text-lg font-semibold text-slate-900">{{ t('customer_webspace_action_domains', page_locale()) }}</p>
            <p class="mt-1 text-sm text-slate-600">{{ t('customer_webspace_action_domains_description', page_locale()) }}</p>
        </a>
        <a href="{{ path('customer_mail') }}" class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm transition hover:border-indigo-200 hover:bg-indigo-50">
            <p class="text-xs uppercase text-slate-500">{{ t('customer_webspace_action_mail_kicker', page_locale()) }}</p>
            <p class="mt-2 text-lg font-semibold text-slate-900">{{ t('customer_webspace_action_mail', page_locale()) }}</p>
            <p class="mt-1 text-sm text-slate-600">{{ t('customer_webspace_action_mail_description', page_locale()) }}</p>
        </a>
    </div>

    <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
        <div class="flex items-start justify-between border-b border-slate-200 px-5 py-4">
            <div>
                <h2 class="text-lg font-semibold text-slate-900">{{ t('customer_webspace_table_title', page_locale()) }}</h2>
                <p class="text-sm text-slate-700">{{ t('customer_webspace_table_description', page_locale()) }}</p>
            </div>
        </div>
        {% if webspaces is empty %}
            <div class="px-5 py-6 text-sm text-slate-700">{{ t('customer_webspace_empty', page_locale()) }}</div>
        {% else %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200 text-sm">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_webspace_table_webspace', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_webspace_table_node', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_webspace_table_domain', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_webspace_table_php', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_webspace_table_quota', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_webspace_table_status', page_locale()) }}</th>
                            <th class="px-5 py-3 text-left text-xs font-semibold uppercase text-slate-700">{{ t('customer_webspace_table_updated', page_locale()) }}</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200">
                        {% for webspace in webspaces %}
                            <tr>
                                <td class="px-5 py-4">
                                    <div class="font-semibold text-slate-900">#{{ webspace.id }}</div>
                                    <div class="text-xs text-slate-700">{{ webspace.disk_limit_bytes }} B {{ webspace.ftp_enabled ? '· FTP' : '' }} {{ webspace.sftp_enabled ? '· SFTP' : '' }}</div>
                                </td>
                                <td class="px-5 py-4 text-slate-600">{{ webspace.node.name }}</td>
                                <td class="px-5 py-4 text-slate-600">{{ webspace.domain }}</td>
                                <td class="px-5 py-4 text-slate-600">{{ webspace.php_version }}</td>
                                <td class="px-5 py-4 text-slate-600">{{ webspace.quota }} MB</td>
                                <td class="px-5 py-4 text-slate-600">{{ webspace.status|replace({'_': ' '})|title }}</td>
                                <td class="px-5 py-4 text-slate-600">{{ webspace.updated_at|date('Y-m-d H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
