<div class="border-b border-slate-200 px-6 py-4">
    <h3 class="text-lg font-semibold">{{ t('customer_ticket_reply_title', page_locale()) }}</h3>
    <p class="text-sm text-slate-500">{{ t('customer_ticket_reply_intro', page_locale()) }}</p>
</div>
<form class="p-6 space-y-4" method="post" action="/tickets/{{ ticket.id }}/messages" hx-post="/tickets/{{ ticket.id }}/messages" hx-target="#ticket-messages" hx-swap="outerHTML">
    <div>
        <label class="text-xs font-semibold uppercase text-slate-500">{{ t('customer_ticket_message', page_locale()) }}</label>
        <textarea name="message" rows="6" class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm" placeholder="{{ t('customer_ticket_message_placeholder', page_locale()) }}"></textarea>
    </div>
    <button type="submit" class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white">{{ t('customer_ticket_reply_submit', page_locale()) }}</button>
</form>
