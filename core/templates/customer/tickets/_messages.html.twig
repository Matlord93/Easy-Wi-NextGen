<div class="divide-y divide-slate-100">
    {% for message in messages %}
        <div class="px-6 py-5">
            <div class="flex items-start justify-between">
                <div>
                    <p class="text-sm font-semibold text-slate-900">{{ message.author.email }}</p>
                    <p class="text-xs text-slate-500">{{ message.author.type|title }} Â· {{ message.created_at|date('d.m.Y H:i') }}</p>
                </div>
            </div>
            <p class="mt-3 text-sm text-slate-700 whitespace-pre-line">{{ message.body }}</p>
        </div>
    {% else %}
        <div class="px-6 py-6 text-sm text-slate-500">No messages yet.</div>
    {% endfor %}
</div>
