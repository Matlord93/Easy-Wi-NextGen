{% extends 'customer/base.html.twig' %}

{% block title %}Ticket #{{ ticket.id }} · Easy-Wi NextGen{% endblock %}

{% block content %}
<div class="flex flex-col gap-6">
    <div class="rounded-xl border border-slate-200 bg-white p-6">
        <div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
            <div>
                <p class="text-xs uppercase text-slate-500">Ticket #{{ ticket.id }}</p>
                <h1 class="text-2xl font-semibold text-slate-900">{{ ticket.subject }}</h1>
                <p class="mt-2 text-sm text-slate-500">Category {{ ticket.category|title }}</p>
            </div>
            <div class="flex flex-wrap items-center gap-3">
                <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ statusStyles[ticket.status] ?? 'border-slate-200 bg-slate-50 text-slate-600' }}">
                    {{ ticket.status|title }}
                </span>
                <span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-semibold {{ priorityStyles[ticket.priority] ?? 'border-slate-200 bg-slate-50 text-slate-600' }}">
                    {{ ticket.priority|title }} Priority
                </span>
            </div>
        </div>
        <div class="mt-6 text-sm text-slate-500">
            Created {{ ticket.created_at|date('d.m.Y H:i') }} · Last update {{ ticket.last_message_at|date('d.m.Y H:i') }}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-[1.2fr_0.8fr] gap-6">
        <div class="rounded-xl border border-slate-200 bg-white">
            <div class="border-b border-slate-200 px-6 py-4">
                <h2 class="text-lg font-semibold">Conversation</h2>
                <p class="text-sm text-slate-500">Support responses and your replies.</p>
            </div>
            <div id="ticket-messages">
                {% include 'customer/tickets/_messages.html.twig' with { ticket: ticket, messages: messages } %}
            </div>
        </div>
        <div class="rounded-xl border border-slate-200 bg-white">
            {% include 'customer/tickets/_message_form.html.twig' with { ticket: ticket } %}
        </div>
    </div>
</div>
{% endblock %}
