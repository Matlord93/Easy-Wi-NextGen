{% extends 'reseller/base.html.twig' %}

{% block title %}Reseller Customers Â· Easy-Wi NextGen{% endblock %}

{% block content %}
    <div class="space-y-6">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h1 class="text-2xl font-semibold text-slate-900">Customers</h1>
                <p class="text-sm text-slate-500">Manage reseller-owned customers and onboarding access.</p>
            </div>
            <div class="flex items-center gap-2">
                <span class="rounded-full bg-indigo-100 px-3 py-1 text-xs font-semibold text-indigo-700">{{ customers|length }} active</span>
                <button class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white">New customer</button>
            </div>
        </div>

        <div class="grid gap-4 sm:grid-cols-3">
            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <p class="text-xs uppercase tracking-wide text-slate-400">Total customers</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">{{ customers|length }}</p>
                <p class="mt-1 text-xs text-slate-500">Reseller-managed accounts</p>
            </div>
            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <p class="text-xs uppercase tracking-wide text-slate-400">Active logins</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">{{ customers|length }}</p>
                <p class="mt-1 text-xs text-slate-500">All customers enabled</p>
            </div>
            <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
                <p class="text-xs uppercase tracking-wide text-slate-400">Support status</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">Healthy</p>
                <p class="mt-1 text-xs text-slate-500">No critical issues</p>
            </div>
        </div>

        <div class="grid gap-6 lg:grid-cols-[2fr,1fr]">
            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
                <div class="flex items-center justify-between border-b border-slate-100 px-6 py-4">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">Customer list</h2>
                        <p class="text-xs text-slate-500">Only customers linked to your reseller account.</p>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-slate-100 text-sm">
                        <thead class="bg-slate-50 text-xs uppercase text-slate-400">
                            <tr>
                                <th class="px-6 py-3 text-left font-semibold">Customer</th>
                                <th class="px-6 py-3 text-left font-semibold">Created</th>
                                <th class="px-6 py-3 text-left font-semibold">Status</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            {% for customer in customers %}
                                <tr>
                                    <td class="px-6 py-4">
                                        <p class="font-semibold text-slate-900">{{ customer.email }}</p>
                                        <p class="text-xs text-slate-500">ID {{ customer.id }}</p>
                                    </td>
                                    <td class="px-6 py-4 text-slate-600">
                                        {{ customer.createdAt|date('Y-m-d H:i') }}
                                    </td>
                                    <td class="px-6 py-4">
                                        <span class="rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">Active</span>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="px-6 py-6 text-center text-sm text-slate-500" colspan="3">
                                        No customers yet. Create your first reseller customer on the right.
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="space-y-4">
                <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                    <h2 class="text-lg font-semibold text-slate-900">Create customer</h2>
                    <p class="mt-1 text-xs text-slate-500">Provision a new customer linked to your reseller account.</p>

                    {% if errors is not empty %}
                        <div class="mt-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">
                            <ul class="list-disc space-y-1 pl-5">
                                {% for error in errors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <form method="post" action="/reseller/customers" class="mt-4 space-y-4">
                        <div>
                            <label class="text-xs font-semibold uppercase text-slate-500">Customer email</label>
                            <input type="email" name="email" value="{{ form.email }}" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                        </div>
                        <div>
                            <label class="text-xs font-semibold uppercase text-slate-500">Temporary password</label>
                            <input type="password" name="password" required class="mt-2 w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                        </div>
                        <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white">Create customer</button>
                    </form>
                </div>

                <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                    <h3 class="text-sm font-semibold text-slate-900">Permissions overview</h3>
                    <ul class="mt-3 space-y-2 text-xs text-slate-500">
                        <li class="flex items-center gap-2">
                            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                            Reseller can manage only reseller-owned customers.
                        </li>
                        <li class="flex items-center gap-2">
                            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                            Admin access stays restricted to platform operators.
                        </li>
                        <li class="flex items-center gap-2">
                            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                            All changes write audit log entries.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
